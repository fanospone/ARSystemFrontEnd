@using ARSystemFrontEnd.Helper;
@{
    ViewBag.Title = "Upload Corrective Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    td {
        font-size: 7px;
    }
    
    .panelSearchResult .table-scrollable {
        border: none !important;
    }
</style>

@*<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-6 col-xs-6">*@
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption font-white">
            <i class="fa fa-database"></i>
            <span class="caption-subject">Upload Corrective Data</span>
        </div>
        <div class="tools">
            <a href="" class="collapse"> </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <form id="formSearch" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="col-lg-4 col-md-4 col-sm-6 col-xs-6 control-label">Period</label>
                                    <div class="col-lg-4 col-md-4 col-sm-3 col-xs-3">
                                        <select id="Month" class="form-control" disabled></select>

                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-3 col-xs-3">
                                        <select id="Year" class="form-control" disabled></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-4 col-md-4 col-sm-4 col-xs-4 control-label">File</label>
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                        <input type="file" data-parsley-filemaxmegabytes="1" id="FileUpload" data-parsley-trigger="change" data-parsley-filemimetypes="xls/xlsx" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-4 col-md-4 col-sm-4 col-xs-4 control-label"></label>
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                        <button type="button" id="btnGenerateData" class="btn green mt-ladda-btn ladda-button NeedRounding" data-style="zoom-in">
                                            <i class="fa fa-code"></i> Generate
                                        </button>&nbsp;
                                        <button type="button" id="btnDownloadTemplate" class="btn yellow mt-ladda-btn ladda-button NeedRounding" data-style="zoom-in">
                                            <i class="fa fa-file-excel-o"></i> Download Template
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row panelSearchResult">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-blue-steel">
                            <i class="fa fa-table"></i>
                            <span class="caption-subject ">Generated Data</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-pane active">
                            <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblGenerateData">
                                <thead>
                                    <tr>
                                        <th class="datatable-col-25 select-all-raw"><label id="cbALLData" class='mt-checkbox mt-checkbox-single mt-checkbox-outline'><input id='cbAll' type='checkbox' disable /><span></span></label></th>
                                        <th class="datatable-col-25">#No</th>
                                        <th class="datatable-col-100">Sonumb</th>
                                        <th class="datatable-col-100">Site</th>
                                        <th class="datatable-col-250">Site Name</th>
                                        <th class="datatable-col-150">Total Adjusment</th>
                                        <th class="datatable-col-250">Remarks Adjusment</th>
                                        <th class="datatable-col-250">Adjusment PPS Normal Revenue</th>
                                        <th class="datatable-col-250">Adjusment PPS Net Revenue</th>
                                        <th class="datatable-col-150">Normal Revenue</th>
                                        <th class="datatable-col-150">Net Revenue</th>
                                        <th class="datatable-col-150">Balance Amount</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-6">
                <div class="form-actions text-center">
                    <button type="button" id="btnSaveData" class="btn blue mt-ladda-btn ladda-button NeedRounding" data-style="zoom-in">
                        <i class="fa fa-save"></i> Submit
                    </button> &nbsp;&nbsp;
                    <button type="button" id="btnDeleteData" class="btn red mt-ladda-btn ladda-button NeedRounding" data-style="zoom-in">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
        <div class="row pnlErrorLog" style="visibility:hidden">
            <br />
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-blue-steel">
                            <i class="fa fa-table"></i>
                            <span class="caption-subject ">Error Logs</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-pane active">
                            <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblErrorLogs">
                                <thead>
                                    <tr>
                                        <th class="datatable-col-400">Error Message</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.ContentVersion("~/scripts/CorrectiveRevenue/Index.js")" type="text/javascript"></script>

