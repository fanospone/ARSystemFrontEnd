    <div class="modal fade" id="MdAddRemark" style="padding-top:5%;" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Remark</h4>
                </div>
                <div class="modal-body">
                    <form id="Fm" style="padding:5px" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-11">
                                    <div class="form-group">
                                        <label class="control-label">Customer</label>
                                        <label class="form-control" id="MdLblCustomer"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Forecast</label>
                                        <label class="form-control" id="MdLblForecast"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Actual</label>
                                        <label class="form-control" id="MdLblActual"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Variance Total</label>
                                        <label class="form-control" id="MdLblVarianceTotal"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Variance Percentage</label>
                                        <label class="form-control" id="MdLblVariancePercentage"></label>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Remarks</label>
                                        <textarea class="form-control" rows="3" id="MdTxtRemark" placeholder="Remarks" readonly></textarea>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer" style="text-align:center">
                    <button type="button" class="btn btn-secondary" id="btCloseUpload" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="MdApproval" style="padding-top:5%;" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Approval</h4>
                </div>
                <div class="modal-body">
                    <form id="FmApproval" style="padding:5px" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-11">
                                    <div class="form-group">
                                        <label class="control-label">Action<i class="font-red">*</i></label>
                                        <select id="slApproval" class="form-control select2" required></select>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Remarks<i class="font-red">*</i></label>
                                        <textarea class="form-control" rows="3" id="tbRemarkApproval" placeholder="Remarks" required></textarea>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer" style="text-align:center">
                    <button type="submit" id="btSaveApproval" class="btn blue ladda-button" data-style="zoom-in" onclick="Approval.Submit();">
                        <i class="fa fa-save"></i> Submit
                    </button>
                    <button type="button" class="btn btn-secondary" id="btCloseUpload" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
