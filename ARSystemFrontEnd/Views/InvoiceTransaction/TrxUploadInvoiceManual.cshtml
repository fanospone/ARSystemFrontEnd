@using ARSystemFrontEnd.Helper;
@{
    ViewBag.Title = "Upload Invoice Manual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css")" rel="stylesheet" type="text/css" />
<style type="text/css">
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
    table tbody tr td {
        font-size: 12px !important;
    }

    th {
        font-size: 12px !important;
        text-align: center;
    }
</style>
<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">SO Number</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchSONumber" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Period Upload</label>
                                        <div class="col-md-9">
                                            <div class="col-md-5">
                                                <input type="text" id="tbStartPeriod" size="16" class="form-control date-picker">
                                            </div>
                                            <div class="col-md-1">
                                                To
                                            </div>
                                            <div class="col-md-5">
                                                <input type="text" id="tbEndPeriod" size="16" class="form-control date-picker">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>

                <div class="portlet-body">

                    <div class="tabbable tabbable-tabdrop" id="tabBAPS">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tabUpload" data-toggle="tab">List Upload Invoice</a>
                            </li>

                            <li>
                                <a href="#tabBAPSReject" data-toggle="tab">BAPS Reject</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabUpload">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group">
                                            <button type="button" id="btCreate" class="btn blue">
                                                <i class="fa fa-plus-circle"></i> Upload New Invoice Manual
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-10 select-all">

                                            </th>
                                            <th class="datatable-col-70">SO Number</th>
                                            <th class="datatable-col-70">Site ID Opr</th>
                                            <th class="datatable-col-200">Site Name</th>
                                            <th class="datatable-col-100">Initial PO Number</th>
                                            <th class="datatable-col-75">Invoice Start Date</th>
                                            <th class="datatable-col-75">Invoice End Date</th>
                                            <th class="datatable-col-75">Base Lease Price</th>
                                            <th class="datatable-col-75">OM Price</th>
                                            <th class="datatable-col-75">Invoice Amount</th>
                                            <th class="datatable-col-75">Stip Siro</th>
                                            <th class="datatable-col-70">Company ID</th>
                                            <th class="datatable-col-50">Currency</th>
                                            <th class="datatable-col-50">Is Loss PPN</th>
                                            <th class="datatable-col-50">Amount PPN</th>
                                            <th class="datatable-col-50">Amount Loss PPN</th>
                                            <th class="datatable-col-75">Baps No</th>
                                            <th class="datatable-col-75">Baps Type</th>
                                            <th class="datatable-col-75">Baps Period</th>
                                            <th class="datatable-col-70">Operator</th>
                                            <th class="datatable-col-75">Start Lease Date</th>
                                            <th class="datatable-col-75">End Lease Date</th>
                                            <th class="datatable-col-70">Invoice Term</th>
                                            <th class="datatable-col-75">MLA Number</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>

                            <div class="tab-pane" id="tabBAPSReject">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryDataReject">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-70">SO Number</th>
                                            <th class="datatable-col-100">Pica</th>
                                            <th class="datatable-col-200">Reject Remark</th>
                                            <th class="datatable-col-70">Site ID Opr</th>
                                            <th class="datatable-col-75">Site ID</th>
                                            <th class="datatable-col-200">Site Name</th>
                                            <th class="datatable-col-70">Company Invoice</th>
                                            <th class="datatable-col-70">Operator Invoice</th>
                                            <th class="datatable-col-100">PO Number</th>
                                            <th class="datatable-col-75">Start Date Receivable</th>
                                            <th class="datatable-col-75">End Date Receivable</th>
                                            <th class="datatable-col-200">Baps No</th>
                                            <th class="datatable-col-75">Basic</th>
                                            <th class="datatable-col-75">Maintenance</th>
                                            <th class="datatable-col-75">Amount Invoice</th>
                                            <th class="datatable-col-75">Start Date</th>
                                            <th class="datatable-col-75">End Date</th>

                                            <th class="datatable-col-75">Amount PPN</th>
                                            <th class="datatable-col-75">Amount Loss PPN</th>
                                            <th class="datatable-col-70">Company ID</th>
                                            <th class="datatable-col-70">Operator</th>
                                            <th class="datatable-col-70">Invoice Type</th>

                                            <th class="datatable-col-70">Invoice Term</th>
                                            <th class="datatable-col-75">Baps Type</th>
                                            <th class="datatable-col-75">Power Type</th>
                                            <th class="datatable-col-50">Currency</th>
                                            <th class="datatable-col-75">PPH Type</th>
                                            <th class="datatable-col-50">Is Loss PPN</th>

                                            @*<th class="datatable-col-75">Stip Siro</th>
                                                <th class="datatable-col-75">Baps Period</th>
                                                <th class="datatable-col-200">MLA Number</th>
                                                <th class="datatable-col-75">Site Name</th>*@

                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <div class="row">

                            <button type="button" id="btClearData" class="btn red">
                                <i class="fa fa-times"></i> Clear Data
                            </button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>

<section id="pnlFormMaster">
    @*Panel Header Transaction*@
    <div class="row panelFormMaster">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject" id="panelFormMasterTitle"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formMaster" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-12">

                                    @* Upload Field *@

                                    <div class="form-group" id="divUploadField">
                                        <label class="col-md-3 control-label">Import from Excel</label>
                                        <div class="col-md-4">
                                            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                                <div class="form-control uneditable-input input-fixed input-medium" data-trigger="fileinput">
                                                    <i class="fa fa-file fileinput-exists"></i>&nbsp;
                                                    <span class="fileinput-filename"> </span>
                                                </div>
                                                <span class="input-group-addon btn default btn-file">
                                                    <span class="fileinput-new"> Select file </span>
                                                    <span class="fileinput-exists"> Change </span>
                                                    <input type="file" id="fuInvoiceManual" name="...">
                                                </span>
                                                <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                            </div>
                                            <span style="color:red;font:bolder;" id="fileErrorMessage"></span>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divUploadButtons">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-9">
                                            <button type="button" class="btn blue-oleo btCancel">
                                                <i class="fa fa-chevron-left"></i> Cancel
                                            </button>
                                            <button type="button" id="btUpload" class="btn blue">
                                                <i class="fa fa-upload"></i> Upload
                                            </button>
                                            <button type="button" id="btDownload" class="btn blue">
                                                <i class="fa fa-download"></i> Download Template
                                            </button>
                                        </div>
                                    </div>

                                    @* End of Upload Field *@

                                    <div class="form-group" id="divInvoiceNumber">
                                        <label class="col-md-3 control-label">Invoice Number<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbInvoiceNumber" class="form-control" required>
                                        </div>
                                        <div class="col-md-5"></div>
                                    </div>

                                    <div class="form-group" id="divTaxInvoiceNumber">
                                        <label class="col-md-3 control-label">Tax Invoice Number<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbTaxInvoiceNumber" class="form-control" required>
                                        </div>
                                        <div class="col-md-5"></div>
                                    </div>

                                    @*<div class="form-group" id="divTaxInvoiceDate">
                                            <label class="col-md-3 control-label">Tax Invoice Date<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbTaxInvoiceDate" class="form-control" required>
                                            </div>
                                            <div class="col-md-5"></div>
                                        </div>*@

                                    <div class="form-group" id="divFormButtons">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-4">
                                            <button type="button" class="btn blue-oleo btCancel">
                                                <i class="fa fa-chevron-left"></i> Cancel
                                            </button>
                                            <button type="submit" id="btSubmit" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                                <i class="fa fa-save"></i> Save
                                            </button>
                                        </div>
                                        <div class="col-md-5"></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="mdlUploadTaxInvoice">
    <div class="modal fade bs-modal-lg" id="mdlUploadedTaxInvoice" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Uploaded Tax Invoice</h4>
                </div>
                <div class="modal-body" id="divUploadedTaxInvoice">
                    <form id="formUploadedTaxInvoice" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="col-md-6">Invoice Date<i class="font-red">*</i></label>
                                        <div class="col-md-6">
                                            <input type="text" id="tbTaxInvoiceDate" size="16" class="form-control date-picker" required>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <table class="table table-striped table-bordered table-hover" id="tblUploadedTaxInvoice">
                                        <thead>
                                            <tr>
                                                <th>Invoice Number</th>
                                                <th>Tax Invoice Number</th>
                                                @*<th>Tax Invoice Date</th>*@
                                                <th>Has Error</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <ul id="ulErrors" style="color: #f00;"></ul>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btSubmitTaxInvoices" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                        <i class="fa fa-save"></i> Save
                    </button>
                    <button type="button" class="btn blue-oleo" data-dismiss="modal">
                        <i class="fa fa-chevron-left"></i> Exit
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="mdlConfirm" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width: 40%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Confirmation</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-md-12 control-label text-center">Are You Sure Want to Delete?</label>
                        </div>
                    </div>
                    <div class="col-md-6 col-md-offset-4">
                        <button type="button" id="btYes" class="btn green">
                            <i class="fa fa-check"></i> Yes
                        </button>

                        <button type="button" data-dismiss="modal" id="btNo" class="btn red">
                            <i class="fa fa-times"></i> No
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hdAllowAdd" value="@ViewBag.AllowAdd" />
<input type="hidden" id="hdAllowDelete" value="@ViewBag.AllowDelete" />

<script src="@Url.Content("~/Content/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js")" type="text/javascript"></script>
