
@{
    ViewBag.Title = "Non Building Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company Name</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchCompanyName" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Term Period</label>
                                        <div class="col-md-9">
                                            <select id="slSearchTerm" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice No</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbInvNo" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button type="button" id="btCreate" class="btn blue">
                                        <i class="fa fa-plus-circle"></i> Add New Building Invoice
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th class="datatable-col-150">Invoice Temp</th>
                                <th class="datatable-col-250">Company Name</th>
                                <th class="datatable-col-100">Category Building</th>
                                <th class="datatable-col-100">Start Date</th>
                                <th class="datatable-col-100">End Date</th>
                                <th class="datatable-col-50">Term</th>
                                <th class="datatable-col-100">Total Amount</th>
                                <th class="datatable-col-100">Discount</th>
                                <th class="datatable-col-100">PPN</th>
                                <th class="datatable-col-100">PPH</th>
                                <th class="datatable-col-100">Penalty</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlTransaction">
    @*Panel Role Transaction*@
    <div class="row panelTransaction ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject" id="panelTransactionTitle"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formTransaction" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Category Building<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <select id="slCategoryBuildingID" required class="form-control select2"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Customer Type<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <label class="mt-radio">
                                        <input type="radio" id="rbCustomerPer" checked name="rdCustomerType" value="1"> Personal
                                        <span></span>
                                    </label>
                                    &nbsp;
                                    &nbsp;
                                    <label class="mt-radio">
                                        <input type="radio" id="rbCustomerCor" name="rdCustomerType" value="2"> Corporate
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Company Name<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <select id="slCompanyInformationID" required class="form-control select2"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Term<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <select id="slTerm" required class="form-control select2"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Start Period<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <input type="text" id="tbStartPeriod" required class="form-control datepicker" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">End Period<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <input type="text" id="tbEndPeriod" data-parsley-period="" required class="form-control datepicker" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Price<i class="font-red">*</i></label>
                                <div class="col-md-1">
                                    <input type="text" readonly id="tbTotalPriceCurrency" value="IDR" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <input type="text" id="tbTotalPrice" required class="form-control" readonly>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" id="btnEditTrx" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-edit"></i> Edit
                                    </button>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Discount</label>
                                <div class="col-md-1">
                                    <input type="text" readonly id="tbDiscountCurrency" value="IDR" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <input type="text" id="tbDiscount" class="form-control" value="0.00">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">DPP<i class="font-red">*</i></label>
                                <div class="col-md-1">
                                    <input type="text" readonly id="tbTotalAmountCurrency" class="form-control" value="IDR" />
                                </div>
                                <div class="col-md-3">
                                    <input type="text" required id="tbDPP" value="0.00" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">PPN<i class="font-red">*</i></label>
                                <div class="col-md-1">
                                    <input type="text" readonly id="tbPPNCurrency" value="IDR" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <input type="text" id="tbPPN" required class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">PPH<i class="font-red">*</i></label>
                                <div class="col-md-1">
                                    <input type="text" readonly id="tbPPHCurrency" value="IDR" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <input type="text" id="tbPPH" required class="form-control" readonly>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label">Penalty</label>
                                <div class="col-md-1">
                                    <input type="text" readonly id="tbPenaltyCurrency" value="IDR" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <input type="text" id="tbPenalty" class="form-control" value="0.00">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Total Invoice<i class="font-red">*</i></label>
                                <div class="col-md-1">
                                    <input type="text" readonly id="tbTotalAmountCurrency" class="form-control" value="IDR" />
                                </div>
                                <div class="col-md-3">
                                    <input type="text" required id="tbTotalAmount" value="0.00" class="form-control" readonly="readonly">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Company TBG<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <select id="slCompanyTBG" required class="form-control select2"></select>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <div class="col-md-4">
                                    <button type="button" class="btn blue-oleo btCancel">
                                        <i class="fa fa-chevron-left"></i> Cancel
                                    </button>
                                    <button type="submit" id="btSubmit" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-save"></i> Save
                                    </button>
                                </div>
                                <div class="col-md-5"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="hdAllowProcess" value="@ViewBag.AllowProcess" />

<script src="@Url.Content("~/scripts/invoicetransaction/TrxCreateInvoiceNonBuilding.js")" type="text/javascript"></script>

