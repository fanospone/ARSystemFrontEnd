@using ARSystemFrontEnd.Helper;
@{
    ViewBag.Title = "Checklist Invoice Tower";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slSearchCompany" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Operator</label>
                                        <div class="col-md-9">
                                            <select id="slSearchOperator" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Posting Date</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchPostingDateFrom" class="form-control datepicker">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Posting Date To</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchPostingDateTo" class="form-control datepicker">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Term Period</label>
                                        <div class="col-md-9">
                                            <select id="slSearchTerm" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-9">
                                            <select id="slSearchStatus" class="form-control select2">
                                                <option value="0">All</option>
                                                <option value="N">Printed by AR Data</option>
                                                <option value="P">Waiting AR Collection Verification</option>
                                                <option value="A">Received by AR Collection</option>
                                                <option value="R">Rejected by AR Collection</option>
                                                <option value="W">Waiting Dept Head Approval</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice No</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="tbInvNo" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th class="datatable-col-25"></th>
                                <th class="datatable-col-150">Invoice No</th>
                                <th class="datatable-col-100">Invoice Date</th>
                                <th class="datatable-col-150">Invoice Temp</th>
                                <th class="datatable-col-100">Posted By</th>
                                <th class="datatable-col-100">Posted Date</th>
                                <th class="datatable-col-100">Term</th>
                                <th class="datatable-col-200">Verification Status</th>
                                <th class="datatable-col-250">Company Name</th>
                                <th class="datatable-col-100">Operator</th>
                                <th class="datatable-col-100">Amount</th>
                                <th class="datatable-col-100">Discount</th>
                                <th class="datatable-col-100">PPN</th>
                                <th class="datatable-col-100">Penalty</th>
                                <th class="datatable-col-100">Currency</th>
                                @*<th class="datatable-col-10"></th>*@
                                <th class="datatable-col-150">Tax Invoice No.</th>
                                <th class="datatable-col-250">Remark</th>
                                <th class="datatable-col-100">Checklist AR Data</th>
                                <th class="datatable-col-100">Checklist AR Collection</th>
                                <th class="datatable-col-100">Invoice Non Revenue</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlTransaction">
    @*Panel Role Transaction*@
    <div class="row panelTransaction ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject" id="panelTransactionTitle"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formTransaction" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Invoice Number</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbInvoiceNo" readonly class="form-control tbInvoiceNo">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Invoice Date</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbInvoiceDate" readonly required class="form-control tbInvoiceDate">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Term</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbTermPeriod" readonly required class="form-control tbTermPeriod">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Company</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbCompanyName" readonly required class="form-control tbCompanyName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Operator</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" required id="tbOperator" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Tax Number</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbTaxNumber" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">DPP Amount</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbDPP" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">PPN</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbPPN" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="form-group" id="divPenalty">
                                <label class="col-md-3 control-label">Penalty</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbPenalty" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Total Amount</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbAmount" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="form-group divPICARemark">
                                <label class="col-md-3 control-label">PICA Remark</label>
                                <div class="col-md-4">
                                    <textarea class="form-control" readonly rows="3" id="tbPICARemark"></textarea>
                                </div>
                            </div>

                            <div class="form-group divChecklistDocumentCtrl">
                                <label class="col-md-3 control-label">Checklist Document</label>
                                <div class="col-md-6" id="divChecklistDocument">
                                    <table class="table table-striped table-bordered table-hover" id="tblChecklistDocument">
                                        <thead>
                                            <tr>
                                                <th>Document</th>
                                                <th>Item</th>
                                                <th>
                                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                        <input type="checkbox" class="group-checkable" id="checkAll" data-set="#tblChecklistDocument .checkboxes" />
                                                        <span></span>
                                                    </label>
                                                </th>
                                                <th id="thReceived">Received</th>
                                                <th id="thRemark">Remark</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>

                            <section id="pnlApproveChecklist">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Status</label>
                                    <div class="col-md-4">
                                        <select class="form-control select2" id="slStatus" required>
                                            <option value="">Select Status</option>
                                            <option value="Approved">Approved</option>
                                            <option value="Rejected">Rejected</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Remark</label>
                                    <div class="col-md-4">
                                        <textarea class="form-control" id="taRemark"></textarea>
                                    </div>
                                </div>
                            </section>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <div class="col-md-9">
                                    <button type="button" class="btn blue-oleo btCancel">
                                        <i class="fa fa-chevron-left"></i> Cancel
                                    </button>
                                    <button type="submit" id="btSubmit" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-save"></i> Save
                                    </button>
                                    <button type="button" id="btApproveCN" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-check"></i> Approve CN Invoice
                                    </button>
                                    <button type="button" id="btRejectCN" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-times"></i> Reject CN Invoice
                                    </button>
                                    <button type="button" id="btCNInvoice" class="btn red mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-times"></i> CN Invoice
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlChecklistHistory">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Checklist Hystory</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblChecklistHistory">
                        <thead>
                            <tr>
                                <th class="datatable-col-10">No.</th>
                                <th class="datatable-col-100">Verification Status</th>
                                <th class="datatable-col-250">Remark</th>
                                <th class="datatable-col-50">Updated By</th>
                                <th class="datatable-col-100">Updated Date</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="mdlEditTaxInvoiceNo" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width: 40%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Edit Tax Invoice Number</h4>
            </div>
            <form id="formEditInvoiceNo">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group">
                                <label class="control-label">Invoice Number</label>
                                <input type="text" id="tbMdlInvoiceNo" readonly required class="form-control tbInvoiceNo">
                            </div>

                            <div class="form-group">
                                <label class="control-label">Tax Invoice No<i class="font-red">*</i></label>
                                <input type="text" id="tbMdlTaxInvoiceNo" required class="form-control tbTaxInvoiceNo">
                            </div>

                            <button type="submit" id="btSaveTaxInvoiceNo" class="btn green">
                                <i class="fa fa-save"></i> Save
                            </button>
                            <button type="button" data-dismiss="modal" id="btCancelTaxInvoiceNo" class="btn blue-oleo">
                                <i class="fa fa-chevron-left"></i> Cancel
                            </button>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@Html.Partial("_PanelCNARData")
<input type="hidden" id="hdAllowProcess" value="@ViewBag.AllowProcess" />
<input type="hidden" id="hdUserRole" value="@ViewBag.Role" />
<input type="hidden" id="hdUserCompanyCode" value="@ViewBag.UserCompanyCode" />

<script src="@Url.ContentVersion("~/scripts/invoicetransaction/TrxChecklistInvoiceTower.js")" type="text/javascript"></script>

