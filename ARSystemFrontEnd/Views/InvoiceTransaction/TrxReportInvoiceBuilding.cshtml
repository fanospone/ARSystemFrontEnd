
@{
    ViewBag.Title = "Report Invoice Building";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Invoice Date From</label>
                                        <div class="col-md-8">
                                            <input type="text" style="margin-left:15px;" id="tbSearchInvoiceDateFrom" class="form-control datepicker">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Invoice Date To</label>
                                        <div class="col-md-8">
                                            <input type="text" id="tbSearchInvoiceDateTo" class="form-control datepicker">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group ByInvoiceControl">
                                        <label class="col-md-4 control-label">Posting Invoice</label>
                                        <div class="col-md-8">
                                            <div class="col-md-4">
                                                <select id="slSearchYear" class="form-control select2"></select>
                                            </div>
                                            <div class="col-md-4">
                                                <select id="slSearchMonth" class="form-control select2"></select>
                                            </div>
                                            <div class="col-md-4">
                                                <select id="slSearchWeek" class="form-control select2"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Invoice No</label>
                                        <div class="col-md-8">
                                            <input type="text" id="tbSearchInvNo" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th class="datatable-col-150">Invoice No</th>
                                <th class="datatable-col-200">Invoice Description</th>
                                <th class="datatable-col-100">Invoice Date</th>
                                <th class="datatable-col-100">Posting Date</th>
                                <th class="datatable-col-300">Company TBG</th>
                                <th class="datatable-col-300">Customer Name</th>
                                <th class="datatable-col-100">Area (m2)</th>
                                <th class="datatable-col-100">Price per m2</th>
                                <th class="datatable-col-100">Term</th>
                                <th class="datatable-col-100">Currency</th>
                                <th class="datatable-col-100">DPP Amount</th>
                                <th class="datatable-col-100">Discount</th>
                                <th class="datatable-col-100">PPN</th>
                                <th class="datatable-col-100">Penalty</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="hdAllowProcess" value="@ViewBag.AllowProcess" />

<script src="@Url.Content("~/scripts/invoicetransaction/TrxReportInvoiceBuilding.js")" type="text/javascript"></script>