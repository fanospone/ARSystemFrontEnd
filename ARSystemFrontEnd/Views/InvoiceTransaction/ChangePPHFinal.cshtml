@using ARSystemFrontEnd.Helper;
@{
    ViewBag.Title = "Change PPH Final";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }
    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject bold">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice Number</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="tbInvoiceNumber" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">BAPS Number</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="tbBAPSNumber" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">PO Number</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="tbPONumber" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice Date</label>
                                        <div class="col-md-9">
                                            <div class="col-md-5">
                                                <input type="text" id="tbStartInvoice" size="16" class="form-control date-picker">
                                            </div>
                                            <div class="col-md-1 control-label">
                                                To
                                            </div>
                                            <div class="col-md-5">
                                                <input type="text" id="tbEndInvoice" size="16" class="form-control date-picker">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">SO Number</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="tbSONumber" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Operator</label>
                                        <div class="col-md-9">
                                            <select id="slSearchOperator" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject bold">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th class="datatable-col-10 select-all"></th>
                                <th class="datatable-col-100">PPH Type</th>
                                <th class="datatable-col-100">SO Number</th>
                                <th class="datatable-col-200">Invoice Number</th>
                                <th class="datatable-col-300">BAPS Number</th>
                                <th class="datatable-col-100">PO Number</th>
                                <th class="datatable-col-200">Site ID Operator</th>
                                <th class="datatable-col-200">Site Name Operator</th>
                                <th class="datatable-col-100">Type</th>
                                <th class="datatable-col-100">Invoice Start Date</th>
                                <th class="datatable-col-100">Invoice End Date</th>
                                <th class="datatable-col-100">Company</th>
                            </tr>
                        </thead>
                    </table>
                    
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-6 control-label">Choose PPH Type</label>
                                        <div class="col-md-6">
                                            <select id="slPPHType" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <button type="button" id="btSave" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-save"></i> Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</section>

<input type="hidden" id="hdAllowEdit" value="@ViewBag.AllowEdit" />

<script src="@Url.ContentVersion("~/scripts/invoicetransaction/ChangePPHFinal.js")" type="text/javascript"></script>


