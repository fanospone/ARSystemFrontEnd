
@{
    ViewBag.Title = "Reserve Invoice Number";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

@* PAYMENT GRID *@
<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slSearchCompanyName" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Operator</label>
                                        <div class="col-md-9">
                                            <select id="slSearchOperator" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 ReserveCtrl">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Request Date</label>
                                        <div class="col-md-9">
                                            <div class="col-md-5">
                                                <input type="text" id="tbStartPeriod" size="16" class="form-control date-picker">
                                            </div>
                                            <div class="col-md-1">
                                                To
                                            </div>
                                            <div class="col-md-5">
                                                <input type="text" id="tbEndPeriod" size="16" class="form-control date-picker">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 ReplaceCtrl">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Reserved Number</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="tbInvNo" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 ReplaceCtrl">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Year</label>
                                        <div class="col-md-9">
                                            <select id="slSearchYear" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="submit" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button type="button" id="btAdd" class="btn blue">
                                        <i class="fa fa-plus-circle"></i> Reserve Number
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="tabbable tabbable-tabdrop" id="tabReserve">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tabRequestNumber" data-toggle="tab">Reserve Invoice Number</a>
                            </li>
                            <li>
                                <a href="#tabReplaceNumber" data-toggle="tab">Replace Invoice Number</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabRequestNumber">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-50">Request Number</th>
                                            <th class="datatable-col-100">Company</th>
                                            <th class="datatable-col-100">Operator</th>
                                            <th class="datatable-col-50">Amount Request</th>
                                            <th class="datatable-col-100">Requestor</th>
                                            <th class="datatable-col-100">Request Date</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="tab-pane" id="tabReplaceNumber">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryDataReplace">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-10"></th>
                                            <th class="datatable-col-100">Invoice Number</th>
                                            <th class="datatable-col-100">Company</th>
                                            <th class="datatable-col-100">Operator</th>
                                            <th class="datatable-col-50">Year</th>
                                            <th class="datatable-col-100">Paired Number</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="panelDetailData">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-blue-steel">
                    <i class="fa fa-table"></i>
                    <span class="caption-subject">Request Number Detail</span>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblDetailData">
                    <thead>
                        <tr>
                            <th class="datatable-col-100">Company</th>
                            <th class="datatable-col-100">Operator</th>
                            <th class="datatable-col-100">Invoice No</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <div class="col-md-12 text-right">
                        <button type="button" id="btBack" class="btn blue-oleo">
                            <i class="fa fa-chevron-left"></i> Back
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<section id="pnlTransaction">
    @*Form*@
    <div class="row panelTransaction">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject bold" id="panelTransactionTitle"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formReserve" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-10">

                                    <div class="form-group">
                                        <label class="col-md-3 control-label" id="lbOperator">Operator<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slRequestOperator" class="form-control select2" required></select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label" id="lbCompany">Company<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slRequestCompany" class="form-control select2" required></select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Amount Requested Number<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="number" id="tbRequestAmount" class="form-control" maxlength="255" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Remarks<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <textarea class="form-control" rows="3" id="tbRemarks" placeholder="Remarks" required></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-4">
                                            <button type="button" class="btn blue-oleo btCancel">
                                                <i class="fa fa-chevron-left"></i> Cancel
                                            </button>
                                            <button type="submit" id="btReserve" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                                <i class="fa fa-save"></i> Save
                                            </button>
                                        </div>
                                        <div class="col-md-5"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="panelDetailDataReplace">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-blue-steel">
                    <i class="fa fa-table"></i>
                    <span class="caption-subject">Reserved Number Detail</span>
                </div>
            </div>
            <div class="portlet-body">
                <form id="formTransaction" class="form-horizontal" role="form">
                    <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Reserved Invoice Number</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbReservedInvoiceNumber" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Invoice Number</label>
                                <div class="col-md-4">
                                    <select id="slInvoNo" class="form-control select2" required></select>
                                </div>
                                <div class="col-md-1" style="padding-left:0px">
                                    <button type="submit" id="btSearchInvNo" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="form-group divInvoiceNumberProperties">
                                <label class="col-md-3 control-label">Invoice Temp</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbInvoiceTemp" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group divInvoiceNumberProperties">
                                <label class="col-md-3 control-label">Company</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbCompany" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group divInvoiceNumberProperties">
                                <label class="col-md-3 control-label">Operator</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbOperator" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group divInvoiceNumberProperties">
                                <label class="col-md-3 control-label">Print Date</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbPrintDate" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group divInvoiceNumberProperties">
                                <label class="col-md-3 control-label">Amount DPP</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbDPP" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group divInvoiceNumberProperties">
                                <label class="col-md-3 control-label">PPN</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbPPN" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group divInvoiceNumberProperties">
                                <label class="col-md-3 control-label">PPH</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbPPH" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <div class="col-md-4">
                                    @*<button type="button" class="btn blue-oleo btCancelReplace">
                                            <i class="fa fa-chevron-left"></i> Cancel
                                        </button>*@
                                    <button type="button" id="btSaveReplace" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-save"></i> Replace
                                    </button>
                                    <button type="button" id="btRelease" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-save"></i> Release
                                    </button>
                                    <button type="button" id="btBackReplace" class="btn blue-oleo">
                                        <i class="fa fa-chevron-left"></i> Back
                                    </button>
                                </div>
                            </div>
                        </div>
              

                </form>
            </div>
            @*<form class="form-horizontal" role="form">
                    <div class="form-group">
                        <div class="col-md-12 text-right">
                            <button type="button" id="btBackReplace" class="btn blue-oleo">
                                <i class="fa fa-chevron-left"></i> Back
                            </button>
                        </div>
                    </div>
                </form>*@
        </div>
    </div>
</section>

<input type="hidden" id="hdAllowProcess" value="@ViewBag.AllowProcess" />
