@using ARSystemFrontEnd.Helper;

@{
    ViewBag.Title = "Approval Monitoring AR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject ">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Paid Date</label>
                                        <div class="col-md-9">
                                            <div class="col-md-4">
                                                <input type="text" id="tbStartPaid" size="16" class="form-control date-picker">
                                            </div>
                                            <div class="col-md-1">
                                                To
                                            </div>
                                            <div class="col-md-4">
                                                <input type="text" id="tbEndPaid" size="16" class="form-control date-picker">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slCompany" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice No</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbInvNo" class="form-control" placeholder="Invoice Number" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Document Payment</label>
                                        <div class="col-md-9">
                                            <select id="slDocumentPayment" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-9">
                                            <select id="slStatus" class="form-control select2">
                                                <option value="NOT YET">NOT YET</option>
                                                <option value="POSTED">POSTED</option>
                                                <option value="SUCCESS">SUCCESS</option>
                                                <option value="ERROR">ERROR</option>
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject ">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tabbable tabbable-tabdrop" id="tabBAPS">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tabReportInv" data-toggle="tab">Report Invoice</a>
                            </li>
                            <li>
                                <a href="#tabReportColl" data-toggle="tab">Report Collection</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabReportInv">
                                <table class="table table-striped table-bordered table-hover" id="tbSummaryInvoice">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Invoice Number</th>
                                            <th>Paid Date</th>
                                            <th>Company</th>
                                            <th>Operator</th>
                                            <th>Paid Amount</th>
                                            <th>Document Payment</th>
                                            <th>Ket.</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="tab-pane" id="tabReportColl">
                                <table class="table table-striped table-bordered table-hover" id="tbSummaryCollection">
                                    <thead>
                                        <tr>
                                            <th class="text-center select-all-raw"></th>
                                            <th>Document Header Text</th>
                                            <th>Insert Date</th>
                                            <th>Insert Time</th>
                                            <th>Company Code Invoice</th>
                                            <th>Customer</th>
                                            <th>Company Code Payment</th>
                                            <th>Rekening Koran ID</th>
                                            <th>Document Payment</th>
                                            <th>Tanggal Uang Masuk</th>
                                            <th>Currency</th>
                                            <th>Total Payment</th>
                                            <th>Nilai Invoice</th>
                                            <th>Paid Amount</th>
                                            <th>PPH Amount</th>
                                            <th>Rounding</th>
                                            <th>WAPU</th>
                                            <th>RTGS</th>
                                            <th>Penalty</th>
                                            <th>PPN Expired</th>
                                            <th>Payment Type</th>
                                            <th>Status</th>
                                            <th>Response Message</th>
                                            <th>Flag Others</th>
                                        </tr>
                                    </thead>
                                </table>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <button type="button" id="btGenerateSAP" class="btn green text-left">
                                                    <i class="fa-file-excel-o"></i> Generate To SAP
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="mdlEditDocPayment" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width: 70%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Edit Document Payment</h4>
            </div>
            <div class="modal-body">
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice Number</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbInvoiceNumber" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Paid Date</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbPaidDate" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Paid Amount</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbPaidAmount" value="0.00" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Keterangan</label>
                                        <div class="col-md-9">
                                            <textarea id="tbKeterangan" class="form-control" disabled></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbCompany" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Operator</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbOperator" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Document Payment</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbDocumentPayment" class="form-control" disabled />
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin:0px 10px 0px 10px;">
                                    <table class="table table-striped table-bordered table-hover" id="tbDocPaymentSAP">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>
                                                    <div class="input-group input-group-sm">
                                                        <input id="vDocumentPayment" class="form-control" />
                                                        <span class="input-group-btn">
                                                            <button class="btn blue btn-small btSearchHeader" type="button">
                                                                <i class="fa fa-search"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </th>
                                                <th></th>
                                                <th>
                                                    <div class="input-group input-group-sm">
                                                        <input id="vTglUangMasuk" class="form-control" />
                                                        <span class="input-group-btn">
                                                            <button class="btn blue btn-small btSearchHeader" type="button">
                                                                <i class="fa fa-search"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                            <tr>
                                                <th class="text-center datatable-col-10 select-raw"></th>
                                                <th>Document Payment</th>
                                                <th>Company Code</th>
                                                <th>Tanggal Uang Masuk</th>
                                                <th>Total Payment</th>
                                                <th>Currency</th>
                                                <th>Nama Bank</th>
                                                <th>Nomor Rekening</th>
                                                <th>Keterangan</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btSave">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hdUserCompanyCode" value="@ViewBag.UserCompanyCode" />
<script src="@Url.ContentVersion("~/scripts/invoicetransaction/ApprovalMonitoringAR.js")" type="text/javascript"></script>

