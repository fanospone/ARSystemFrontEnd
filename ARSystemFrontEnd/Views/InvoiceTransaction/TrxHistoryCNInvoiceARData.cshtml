@using ARSystemFrontEnd.Helper;
@{
    ViewBag.Title = "CN Invoice History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }
</style>

<section id="pnlSummary">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject ">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slSearchCompanyName" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Operator</label>
                                        <div class="col-md-9">
                                            <select id="slSearchOperator" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice No</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbInvNo" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group" >
                                        <label class="col-md-3 control-label">Type</label>
                                        <div class="col-md-9">
                                            <input type="radio" id="value-1" name="rdProccessType" value="1" checked="checked" />
                                            <label for="value-1">Return Proccess</label>  &nbsp;&nbsp;
                                            <input type="radio" id="value-2" name="rdProccessType" value="2" /> 
                                            <label for="value-2">AR Collection</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6" >
                                    <div class="form-group" >
                                        <label class="col-md-3 control-label">Invoice Date</label>
                                        <div class="col-md-9">
                                            <div class="col-md-5">
                                                <input type="text" id="tbStartPeriod" size="16" class="form-control date-picker">
                                            </div>
                                            <div class="col-md-1 control-label">
                                                To
                                            </div>
                                            <div class="col-md-5">
                                                <input type="text" id="tbEndPeriod" size="16" class="form-control date-picker">
                                            </div>
                                        </div>
                                    </div>

                                   
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">CN Status</label>
                                        <div class="col-md-9">
                                            <select id="slSearchCNStatus" class="form-control select2">
                                                <option value="">All</option>
                                                <option value="PENDING">Requested</option>
                                                <option value="APPROVED">Approved</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                     <div class="form-group">
                                        <label class="col-md-3 control-label">Term Invoice</label>
                                        <div class="col-md-9">
                                            <select id="slSearchTermInvoice" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice Status</label>
                                        <div class="col-md-9">
                                            <select id="slSearchInvoiceStatus" class="form-control select2">
                                                <option value="">All</option>
                                                <option value="Replace Done">Replace Done <option>
                                                <option value="Waiting For Replace">Waiting For Replace <option>
                                                <option value="No Need To Replace">No Need To Replace <option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="submit" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject ">Search Result</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th class="datatable-col-25">Action</th>
                                <th class="datatable-col-150">Invoice No</th>
                                <th class="datatable-col-150">Parent No</th>
                                <th class="datatable-col-150">No Invoice Temp</th>
                                <th class="datatable-col-150">Amount DPP</th>
                                <th class="datatable-col-150">Amount PPN</th>
                                <th class="datatable-col-150">Invoice Date</th>
                                <th class="datatable-col-150">Request Date</th>
                                <th class="datatable-col-150">Requested By</th>
                                <th class="datatable-col-150">Approve Date</th>
                                <th class="datatable-col-150">Approved By</th>
                                <th class="datatable-col-150">Term Invoice</th>
                                <th class="datatable-col-100">Company</th>
                                <th class="datatable-col-100">Operator</th>
                                <th class="datatable-col-150">CN Info</th>
                                <th class="datatable-col-150">CN From</th>
                                <th class="datatable-col-150">PICA</th>
                                <th class="datatable-col-150">PICA Remark</th>
                                <th class="datatable-col-150">Status</th>
                                <th class="datatable-col-150">Replace Date</th>
                                <th class="datatable-col-150">Replace Invoices</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                
            </div>
        </div>
    </div>
</section>

<input type="text" style="display:none;" id="hdUserCompanyCode" value="@ViewBag.UserCompanyCode" />

<div class="modal" tabindex="-1" id="modalEditPeriode">
    <div class="modal-dialog" style="width:70%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><b>Replace Invoice</b></h5>
            </div>
            <div class="modal-body">
                <form id="formTransactionEdit" role="form">
                    <div class="form-group" style="margin-top:2rem">
                        <label class="col-md-2 control-label" style="margin-top:5px">Invoice Number: </label>
                        <div class="col-md-4">
                            <div style="padding:0px">
                                <input type="text" id="cnInvNo" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div>
                        <br />
                    </div>
                    <div class="form-group" style="margin-top:2rem">
                        <label class="col-md-2 control-label" style="margin-top:5px">No Faktur: </label>
                        <div class="col-md-4">
                            <div style="padding:0px">
                                <input type="text" id="cnFakNo" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div>
                        <br />
                    </div>
                    <div class="form-group" style="margin-top:2rem">
                        <label class="col-md-2 control-label" style="margin-top:5px">Need To Replace: </label>
                        <div class='col-md-4'>
                            <input type="checkbox" id="needReplace" checked class="make-switch" data-on-text="YES" data-off-text="NO">
                        </div>
                    </div>
                    <div>
                        <br />
                    </div>
                    <div id="addSection">
                        <div class="row form-group" style="margin-top:2rem;margin-right:50px" id="divButtonAddComponent">
                            <div class="col-lg-3 offset-9">
                                <button id="btnAppendTableRows" class="btn btn-primary">
                                    <i title='Add Row' class='fa fa-plus-circle'></i>
                                    Add Row
                                </button>
                            </div>
                        </div>
                        <div class="col-lg-12 offset-1" style="" id="divTableAddComponent">
                            <table class="table table-bordered table-condensed" id="tableAddComponent" style="background-color:#ebedf2; text-align:center">
                                <thead style="color:black; font-weight:bold">
                                    <tr>
                                        <td class="col-md-5">
                                            <label class="control-label" style="margin-top:5px">Invoice Number Replace: </label>
                                        </td>
                                        <td class="col-md-5">
                                            <label class="control-label" style="margin-top:5px">No Faktur Replace: </label>
                                        </td>
                                        <td>
                                            
                                        </td>
                                    </tr>
                                </thead>
                                <tbody style="background-color:white"></tbody>
                            </table>
                        </div>
                    </div>
                    
                    <div class="form-group" align="center">
                        <br /><br /><br />
                        <div class="col-md-12">
                            <button type="button" id="btnEditSave" class="btn green-jungle" return false;"><i class="fa fa-save"></i> Submit</button>&nbsp;&nbsp;&nbsp;
                            <button type="button" id="btnEditClose" class="btn" style="color:#26c281;background-color:white;border-color:#26c281"><i class="fa"></i> Cancel</button>
                        </div>
                    </div>
                    <div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <br />
            </div>
        </div>
    </div>
</div>

<script src="@Url.ContentVersion("~/scripts/invoicetransaction/TrxHistoryCNInvoiceARData.js")" type="text/javascript"></script>
