                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btSavePeriod">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hdPPHValue" value="@ViewBag.PPHValue" />
<input type="hidden" id="hdPPFValue" value="@ViewBag.PPFValue" />
<script type="text/javascript">
    const PPNValue = @ViewBag.PPNValue
</script>

