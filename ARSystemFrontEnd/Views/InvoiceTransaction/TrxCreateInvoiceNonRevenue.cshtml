</section>

<section id="pnlTransaction">
    <div class="row panelTransaction " style="display:none;">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject" id="panelTransactionTitle"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formTransaction" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Amount<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <input type="text" id="tbAmount" value="0.00" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Discount<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <input type="text" id="tbDiscount" value="0.00" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">DPP<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <input type="text" id="tbDPP" value="0.00" disabled="disabled" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">PPN<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <input type="text" id="tbPPN" value="0.00" disabled="disabled" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label class="col-md-6 control-label">Use PPN?</label>
                                    <div class="col-md-6">
                                        <input type="checkbox" id="chPPN" checked class="make-switch" data-on-text="YES" data-off-text="NO">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">PPH<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <input type="text" id="tbPPH" value="0.00" disabled="disabled" class="form-control" />
                                    <input type="text" id="tbPPF" value="0.00" disabled="disabled" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label class="col-md-6 control-label">Use PPH?</label>
                                    <div class="col-md-6">
                                        <input type="checkbox" id="chPPH" checked class="make-switch" data-on-text="YES" data-off-text="NO">
                                        <div class="mt-radio-inline">
                                            <label class="mt-radio">
                                                <input type="radio" id="rbPPH" name="rdPPHType" value="0"> @(ViewBag.PPHValue * 100) %
                                                <span></span>
                                            </label>
                                            <label class="mt-radio">
                                                <input type="radio" id="rbPPF" name="rdPPHType" value="1"> @(ViewBag.PPFValue * 100) %
                                                <span></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Penalty</label>
                                <div class="col-md-4">
                                    <input type="text" id="tbPenalty" value="0.00" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Total Invoice<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <input type="text" required id="tbTotalInvoice" value="0.00" disabled="disabled" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label class="col-md-6 control-label">Round Down?</label>
                                    <div class="col-md-6">
                                        <input type="checkbox" id="chRounding" checked class="make-switch" data-on-text="YES" data-off-text="NO">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Terbilang<i class="font-red">*</i></label>
                                <div class="col-md-6">
                                    <input type="text" id="tbTerbilang" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label">Category<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <select id="slCategory" class="form-control select2"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Company<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <select id="slCompany" class="form-control select2"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Customer<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <select id="slCustomer" class="form-control select2"></select>
                                </div>
                            </div>
                            <div class="form-group divDesc">
                                <label class="col-md-3 control-label">Description<i class="font-red">*</i></label>
                                <div class="col-md-4">
                                    <textarea class="form-control disabledCtrl" rows="5" id="tbDescription" required></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row panelSummary ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <div class="btn-group">
                            <button type="button" id="btAddSite" class="btn blue">
                                <i class="fa fa-plus-circle"></i> Add Site
                            </button>
                        </div>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tbSummarySite">
                        <thead>
                            <tr>
                                <th class="datatable-col-50">Action</th>
                                <th class="datatable-col-100">SONumber</th>
                                <th class="datatable-col-100">SiteID</th>
                                <th class="datatable-col-150">SiteName</th>
                                <th class="datatable-col-100">SiteID Customer</th>
                                <th class="datatable-col-150">SiteName Customer</th>
                                <th class="datatable-col-50">Company</th>
                                <th class="datatable-col-100">Customer</th>
                                <th class="datatable-col-100">Start Period</th>
                                <th class="datatable-col-100">End Period</th>
                                <th class="datatable-col-100">Amount</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-12">
            <div class="row">
                <div class="form-group">
                    <button type="submit" id="btCreateInvoice" class="btn green ladda-button" data-style="zoom-out">
                        <i class="fa fa-check"></i> Create Invoice
                    </button>

                    <button type="submit" id="btEditInvoice" class="btn green ladda-button" data-style="zoom-out">
                        <i class="fa fa-check"></i> Edit Invoice
                    </button>

                    <button type="submit" id="btCancel" class="btn red">
                        <i class="fa fa-times"></i> Cancel
                    </button>
                </div>&nbsp;
            </div>
        </div>
    </div>
</section>

<div id="mdlAddSite" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width: 70%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add Site</h4>
            </div>
            <div class="modal-body">
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slCompanySite" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">SONumber</label>
                                        <div class="col-md-9">
                                            <select id="slSONumber" class="form-control select2" multiple></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer</label>
                                        <div class="col-md-9">
                                            <select id="slCustomerSite" class="form-control select2" disabled></select>
                                        </div>
                                    </div>
                                    <button type="button" id="btSrcSONumber" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <br />
                            <div class="row panelSite ">
                                <div class="row" style="margin:0px 10px 0px 10px;">
                                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tbSite">
                                        <thead>
                                            <tr>
                                                <th class="text-center datatable-col-10 select-all-raw"></th>
                                                <th class="text-center datatable-col-100">SONumber</th>
                                                <th class="text-center datatable-col-100">SiteID</th>
                                                <th class="text-center datatable-col-150">SiteName</th>
                                                <th class="text-center datatable-col-100">SiteID Customer</th>
                                                <th class="text-center datatable-col-150">SiteName Customer</th>
                                                <th class="text-center datatable-col-50">Company</th>
                                                <th class="text-center datatable-col-50">Customer</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                            <br />
                            <div class="row panelSitePeriod ">
                                <div class="row" style="margin:0px 10px 0px 10px;">
                                    <button type="button" id="btAddPeriod" class="btn blue">
                                        <i class="fa fa-plus-circle"></i> Add
                                    </button>
                                    <br /><br />
                                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tbSiteCheckList">
                                        <thead>
                                            <tr>
                                                <th class="text-center datatable-col-50">Action</th>
                                                <th class="text-center datatable-col-100">SONumber</th>
                                                <th class="text-center datatable-col-100">SiteID</th>
                                                <th class="text-center datatable-col-150">SiteName</th>
                                                <th class="text-center datatable-col-100">SiteID Customer</th>
                                                <th class="text-center datatable-col-150">SiteName Customer</th>
                                                <th class="text-center datatable-col-50">Company</th>
                                                <th class="text-center datatable-col-50">Customer</th>
                                                <th class="text-center datatable-col-100">Start Period</th>
                                                <th class="text-center datatable-col-100">End Period</th>
                                                <th class="text-center datatable-col-100">Amount</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btSaveSite">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mdlAddPeriod" role="dialog">
    <div class="modal-dialog" style="width: 30%;">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-body">
                        <div class="portlet light bordered">
                            <div class="form-group">
                                <label class="control-label col-md-4">
                                    Start Period <i class="font-red">*</i>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" id="tbStartPeriod" required class="form-control datepicker">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-4">
                                    End Period <i class="font-red">*</i>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" id="tbEndPeriod" required class="form-control datepicker">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-4">
                                    Amount <i class="font-red">*</i>
                                </label>
