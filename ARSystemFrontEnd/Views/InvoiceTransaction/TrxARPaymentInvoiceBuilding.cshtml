    @* AR MONITORING *@

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">AR Monitoring</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-6">
                            <form id="formARMonitoring" class="form-horizontal" role="form">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Currency</label>
                                                <div class="col-md-7">
                                                    <div class="mt-radio-inline">
                                                        <label class="mt-radio">
                                                            <input type="radio" id="rbIDR" name="rdCurrency" value="IDR"> IDR (Default)
                                                            <span></span>
                                                        </label>
                                                        <label class="mt-radio">
                                                            <input type="radio" id="rbUSD" name="rdCurrency" value="USD"> USD
                                                            <span></span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Amount DPP</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountDPP" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">VAT (10%)</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountPPN" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Include PPH</label>
                                                <div class="col-md-7">
                                                    <input type="checkbox" id="rdPPH" checked class="make-switch" data-on-text="YES" data-off-text="NO">
                                                    <span id="spPPHIndex">Included in #<label id="lblPPHIndex"></label> Payment</span>
                                                    <div class="mt-radio-inline divPPHType">
                                                        <label class="mt-radio">
                                                            <input type="radio" id="rbPPH" name="rdPPHType" value="0" disabled="disabled"> @(ViewBag.PPHValue * 100) %
                                                            <span></span>
                                                        </label>
                                                        <label class="mt-radio">
                                                            <input type="radio" id="rbPPF" name="rdPPHType" value="1" disabled="disabled" > @(ViewBag.PPFValue * 100) %
                                                            <span></span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group tbPPH divPPHType">
                                                <label class="col-md-5 control-label">Amount PPH 23 (@(ViewBag.PPHValue * 100)%)</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountPPH" class="form-control text-right" readonly  />
                                                </div>
                                            </div>
                                            <div class="form-group tbPPF divPPHType">
                                                <label class="col-md-5 control-label">Amount PPF (@(ViewBag.PPFValue * 100)%)</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountPPF" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Amount Penalty After Tax</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountPAT" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Amount Deal</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountDeal" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Partial Paid</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbPartialPaid" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Balance Invoice</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbBalanceInvoice" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="col-md-6">
                            <div class="portlet-body form">
                                <form id="formARMonitoring2" class="form-horizontal" role="form">
                                    <div class="form-body">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Total Monitoring</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbTotalMonitoring" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Paid Amount</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbPaidAmount" class="form-control text-right" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Rounding</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountRND" class="form-control text-right" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">WAPU</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountDR" class="form-control text-right" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">RTGS</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountRTGS" class="form-control text-right" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Penalty</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountPenalty" class="form-control text-right" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">PPN Expired</label>
                                                <div class="col-md-7">
                                                    <input type="checkbox" id="rdPPNExpired" class="make-switch" data-on-text="YES" data-off-text="NO">
                                                    <span id="spPPEIndex">Included in #<label id="lblPPEIndex"></label> Payment</span>
                                                    @*<div class="mt-radio-inline">
                                                            <label class="mt-radio">
                                                                <input type="radio" id="rbPPNYes" name="rdPPNExpired" value="1" > Yes
                                                                <span></span>
                                                            </label>
                                                            <label class="mt-radio">
                                                                <input type="radio" id="rbPPNNo" name="rdPPNExpired" value="0" checked> No
                                                                <span></span>
                                                            </label>
                                                        </div>*@
                                                </div>
                                            </div>
                                            <div class="form-group disabledCtrl">
                                                <label class="col-md-5 control-label">Amount PPN Expired</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbAmountPPNExpired" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Payment Type</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbPaymentType" class="form-control" style="text-align:center;font-weight:bold;" readonly />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-5 control-label">Balance</label>
                                                <div class="col-md-7">
                                                    <input type="text" id="tbBalance" class="form-control text-right" readonly />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 text-center" style="margin-top:20px;">
                            <button type="button" id="btCancel" class="btn blue-oleo">
                                <i class="fa fa-chevron-left"></i> Close
                            </button>
                            <button type="submit" id="btSubmit" class="btn green-jungle">
                                <i class="fa fa-floppy-o"></i> Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* END OF AR MONITORING *@
</section>
@* END OF PAYMENT FORM *@

@* FORM CONFIRM SAVE PAYMENT *@
<div id="mdlConfirmSave" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width: 40%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Confirm Save Payment</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-md-12 control-label text-center">Are You Sure Want to Save, This Payment is <span id="spPaidStatus" style="font-weight:bold;"></span>?</label>
                        </div>
                    </div>
                    <div class="col-md-6 col-md-offset-4">
                        <button type="button" id="btYesConfirm" class="btn green-jungle">
                            <i class="fa fa-save"></i> Yes
