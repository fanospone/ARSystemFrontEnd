@using ARSystemFrontEnd.Helper

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-9">
                                            <select id="slStatus" class="form-control select2">
                                                <option></option>
                                                <option value="Done">DONE</option>
                                                <option value="Not Yet">NOT YET</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slCompany" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer</label>
                                        <div class="col-md-9">
                                            <select id="slCustomer" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Paid Date</label>
                                        <div class="col-md-9">
                                            <div class="col-md-5">
                                                <input type="text" id="tbStartPaid" size="16" class="form-control date-picker" placeholder="Start Paid Date">
                                            </div>
                                            <div class="col-md-1">
                                                To
                                            </div>
                                            <div class="col-md-5">
                                                <input type="text" id="tbEndPaid" size="16" class="form-control date-picker" placeholder="End Paid Date">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button type="button" id="btBankIn" class="btn blue">
                                        <i class="fa fa-plus-circle"></i> Bank In
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th class="datatable-col-50">No</th>
                                <th class="datatable-col-150">Action</th>
                                <th class="datatable-col-100">Paid Date</th>
                                <th class="datatable-col-150">Type</th>
                                <th class="datatable-col-50">Company</th>
                                <th class="datatable-col-50">Customer</th>
                                <th class="datatable-col-150">Amount</th>
                                <th class="datatable-col-200">Description</th>
                                <th class="datatable-col-100">Create Date</th>
                                <th class="datatable-col-150">VAR (Unsettle)</th>
                                <th class="datatable-col-50">Status</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="mdlBankIn" role="dialog">
    <div class="modal-dialog" style="width: 50%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title"><label id="lblmdlBankIn"></label></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-body">
                        <div class="portlet light bordered">
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Paid Date <i class="font-red">*</i>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" id="tbPaidDate" class="form-control date-picker" placeholder="Paid Date">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Type <i class="font-red">*</i>
                                </label>
                                <div class="col-md-8">
                                    <select id="slType" class="form-control select2">
                                        <option></option>
                                        <option value="1">Summary Rent</option>
                                        <option value="2">Summary Other Rent</option>
                                        <option value="3">Summary Electricity & Mini CME Reimbursable</option>
                                        <option value="4">Summary Building Rent</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Company <i class="font-red">*</i>
                                </label>
                                <div class="col-md-8">
                                    <select id="slsCompany" class="form-control select2"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Customer <i class="font-red">*</i>
                                </label>
                                <div class="col-md-8">
                                    <select id="slsCustomer" class="form-control select2"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Amount <i class="font-red">*</i>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="0.00" id="tbAmount">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Description <i class="font-red">*</i>
                                </label>
                                <div class="col-md-8">
                                    <textarea class="form-control disabledCtrl" rows="5" id="tbDescription"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btSaveBankIn">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btEditBankIn">Edit</button>
                <button type="submit" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mdlBankOut" role="dialog">
    <div class="modal-dialog" style="width: 70%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add Bank Out</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="portlet light bordered">
                                    <div class="portlet-title">
                                        <div class="caption font-red-sunglo">
                                            <i class="icon-settings font-red-sunglo"></i>
                                            <span class="caption-subject bold uppercase"> Bank In</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Paid Date
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" id="tbPaidDateBankIn" class="form-control date-picker" placeholder="Paid Date" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Company 
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" id="tbCompany" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Customer 
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" id="tbOperator" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Amount 
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" value="0.00" id="tbAmountBankIn" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Description 
                                        </label>
                                        <div class="col-md-8">
                                            <textarea class="form-control disabledCtrl" rows="5" id="tbDescriptionBankIn" disabled></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Variance 
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" value="0.00" id="tbVariance" disabled>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="portlet light bordered">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            <i class="icon-settings font-dark"></i>
                                            <span class="caption-subject bold uppercase"> Bank Out</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Amount <i class="font-red">*</i>
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" value="0.00" id="tbAmountBankOut">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Description <i class="font-red">*</i>
                                        </label>
                                        <div class="col-md-8">
                                            <textarea class="form-control disabledCtrl" rows="5" id="tbDescriptionBankOut"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-8">
                                            <button type="button" class="btn blue ladda-button" id="btAddBankOut">Add</button>
                                            <button type="button" class="btn blue ladda-button" id="btEditBankOut">Edit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="portlet light bordered">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tbBankOut">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-50">No</th>
                                            <th class="datatable-col-100">Amount</th>
                                            <th class="datatable-col-150">Description</th>
                                            <th class="datatable-col-100">Created Date</th>
                                            <th class="datatable-col-150">Action</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-default" data-dismiss="modal" id="btSave">Save</button>*@
                <button type="submit" class="btn btn-default" data-dismiss="modal" id="btCancel">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script src="@Url.ContentVersion("~/scripts/AllocatePayment/Index.js")" type="text/javascript"></script>

