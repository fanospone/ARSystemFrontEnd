@using ARSystemFrontEnd.Helper
@{
    ViewBag.Title = "So Number Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*FORM REVENUE DETAIL*@
<section id="pnlRevenueDetail">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet-body form">
                <form id="formSearchDetail" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Sonumb</label>
                                    <div class="col-md-9">
                                        <input type="text" id="tbSonumb" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Site ID</label>
                                    <div class="col-md-9">
                                        <input type="text" id="tbSiteId" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Site Name</label>
                                    <div class="col-md-9">
                                        <input type="text" id="tbSiteName" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Customer ID</label>
                                    <div class="col-md-9">
                                        <input type="text" id="tbCustomerId" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Regional</label>
                                    <div class="col-md-9">
                                        <input type="text" id="tbRegional" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Tenant Type</label>
                                    <div class="col-md-9">
                                        <input type="text" id="tbTenantType" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Status</label>
                                    <div class="col-md-9">
                                        <input type="text" id="tbStatus" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Accrued</label>
                                    <div class="col-md-9">
                                        <input type="text" id="tbAccrued" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Unearned</label>
                                    <div class="col-md-9">
                                        <input type="text" id="tbUnearned" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="javascript:;" target="" id="btnSeeInvoiceInformation" class="btn btn-info pull-right" style="margin:0 18px 18px 0;"><i class="fa fa-eye"></i> Preview Invoice Information</a>
        </div>
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblRevenueDetail">
                        <thead>
                            <tr>
                                <th class="datatable-col-100">Periode</th>
                                <th class="datatable-col-100">Month</th>
                                <th class="datatable-col-100">Year</th>
                                <th class="datatable-col-100">Start SLD</th>
                                <th class="datatable-col-100">End SLD</th>

                                <th class="datatable-col-100">Start BAPS</th>
                                <th class="datatable-col-100">End BAPS</th>

                                <th class="datatable-col-100">Status</th>
                                <th class="datatable-col-100">Start Invoice</th>
                                <th class="datatable-col-100">End Invoice</th>
                                <th class="datatable-col-200">No Invoice</th>
                                <th class="datatable-col-100">Total</th>
                                <th class="datatable-col-100">Per Month</th>

                                <th class="datatable-col-100">Amount</th>

                                <th class="datatable-col-100">Accrued</th>
                                <th class="datatable-col-100">Unearned</th>
                                <th class="datatable-col-150">Total Adjustment</th>
                                <th class="datatable-col-100"></th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th colspan="14" style="text-align:left; font-size:15px;">TOTAL</th>
                                <th style="text-align:right; font-size:15px;"></th>
                                <th style="text-align:right; font-size:15px;"></th>
                                <th style="text-align:right; font-size:15px;"></th>
                                <th style="text-align:right; font-size:15px;"></th>
                            </tr>
                        </tfoot>
                    </table>
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <button type="button" class="btn blue-oleo btBackRevenueDetail">
                                    <i class="fa fa-close"></i> Close
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@*END OF FORM REVENUE DETAIL*@

<div id="mdlViewAdjustment" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width: 40%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">View Adjustment</h4>
            </div>
            <div class="portlet-body" style="padding:0px 10px 0 10px">
                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblAdjustment">
                    <thead>
                        <tr>
                            <th class="datatable-col-100">Remarks Adjustment</th>
                            <th class="datatable-col-100">Amount</th>
                            <th class="datatable-col-50">Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Total</th>
                            <th style="padding-right: 10px;"></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>


        </div>
    </div>
</div>


<div id="mdlEditAdjustment" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;z-index:10070 !important">
    <div class="modal-dialog" style="width: 40%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Edit Adjustment</h4>
            </div>
            <div class="portlet-body">
                <form id="frmSPH" role="form" class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <input type="text" id="txtRemarkAdjustment" name="txtRemarkAdjustment" class="form-control" placeholder="Remark Adjustment" readonly/>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <input type="number" id="txtAmount" name="txtAmount" class="form-control" placeholder="Amount" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button type="button" id="btnSaveAdjustment" class="btn green"><i class="fa fa-save"></i> Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <input type="hidden" id="hdId" value="" />

        </div>
    </div>
</div>

<script src="@Url.ContentVersion("~/scripts/RevenueSystem/SoNumberDetail.js")" type="text/javascript"></script>