
@{
    ViewBag.Title = "MasterlistAccrue";
}

<style type="text/css">

</style>
<section id="pnlAccrue">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body" style="margin-left:-50px">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group" style="height:25px">
                                        <label class="col-md-3 control-label">Sonumb</label>
                                        <div class="col-md-4">
                                            <input type="text" id="inSonumb" class="form-control input-sm" />
                                        </div>
                                    </div>
                                    <div class="form-group" style="height:25px">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-4">
                                            <select id="slCompany" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group" style="height:25px">
                                        <label class="col-md-3 control-label">Operator</label>
                                        <div class="col-md-4">
                                            <select id="slOperator" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>



    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")


    <div class="row panelSearchResult">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblData">
                        <thead>
                            <tr>
                                <th class="datatable-col-100">Sonumb</th>
                                <th class="datatable-col-200">Site Name</th>
                                <th class="datatable-col-100">Site ID</th>
                                <th class="datatable-col-100">Operator</th>
                                <th class="datatable-col-100">Company</th>
                                <th class="datatable-col-100">RFI Date</th>
                                <th class="datatable-col-100">SLD Date</th>
                                <th class="datatable-col-100">Status Tenant</th>
                                <th class="datatable-col-100">Status Accrue</th>
                                <th class="datatable-col-100">Date Start</th>
                                <th class="datatable-col-100">Date End</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>


<div class="modal fade" id="mdlDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg" style="width:50%; height:100%;  ">
        <div class="modal-content">
            <input type="hidden" id="inHiddenSonumb" />
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Request Hold-Stop Accrue</h4>
            </div>
            <div class="modal-body">


                <div class="row">
                    @*<div class="col-md-10">*@
                    @*<div class="form-group" style="height:25px">*@

                    <div class="col-md-14">
                        <label class="col-md-5 control-label" style="font-weight:bold" align="left">Action</label>
                        <div class="col-md-3">
                            <label class="radio-inline">
                                <input type="radio" id="opHold" value="Hold" name="rbAction" />Hold
                            </label>
                            <label class="radio-inline">
                                <input type="radio" id="opStop" value="Stop" name="rbAction" />Stop
                            </label>
                        </div>
                    </div>
                </div>
                @*<br />*@
                <div class="row">
                    <div class="col-md-14">
                        <label class="col-md-5 control-label" style="font-weight:bold" align="left">Effective Hold Accrue</label>
                        <div class="col-md-3">
                            <input type="date" id="sldateFrom" style="width:140px;  font-size:12px;" placeholder="dd-MM-yyyy" class="form-control select2" />
                        </div>

                        <div class="col-md-3">
                            <input type="date" id="sldateEnd" style="width:140px; font-size:12px;" placeholder="dd-MM-yyyy" class="form-control select2" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-14" style="height:5px">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-14">
                        <label class="col-md-5 control-label" style="font-weight:bold" align="left">Upload Document</label>
                    </div>
                    <div class="col-md-7">
                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                            <div class="form-control" data-trigger="fileinput">
                                <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                <span class="fileinput-filename"></span>
                            </div>
                            <span class="input-group-addon btn btn-default btn-file">
                                <span class="fileinput-new" style="height:5px">Select file</span><span class="fileinput-exists" style="height:5px">Change</span>
                                <input type="file" name="..." id="fileToUpload1" accept=".pdf,.doc" style="height:5px" title="* Only PDF File or Word File">
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-14" style="height:5px">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-14">
                        <label class="col-md-5 control-label" style="font-weight:bold" align="left">Remaks</label>
                    </div>
                    <div class="col-md-7">
                        <textarea rows="7" cols="150" name="comment" id="txRemaks" class="form-control text"></textarea>
                    </div>
                </div>
                <br />
                <div class="row">
                    <center>
                        <button type="button" id="btSubmit" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                            <i class="fa fa-save"></i> Submit
                        </button>
                        <button type="button" id="btCancel" class="btn blue-oleo">
                            <i class="fa fa-close"></i> Cancel
                        </button>
                    </center>
                </div>


            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Content/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/TransactionRevenue/MasterlistAccrue.js")" type="text/javascript"></script>
