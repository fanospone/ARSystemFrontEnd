@{
    ViewBag.Title = "Inflasi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    <div class="row">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="fa fa-table"></i>
                    <span class="caption-subject bold">Kurs IDR</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-12" style="height:50px;">
                        <button type="button" class="btn blue mt-ladda-btn ladda-button" id="addNewKurs"><i class="fa fa-plus"></i> Add New Kurs</button>
                    </div>
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered table-hover" id="tblSummary" cellspacing="0">
                            <thead>
                                <tr>
                                    <th rowspan="2" class="text-center" style="vertical-align:text-top">Action</th>
                                    <th class="text-center" style="vertical-align:text-top">Start Periode</th>
                                    <th class="text-center" style="vertical-align:text-top">End Periode</th>
                                    <th rowspan="2" class="text-center" style="vertical-align:text-top">Kurs IDR</th>
                                    <th rowspan="2" class="text-center" style="vertical-align:text-top">Attachment File</th>
                                </tr>
                                <tr>
                                    <td style='border: 1px solid #e7ecf1'>
                                        <div class="input-group input-group-sm">
                                            <input class="form-control tbxSearch" type="text" id="tbxSearchStartPeriode" placeholder="Search for..." readonly>
                                            <span class="input-group-btn">
                                                <button class="btn blue" onclick="document.getElementById('tbxSearchStartPeriode').value = ''">
                                                    <i class="fa fa-close"></i>
                                                </button>
                                                <button class="btn blue btnSearch" type="button">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </td>
                                    <td style='border: 1px solid #e7ecf1'>
                                        <div class="input-group input-group-sm">
                                            <input type="text" class="form-control txtSearch" id="tbxSearchEndPeriode" placeholder="Search for..." readonly>
                                            <span class="input-group-btn">
                                                <button class="btn blue" onclick="document.getElementById('tbxSearchEndPeriode').value = ''">
                                                    <i class="fa fa-close"></i>
                                                </button>
                                                <button class="btn blue btnSearch" type="button">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="mdlCreateEditKurs" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-inf-form">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h5 class="modal-title">
                    <i class="fa fa-edit"></i>
                    <span class="caption-subject bold">Add New Kurs</span>
                </h5>
            </div>

            <div class="modal-body" id="createEditKurs">
            </div>
        </div>
    </div>
</div>


<script type="text/html" id="formCreateEditKurs">
    <div class="row">

       
        <div class="col-md-12">
            <label class="control-label col-md-2">Start Periode</label>
            <div class="col-md-3">
                <input placeholder="Select date" class="form-control" type="text" id="txtStartDate" />
                @*<div class="input-group">
                    <input class="form-control" type="text" id="txtStartDate" />
                    <div class="input-group-addon">
                        <span class="fa fa-calendar"></span>
                    </div>
                </div>*@
            </div>
            <div class="col-md-1"></div>
            <label class="control-label col-md-2">End Periode</label>
            <div class="col-md-3">
                <input placeholder="Select date" type="text" id="txtEndDate" class="form-control">
            </div>
        </div>
        <div class="col-md-12" style="height:10px;"></div>
        <div class="col-md-12">
            <label class="control-label col-md-2">Kurs IDR</label>
            <div class="col-md-3">
                <input class="form-control" type="text" onkeypress="return Common.Function.IsNumberKey(event)" id="txtKursIDR" />
            </div>
        </div>
        <div class="col-md-12" style="height:10px;"></div>
        <div class="col-md-12">
            <label class="control-label col-md-2">Attachment</label>
            <div class="col-md-3">
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <div class="input-group input-large">
                        <div class="form-control uneditable-input input-fixed input-medium" data-trigger="fileinput">
                            <i class="fa fa-file fileinput-exists"></i>&nbsp;
                            <span id="txtAttachment" class="fileinput-filename"> </span>
                        </div>
                        <div class="input-group-addon btn default btn-file">
                            <span id="slFile1" class="fileinput-new"> Select file </span>
                            <span id="chFile1" class="fileinput-exists"> Change </span>
                            <input type="file" name="..." id="fileAttach" required data-parsley-file-validation="fileAttach1|pdf,jpg,jpeg,png|2097152">
                        </div>
                        <a href="javascript:;" id="rmFile1" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                    </div>
                    <div>
                        <small>
                            max size: 2 MB <br />
                            Format: .doc .docs .xls .xlsx .pdf, .jpg, .jpeg, .png
                        </small>
                    </div>
                </div>
                @*<input type="file" name="..." id="fileAttachment" required data-parsley-file-validation="fileAttach1|pdf,jpg,jpeg,png|2097152">*@
            </div>
        </div>
        <div class="col-md-12" style="height:20px;"></div>
        <div class="col-md-12 p-t-25 p-b-10" style="text-align:center;border-top:1px solid #efefef">
            <button id="btnSave" title="Save" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in" type="button"><i class="fa fa-save"></i>&nbsp;Save</button>
            <button id="btnReset" title="Reset" class="btn blue-oleo mt-ladda-btn ladda-button" data-style="zoom-in" type="button"><i class="fa fa-refresh"></i>&nbsp;Reset</button>
            <button type="button" class="btn red" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i> Close</button>
        </div>










    </div>
</script>

<script src="@Url.Content("~/scripts/RevenueSystem/Kurs.js")" type="text/javascript"></script>
