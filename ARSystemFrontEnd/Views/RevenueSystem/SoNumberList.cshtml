@using ARSystemFrontEnd.Helper
@{
    ViewBag.Title = "So Number List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@

    <div class="row filter">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">

                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Account</label>
                                                <div class="col-md-8">
                                                    <select id="fAccount" class="form-control"></select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Year</label>
                                                <div class="col-md-8">
                                                    <select id="fYear" class="form-control select2"></select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Company</label>
                                                <div class="col-md-8">
                                                    <select id="fCompany" class="form-control select2"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Regional</label>
                                                <div class="col-md-8">
                                                    <select id="fRegional" class="form-control select2"></select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Operator</label>
                                                <div class="col-md-8">
                                                    <select id="fOperator" class="form-control select2"></select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Product</label>
                                                <div class="col-md-8">
                                                    <select id="fProduct" class="form-control select2"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered datatable-custom-width" id="tblSonumbList">
                        <thead>
                            <tr>
                                <th class="datatable-col-50">No</th>
                                <th class="datatable-col-150">So Number</th>
                                <th class="datatable-col-150">Site ID</th>
                                <th class="datatable-col-150">Site Name</th>
                                <th class="datatable-col-150">Customer ID</th>
                                <th class="datatable-col-150">Regional</th>
                                <th class="datatable-col-150">Product Name</th>
                                <th class="datatable-col-150">Status</th>
                                <th class="datatable-col-50">Stip Siro</th>
                                <th class="datatable-col-50">Stip ID</th>
                                <th class="datatable-col-150">Stip Category</th>
                                <th class="datatable-col-150">Accrued</th>
                                <th class="datatable-col-150">Unearned</th>
                                <th class="datatable-col-150">Amount Revenue</th>

                            </tr>
                        </thead>
                        <tfoot align="right">
                            <tr>
                                <th class="datatable-col-50"></th>
                                <th class="datatable-col-150"></th>
                                <th class="datatable-col-150"></th>
                                <th class="datatable-col-150"></th>
                                <th class="datatable-col-150"></th>
                                <th class="datatable-col-150"></th>
                                <th class="datatable-col-150"></th>
                                <th class="datatable-col-150"></th>
                                <th class="datatable-col-50"></th>
                                <th class="datatable-col-50"></th>
                                <th class="datatable-col-150"></th>
                                <th class="datatable-col-150"></th>
                                <th class="datatable-col-150"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</section>

@*
    Parsing Parameters:
    window.location.href = "/RevenueSystem/SoNumberList?strGroupBy="+ fGroupBy +"&strAccount=" + fAccount + "&intYear=" + fYear + "&strCompanyId=" + fCompanyId
            + "&strRegionName=" + fRegionalName + "&strOperatorId=" + fOperatorId + "&strProduct=" + fProduct+"&strDesc="+desc+"&intMonth="+month;
*@

<script src="@Url.ContentVersion("~/scripts/RevenueSystem/SoNumberList.js")" type="text/javascript"></script>