
@{
    ViewBag.Title = "UploadAccruePerDept";
}
<section id="pnlUploadAccruePerDept">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body" style="margin-left:-350px">
                            <div class="row">
                                <div class="col-md-10">
                                    <label class="col-md-5 control-label" style="font-weight:bold" align="left">Category</label>
                                    <div class="col-md-7">
                                        <label class="radio-inline">
                                            <input type="radio" id="opHold" value="Accrue" name="rbcategory" required />Accrue Per Departement
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" id="opStop" value="Overquota" name="rbcategory" />Overquota
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" id="opStop" value="Overblast" name="rbcategory" />Overblast
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10" style="height:15px">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    <label class="col-md-5 control-label" style="font-weight:bold" align="left">Upload Data</label>
                                    <div class="col-md-3">
                                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                            <div class="form-control" data-trigger="fileinput">
                                                <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                                <span class="fileinput-filename"></span>
                                            </div>
                                            <span class="input-group-addon btn btn-default btn-file">
                                                <span class="fileinput-new" style="height:5px">Select file</span><span class="fileinput-exists" style="height:5px">Change</span>
                                                <input type="file" name="..." id="fileToUpload1" accept=".xls,.xlsx" style="height:5px" title="* Only Excel File">
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10" style="height:15px">
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btDownloadTemplate" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-download"></i> Download Template
                            </button>
                            <button type="button" id="btUpload" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-upload"></i> Upload
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

