
@{
    ViewBag.Title = "Final Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container {
    width: 30em;
    overflow-x: auto;
    white-space: nowrap;
}
</style>
<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Periode</label>
                                        <div class="col-md-9">
                                            <div class="col-md-5">
                                                <input type="text" id="tbSearchPeriode" size="16" class="form-control datepicker" placeholder="Input Month Period">
                                            </div>
                                            <div class="col-md-3">
                                                <select id="slSearchPeriodeWeek" class="form-control select2" placeholder="Week"></select>
                                            </div>
                                        </div>
                                    </div>

                                </div>


                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tabbable tabbable-tabdrop" id="tabAccrue">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tabAccrueUser" data-toggle="tab">Confirm User</a>
                            </li>
                            <li>
                                <a href="#tabAccrueFinal" data-toggle="tab">Final Confirm</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabAccrueUser" style="overflow-x:auto;">
                                @*<i class="fa fa-file-excel-o" id="exportExcelUser" title="Export to Excel"></i>*@
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryDataUser">
                                    <thead></thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                            <div class="tab-pane" id="tabAccrueFinal">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                                    <thead>
                                        <tr>

                                            @*<th class="datatable-col-10" rowspan="3">No</th>*@
                                            <th class="datatable-col-250 text-center" rowspan="3"><label id="lbMonth"><b>Division</b></label><br /></th>
                                            <th style="width:600px;" colspan="4" class="text-center"><label id="lbMonth"><b>NEW</b></label></th>
                                            <th style="width:600px;" colspan="4" class="text-center"><label id="lbMonth"><b>RENEWAL</b></label></th>
                                            <th style="width:300px;" colspan="2" rowspan="2" class="text-center"><label id="lbMonth"><b>TOTAL</b></label></th>
                                            <th class="datatable-col-100 text-center" rowspan="3"><label id="lbMonth"><b>%</b></label></th>
                                        </tr>
                                        <tr>

                                            <th class="datatable-col-300 text-center" colspan="2">CURR</th>
                                            <th class="datatable-col-300 text-center" colspan="2">OD </th>
                                            <th class="datatable-col-300 text-center" colspan="2">CURR</th>
                                            <th class="datatable-col-300 text-center" colspan="2">OD</th>


                                        </tr>
                                        <tr>
                                            <th class="datatable-col-100 text-center">No Of Site</th>
                                            <th class="datatable-col-200 text-center">Amount (Mio)</th>
                                            <th class="datatable-col-100 text-center">No Of Site</th>
                                            <th class="datatable-col-200 text-center">Amount (Mio)</th>
                                            <th class="datatable-col-100 text-center">No Of Site</th>
                                            <th class="datatable-col-200 text-center">Amount (Mio)</th>
                                            <th class="datatable-col-100 text-center">No Of Site</th>
                                            <th class="datatable-col-200 text-center">Amount (Mio)</th>
                                            <th class="datatable-col-100 text-center">No Of Site</th>
                                            <th class="datatable-col-200 text-center">Amount (Mio)</th>

                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <td>Grand Total</td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>

                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <button type="button" id="btReConfirm" class="btn green">
                            <i class="fa fa-check"></i>Re Confirm
                        </button>
                        <button type="button" id="btFinalConfirm" class="btn blue">
                            <i class="fa fa-arrow-right"></i> Final Confirm
                        </button>
                        <button type="button" id="btExportExcel" class="btn yellow">
                            <i class="fa fa-file-excel-o"></i> Export to Excel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</section>

<div id="mdlConfirm" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width: 25%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title"><label id="lblDetailAdd">Confirm</label></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-md-12 control-label text-center">Are You Sure to Confirm?</label>
                        </div>
                    </div>
                    <div class="col-md-6 col-md-offset-4">
                        <button type="button" id="btYesConfirm" class="btn green">
                            <i class="fa fa-check"></i> Yes
                        </button>

                        <button type="button" data-dismiss="modal" id="btNoConfirm" class="btn red">
                            <i class="fa fa-times"></i> No
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="hdAllowProcess" value="@ViewBag.AllowProcess" />
<script src="@Url.Content("~/scripts/Accrue/FinalConfirmation.js")" type="text/javascript"></script>