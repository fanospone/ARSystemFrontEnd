                                <th class="datatable-col-100">Customer</th>
                                <th class="datatable-col-100">RFI Date </th>
                                <th class="datatable-col-100">SLD Date </th>
                                <th class="datatable-col-100">BAPS Date </th>
                                <th class="datatable-col-100">Start Date BAPS </th>
                                <th class="datatable-col-100">End Date BAPS </th>
                                <th class="datatable-col-100">Tenant Type </th>
                                <th class="datatable-col-100">BaseLease Price </th>
                                <th class="datatable-col-100">Service Price </th>
                                <th class="datatable-col-100">Total Amount </th>
                                <th class="datatable-col-50">Currency </th>
                                <th class="datatable-col-100">Mio </th>
                                <th class="datatable-col-50">Month </th>
                                <th class="datatable-col-100">Start Date Accrue </th>
                                <th class="datatable-col-100">End Date Accrue </th>

                                <th class="datatable-col-50">D </th>
                                <th class="datatable-col-50">OD </th>
                                <th class="datatable-col-100">OD Category</th>
                                <th class="datatable-col-100">Region </th>

                                <th class="datatable-col-100">Type </th>
                                <th class="datatable-col-100">Department</th>
                                <th class="datatable-col-100">Status </th>
                                <th class="datatable-col-100">Remarks </th>

                            </tr>
                        </thead>
                    </table>
                    <div class="row" id="divRemarks" style="display:none">
                        <div class="col-md-6">
                            <label class="col-md-3 control-label">Remarks</label>
                            <div class="col-md-7">
                                <textarea id="tbRemarks" rows="4" cols="50" class="form-control" maxlength="255"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row col-md-12 text-center">
                <button type="button" id="btSubmit" class="btn green">
                    <i class="fa fa-check"></i> Submit
                </button>

                <button type="button" id="btCancelAdd" class="btn red">
                    <i class="fa fa-times"></i> Cancel
                </button>
            </div>

        </div>
    </div>
</section>

<div class="modal fade" id="mdlDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Detail/Update Data</h4>
            </div>
            <div class="modal-body">
                <form action="#" id="formDetailData" class="sky-form">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">SO Number</label>
                                        <input type="text" id="tbDetailSONumber" class="form-control" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Site ID</label>
                                        <input type="text" id="tbDetailSiteID" class="form-control" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Site Name</label>
                                        <input type="text" id="tbDetailSiteName" class="form-control" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Site ID Opr</label>
                                        <input type="text" id="tbDetailSiteIDOpr" class="form-control" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Site Name Opr</label>
                                        <input type="text" id="tbDetailSiteNameOpr" class="form-control" readonly>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Start Date BAPS</label>
                                        <input type="text" id="tbDetailStartDateBAPS" class="form-control" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">End Date BAPS</label>
                                        <input type="text" id="tbDetailEndDateBAPS" class="form-control" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Start Accrue</label>
                                        <input type="text" id="tbDetailStartDateAccrue" class="form-control" readonly>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">End Accrue</label>
                                        <input type="text" id="tbDetailEndDateAccrue" class="form-control" readonly>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Base Lease Price</label>
                                        <input type="text" id="tbDetailBaseLeasePrice" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Service Price</label>
                                        <input type="text" id="tbDetailServicePrice" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Total Amount</label>
                                        <input type="text" id="tbDetailTotalAmount" class="form-control" readonly>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" id="btUpdate" class="btn blue mr-auto SaveUpdate">
                    <i class="fa fa-save"></i> Save
                </button>
                <button type="button" id="btDismiss" class="btn red CancelEdit">
                    <i class="fa fa-chevron-left"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>

