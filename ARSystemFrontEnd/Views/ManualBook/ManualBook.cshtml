
@{
    ViewBag.Title = "ManualBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="panelSummary">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject bold">Manual Book</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover" id="tblManualBook" cellspacing="0">
                        <thead>
                            <tr>
                                <th rowspan="2" class="text-center" style="vertical-align:text-top">Action</th>
                                <th class="text-center">Manual Book</th>
                                <th class="text-center">Description</th>
                            </tr>
                            <tr>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <input class="form-control tbxSearch" type="text" id="tbxSearchProjectName" placeholder="Search for...">
                                        <span class="input-group-btn">
                                            <button class="btn blue btnSearch" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <input class="form-control tbxSearch" type="text" id="tbxSearchProjectDescription" placeholder="Search for...">
                                        <span class="input-group-btn">
                                            <button class="btn blue btnSearch" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="@Url.Content("~/scripts/manualBook/manualBook.js")" type="text/javascript"></script>