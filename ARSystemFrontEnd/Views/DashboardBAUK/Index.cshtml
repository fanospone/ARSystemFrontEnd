@using ARSystemFrontEnd.Helper
@{
    ViewBag.Title = "Dashboard BAUK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dataTables_processing {
        position: absolute;
        top: 60% !important;
    }

    .page-spinner-bar {
        position: unset !important;
        width: unset !important;
    }

    .dataTables_wrapper .dataTables_processing {
        background: unset !important;
        border: none !important;
        -webkit-box-shadow: 0 0px 0px rgba(0,0,0,.1) !important;
        -moz-box-shadow: 0 0px 0px rgba(0,0,0,.1) !important;
        box-shadow: 0 0px 0px rgba(0,0,0,.1) !important;
    }

    .sweet-overlay {
        z-index: 10098;
    }

    .sweet-alert {
        z-index: 10099;
    }
</style>

<section id="panelHeader">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject bold">Dashboard BAUK</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form id="filtersearch" class="form-horizontal" role="form">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group col-md-12">
                                                    <label class="col-md-3 control-label">Company :</label>
                                                    <div class="col-md-9">
                                                        <select class="mt-multiselect btn btn-default" multiple="multiple" data-label="left" data-select-all="true" data-width="100%" data-filter="true" data-action-onchange="true" id="ddlBAUKCompany" name="ddlBAUKCompany[]"></select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group col-md-12">
                                                    <label class="col-md-3 control-label">Product Name :</label>
                                                    <div class="col-md-9">
                                                        <select class="mt-multiselect btn btn-default" multiple="multiple" data-label="left" data-select-all="true" data-width="100%" data-filter="true" data-action-onchange="true" id="ddlBAUKProduct" name="ddlBAUKProduct[]"></select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group col-md-12">
                                                    <label class="col-md-3 control-label">Customer :</label>
                                                    <div class="col-md-9">
                                                        <select class="mt-multiselect btn btn-default" multiple="multiple" data-label="left" data-select-all="true" data-width="100%" data-filter="true" data-action-onchange="true" id="ddlBAUKCustomer" name="ddlBAUKCustomer[]"></select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group col-md-12">
                                                    <label class="col-md-3 control-label">Month :</label>
                                                    <div class="col-md-4">
                                                        <select class="mt-multiselect btn btn-default" multiple="multiple" data-label="left" data-select-all="true" data-width="100%" data-filter="true" data-action-onchange="true" id="ddlBAUKMonth" name="ddlBAUKMonth[]"></select>
                                                    </div>
                                                    <label class="col-md-2 control-label">Year :</label>
                                                    <div class="col-md-3">
                                                        <select id="ddlBAUKYear" name="ddlBAUKYear" class="form-control select2"></select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group col-md-12">
                                                    <label class="col-md-3 control-label">STIP Category :</label>
                                                    <div class="col-md-9">
                                                        <select class="mt-multiselect btn btn-default" multiple="multiple" data-label="left" data-select-all="true" data-width="100%" data-filter="true" data-action-onchange="true" id="ddlBAUKCategory" name="ddlBAUKCategory[]"></select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group col-md-12">
                                                    <label class="col-md-3 control-label">Group By :</label>
                                                    <div class="col-md-9">
                                                        <select class="form-control select2" id="ddlBAUKGrouping" name="ddlBAUKGrouping">
                                                            <option value="Customer">Customer</option>
                                                            <option value="STIP">STIP</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-actions text-center">
                                    <div class="row">
                                        <button type="button" id="btnBAUKSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                            <i class="fa fa-search"></i> &nbsp; Search
                                        </button>
                                        <button type="button" id="btnBAUKReset" class="btn green">
                                            <i class="fa fa-refresh"></i> &nbsp; Reset
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <hr />
                        </div>
                        <div class="col-md-12" id="dashTabBAUK">
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#tab_Activity" data-toggle="tab"> BAUK Activity </a>
                                </li>
                                <li>
                                    <a href="#tab_Forecast" data-toggle="tab"> BAUK Forecasting </a>
                                </li>
                                <li>
                                    <a href="#tab_Achievement" data-toggle="tab"> BAUK Achievement </a>
                                </li>
                                <li>
                                    <a href="#tab_Reject" data-toggle="tab"> BAUK Reject Summary </a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade active in" id="tab_Activity">
                                    @Html.Partial("~/Views/DashboardBAUK/_BAUKActivity.cshtml")
                                </div>
                                <div class="tab-pane fade" id="tab_Forecast">
                                    @Html.Partial("~/Views/DashboardBAUK/_BAUKForecasting.cshtml")
                                </div>
                                <div class="tab-pane fade" id="tab_Achievement">
                                    @Html.Partial("~/Views/DashboardBAUK/_BAUKAchievement.cshtml")
                                </div>
                                <div class="tab-pane fade" id="tab_Reject">
                                    @Html.Partial("~/Views/DashboardBAUK/_BAUKRejectSummary.cshtml")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="panelDetail">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject bold">Dashboard BAUK Detail</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered table-hover" id="tblDetail" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th class="text-center">SO Number</th>
                                        <th class="text-center">Customer</th>
                                        <th class="text-center">Site ID</th>
                                        <th class="text-center">Site Name</th>
                                        <th class="text-center">Site ID Cust</th>
                                        <th class="text-center">Site Name Cust</th>
                                        <th class="text-center">Company</th>
                                        <th class="text-center">STIP Category</th>
                                        <th class="text-center">Product</th>
                                        <th class="text-center">Region</th>
                                        <th class="text-center">Province</th>
                                        <th class="text-center">Residence</th>
                                        <th class="text-center">STIP Amount</th>
                                        <th class="text-center">Lead Time</th>
                                        <th class="text-center">BAUK First Submit Date</th>
                                        <th class="text-center">BAUK Last Submit Date</th>
                                        <th class="text-center">BAUK Approval Date</th>
                                        <th class="text-center">BAUK Forecast Date</th>
                                        <th class="text-center">BAUK Status</th>
                                        <th class="text-center">RFI Done Date</th>
                                    </tr>
                                    <tr>
                                        @{
                                            for (int i = 0; i < 20; i++)
                                            {
                                                <td>
                                                    <div class="input-group input-group-sm">
                                                        <input id="searchInput-@i" data-index="@i" class="form-control tbxSearch" type="text" placeholder="Search for...">
                                                        <span class="input-group-btn">
                                                            <button class="btn blue btnSearch" type="button" data-id="@i">
                                                                <i class="fa fa-search"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </td>
                                            }
                                        }
                                    </tr>
                                </thead>
                            </table>
                            <div class="text-center">
                                <button type="button" id="btnBack" class="btn default btnBack">Back</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade bs-modal-lg" id="modal-reject" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Detail BAUK Reject</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered table-hover" id="tblRejectDetail" cellspacing="0">
                            <thead>
                                <tr>
                                    <th class="text-center" style="min-width:120px">SO Number</th>
                                    <th class="text-center" style="min-width:120px">Document</th>
                                    <th class="text-center" style="min-width:120px">Reject Reason </th>
                                    <th class="text-center" style="min-width:120px">Date Activity</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="text-align: center">
                <button type="button" class="btn default" id="btnCloseMdl">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script src="@Url.ContentVersion("~/scripts/DashboardBAUK/index.js")"></script>