@using ARSystemFrontEnd.Helper

<div class="row" style="margin-bottom:7px">
    <div class="col-md-6" style="text-align: left">
        <input class="make-switch" type="checkbox" data-size="small" data-width="100%" id="chkActAmount" checked="checked" data-on-color="default" data-off-color="info" data-on-text="OFF" data-off-text="ON">&nbsp; &nbsp; Amount Mode
    </div>
    <div class="col-md-6" style="text-align: right">
        <button type="button" id="btnActExport" class="btn green btn-outline">
            <i class="fa fa-file-excel-o"></i>&nbsp; Excel
        </button>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover" id="tblActivity" cellspacing="0">
            <thead>
                <tr>
                    <th rowspan="2" class="text-center" style="vertical-align:middle" id="txtActGroup">Customer</th>
                    <th rowspan="2" class="text-center" style="vertical-align:middle">RFI Done</th>
                    <th colspan="5" class="text-center">RA Review</th>
                </tr>
                <tr>
                    <th class="text-center">BAUK Submitted</th>
                    <th class="text-center">BAUK Approved</th>
                    <th class="text-center">BAUK Rejected</th>
                    <th class="text-center">Total</th>
                    <th class="text-center">Percentage</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th style="text-align:center">Total:&nbsp;&nbsp;</th>
                    <th id="totRFI"></th>
                    <th id="totSubmitted"></th>
                    <th id="totApproved"></th>
                    <th id="totRejected"></th>
                    <th id="totAllBAUK"></th>
                    <th id="totPrcAct"></th>
                </tr>
                <tr>
                    <th colspan="2" style="text-align:center">Percentage By Status:</th>
                    <th style="text-align:center" id="prcSubmitted"></th>
                    <th style="text-align:center" id="prcApproved"></th>
                    <th style="text-align:center" id="prcRejected"></th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


<script src="@Url.ContentVersion("~/scripts/DashboardBAUK/_BAUKActivity.js")"></script>