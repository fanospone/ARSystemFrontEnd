
@{
    ViewBag.Title = "InvoiceInformationDetail";
}
<h2>Invoice Information Detail</h2>

@using ARSystemFrontEnd.Helper
@{
    ViewBag.Title = "Invoice Information Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    fieldset.form-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }

    legend.form-border {
        font-size: inherit;
        text-align: left !important;
        width: auto;
        padding: 0 10px;
        border-bottom: none;
    }
</style>
<section id="filterPnltrxInvoiceInformation">
    <div class="portlet light bordered">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-body form font">
                        <section id="detail">
                            <div class="col-md-12">
                                <fieldset class="form-border">
                                    <legend class="form-border">Site Information</legend>
                                    <div class="row">
                                        <div class="col-md-6 ">
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">SONumber</label>
                                                <div class="col-md-9">
                                                    <input type='text' id='txtSONumber' class='form-control' readonly="readonly">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label ">SiteID</label>
                                                <div class="col-md-9">
                                                    <input type='text' id='txtSiteID' class='form-control margin-top-10' readonly="readonly">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Site Name</label>
                                                <div class="col-md-9">
                                                    <input type='text' id='txtSiteName' class='form-control margin-top-10' readonly="readonly">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Site ID Opr</label>
                                                <div class="col-md-9">
                                                    <input type='text' id='txtSiteIDOpr' class='form-control margin-top-10' readonly="readonly">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Site Name Opr</label>
                                                <div class="col-md-9">
                                                    <input type='text' id='txtSiteNameOpr' class='form-control margin-top-10' readonly="readonly">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Company</label>
                                                <div class="col-md-9">
                                                    <input type='text' id='txtCompany' class='form-control' readonly="readonly">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Customer</label>
                                                <div class="col-md-9">
                                                    <input type='text' id='txtCustomer' class='form-control margin-top-10' readonly="readonly">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">RFI Date</label>
                                                <div class="col-md-9">
                                                    <input type='text' id='txtDate' class='form-control margin-top-10' readonly="readonly">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Status</label>
                                                <div class="col-md-9">
                                                    <input type='text' id='txtStatus' class='form-control margin-top-10' readonly="readonly">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </section>
                        <div class="row panelTab">
                            <div class="col-md-12">
                                <div class="portlet-body">
                                    <div class="tabbable tabbable-tabdrop" id="tabDetails">
                                        <ul class="nav nav-tabs">
                                            <li class="active">
                                                <a href="#tabSalesSystem" data-toggle="tab">Sales System Information</a>
                                            </li>
                                            <li>
                                                <a href="#tabBapsInformation" data-toggle="tab">BAPS New Information</a>
                                            </li>
                                            <li>
                                                <a href="#tabInvoiceInformation" data-toggle="tab">Invoice Information</a>
                                            </li>
                                        </ul>
                                        <div class="row panelSearchResult">
                                            @* Data Basp Validation *@
                                            <div class="tab-content">
                                                <div class="row panelBapsValidation">
                                                    <div class="col-md-12">
                                                        <div class="portlet light bordered">
                                                            <div class="portlet-title">
                                                                <div class="caption font-blue-steel">
                                                                    <i class="fa fa-table"></i>
                                                                    <span class="caption-subject">List Data</span>
                                                                </div>
                                                            </div>
                                                            <div class="portlet-body">
                                                                <div class="tab-content">
                                                                    <div class="tab-pane active" id="tabSalesSystem">
                                                                        <table class="table table-striped table-bordered table-hover" id="tblSalesSystemInformation">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th>STIP Siro</th>
                                                                                    <th>STIP Number</th>
                                                                                    <th>STIP Code</th>
                                                                                    <th>Start Lease Period</th>
                                                                                    <th>End Lease Period</th>
                                                                                    <th>OMPrice</th>
                                                                                    <th>Price Amount</th>
                                                                                </tr>
                                                                            </thead>
                                                                        </table>
                                                                    </div>
                                                                    <div class="tab-pane active" id="tabBapsInformation">
                                                                        <table class="table table-striped table-bordered table-hover" id="tblBAPSNewInformation">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th>BAPS Number</th>
                                                                                    <th>BAPS Date</th>
                                                                                    <th>Efective Date</th>
                                                                                    <th>Start Lease Date</th>
                                                                                    <th>End Lease Date</th>
                                                                                    <th>Basic Price</th>
                                                                                    <th>Service Price</th>
                                                                                    <th>Stip Siro</th>
                                                                                </tr>
                                                                            </thead>
                                                                        </table>
                                                                    </div>
                                                                    <div class="tab-pane active" id="tabInvoiceInformation">
                                                                        <table class="table table-striped table-bordered table-hover" id="tblInvoiceInformation">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th>SONumber</th>
                                                                                    <th>Customer Site ID</th>
                                                                                    <th>Customer Site Name</th>
                                                                                    <th>Tenant Type</th>
                                                                                    <th>RFI Date Operator</th>
                                                                                    <th>STIP Siro</th>
                                                                                    <th>Start Invoice</th>
                                                                                    <th>End Invoice</th>
                                                                                    <th>RA Activity Name</th>
                                                                                    <th>PO Number</th>
                                                                                    <th>DOC PO</th>
                                                                                    <th>BAPS Number</th>
                                                                                    <th>BAPS Confirm Date</th>
                                                                                    <th>Doc BAPS</th>
                                                                                    <th>Basic Price</th>
                                                                                    <th>Service Price</th>
                                                                                    <th>Amount Invoice</th>
                                                                                    <th>No Invoice</th>
                                                                                    <th>Created Date Invoice</th>
                                                                                    <th>Posting Date</th>
                                                                                    <th>Paid Status</th>
                                                                                    <th>Paid Date</th>
                                                                                </tr>
                                                                            </thead>
                                                                        </table>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="background-color:#f7f7f7;" class="form-actions text-center">
                        <button type="button" class="btn blue-oleo" id="btnBack">
                            <i class="fa fa-chevron-left"></i> Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<input type="hidden" id="hdSONumber" value="@ViewBag.SONumber" />
<script type="text/javascript">
    var ViewState = {
        SONumber: "@ViewBag.SONumber"
    }
</script>
<a id="dlink" style="display:none;"></a>
<script src="@Url.ContentVersion("~/scripts/ISPInvoiceInformation/InvoiceInformationDetail.js")" type="text/javascript"></script>
