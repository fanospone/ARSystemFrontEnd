@using ARSystemFrontEnd.Helper

@{
    ViewBag.Title = "Invoice Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="pnlSummary">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6 ">                                   
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slCompany" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer</label>
                                        <div class="col-md-9">
                                            <select id="slCustomer" class="form-control seslect2"></select>
                                        </div>
                                    </div>         
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">STIP Code</label>
                                        <div class="col-md-9">
                                            <select id="slStipCode" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btnSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @*@Html.Partial("_PanelSearchBegin")*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject bold">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblISPHeader">
                        <thead>
                            <tr>
                                <th rowspan="2" style="text-align:center;vertical-align:middle;min-width: 50px;">Action</th>
                                <th style="text-align:center;vertical-align:middle;min-width: 100px;"> SONumber </th>
                                <th style="text-align:center;vertical-align:middle;min-width: 100px;"> Site ID </th>
                                <th style="text-align:center;vertical-align:middle;min-width: 200px;"> Site Name </th>
                                <th style="text-align:center;vertical-align:middle;min-width: 100px;"> Site ID Opr </th>
                                <th style="text-align:center;vertical-align:middle;min-width: 200px;"> Site Name Opr </th>
                                <th rowspan="2" style="text-align:center;vertical-align:middle;min-width:200px">Company</th>
                                <th rowspan="2" style="text-align:center;vertical-align:middle;min-width:100px">Customer</th>
                                <th rowspan="2" style="text-align:center;vertical-align:middle;min-width:100px">STIP Name</th> 
                            </tr>
                            <tr>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <input type='text' placeholder='SONumber' id='fSONumber' class='form-control txtTableSearch'>
                                        <span class="input-group-btn">
                                            <button class="btn blue btnSearchFilter" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <input type='text' placeholder='SiteID' id='fSiteID' class='form-control txtTableSearch'>
                                        <span class="input-group-btn">
                                            <button class="btn blue btnSearchFilter" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <input type='text' placeholder='SiteName' id='fSiteName' class='form-control txtTableSearch'>
                                        <span class="input-group-btn">
                                            <button class="btn blue btnSearchFilter" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <input type='text' placeholder='SiteIDOpr' id='fSiteIDOpr' class='form-control txtTableSearch'>
                                        <span class="input-group-btn">
                                            <button class="btn blue btnSearchFilter" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <input type='text' placeholder='SiteNameOpr' id='fSiteNameOpr' class='form-control txtTableSearch'>
                                        <span class="input-group-btn">
                                            <button class="btn blue btnSearchFilter" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        </thead>
                     
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="@Url.ContentVersion("~/scripts/ISPInvoiceInformation/InvoiceInformation.js")" type="text/javascript"></script>
