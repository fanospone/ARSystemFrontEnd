    <div class="modal fade" id="mdlRequestDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
        <div class="modal-dialog modal-lg" style="width:50%">
            <div class="portlet box blue">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title"><b>Request Detail</b></h4>
                    </div>
                    <div class="portlet-body form">
                        <form id="formRequestDetail" class="form-horizontal" role="form">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-10">
                                        <div class="form-group EffectiveDate">
                                            <label class="col-md-3 control-label">Effective Date</label>
                                            <div class="col-md-8">
                                                <input type="text" class="form-control  datepicker" id="iEffectiveDate" readonly placeholder="Effective Date" disabled />
                                                <label class="col-md-8 control-label">
                                                    <i style="color:red; font-size:10px"><span id="spanEffectiveDate"></span></i>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Category Case</label>
                                            <div class="col-md-8">
                                                <select id="iCategoryCaseID" class="form-control" required disabled></select>
                                                <input type="hidden" id="iTrxDetail" />
                                                <input type="hidden" id="iSONumber" />
                                                <label class="col-md-8 control-label">
                                                    <i style="color:red; font-size:10px"><span id="spanCategory"></span></i>
                                                </label>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Detail Case</label>
                                            <div class="col-md-8">
                                                <select id="iDetailCaseID" class="form-control" required disabled></select>
                                                <label class="col-md-8 control-label">
                                                    <i style="color:red; font-size:10px"><span id="spanCaseDetail"></span></i>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Remarks</label>
                                            <div class="col-md-8">
                                                <textarea class="form-control" id="iRemarks" rows="10" cols="10" required disabled></textarea>
                                                <label class="col-md-8 control-label">
                                                    <i style="color:red; font-size:10px"><span id="spanRemarks"></span></i>
                                                </label>

                                            </div>
                                        </div>
                                        <div class="form-group fileUpload">
                                            <label class="control-label col-md-3">File Uploaded</label>
                                            <div class="col-md-8">
                                                <div id="fileUploaded">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions text-center">
                                <button type="button" data-dismiss="modal" id="btnTrxCancelDetail" class="btn red">
                                    <i class="fa fa-times"></i> Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
