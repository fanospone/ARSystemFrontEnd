<div id="pnlDetail" class="row" style="visibility:hidden">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="tab-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="caption font-blue-steel">
                                        <i class="fa fa-table"></i>
                                        <span class="caption-subject">Request Detail</span>&nbsp;<span id="spanFormNumber"></span>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tabApprovalBAPS">
                                            <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblRequestDetail">
                                                <thead>
                                                    <tr>
                                                        <th class="datatable-col-25 text-center">#Row</th>
                                                        <th class="datatable-col-100 text-center">Action</th>
                                                        <th class="datatable-col-100 text-center">SO Number</th>
                                                        <th class="datatable-col-100 text-center">Re Active</th>
                                                        <th class="datatable-col-100 text-center">Site ID</th>
