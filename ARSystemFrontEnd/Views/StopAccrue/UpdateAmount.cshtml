                                                        <th class="datatable-col-200 text-center">Company</th>
                                                        <th class="datatable-col-200 text-center">Customer</th>
                                                        <th class="datatable-col-100 text-center">Tenant Type</th>
                                                        <th class="datatable-col-100 text-center">RFI Date</th>
                                                        <th class="datatable-col-150 text-center">Category Case</th>
                                                        <th class="datatable-col-150 text-center">Detail Case</th>
