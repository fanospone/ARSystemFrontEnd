
@{
    ViewBag.Title = "AR Ratio Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Year</label>
                                        <div class="col-md-9">
                                            <select id="slYear" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Month</label>
                                        <div class="col-md-9">
                                            <select id="slMonth" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult monthly">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover font-xs datatable-custom-width" id="tblMonthlyData">
                        <thead>
                            <tr class="bg-primary">
                                <th class="text-center datatable-col-200" id="thCategory" rowspan="2" style="vertical-align:middle !important">Category</th>
                                <th class="text-center" id="thYear" colspan="12" style="width:1200px;"></th>
                            </tr>
                            <tr class="bg-primary">
                                <th class="text-center datatable-col-100">Jan</th>
                                <th class="text-center datatable-col-100">Feb</th>
                                <th class="text-center datatable-col-100">Mar</th>
                                <th class="text-center datatable-col-100">Apr</th>
                                <th class="text-center datatable-col-100">May</th>
                                <th class="text-center datatable-col-100">Jun</th>
                                <th class="text-center datatable-col-100">Jul</th>
                                <th class="text-center datatable-col-100">Aug</th>
                                <th class="text-center datatable-col-100">Sep</th>
                                <th class="text-center datatable-col-100">Oct</th>
                                <th class="text-center datatable-col-100">Nov</th>
                                <th class="text-center datatable-col-100">Dec</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row panelSearchResult weekly">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblWeeklyData">
                        <thead>
                            <tr class="bg-primary">
                                <th rowspan="2" class="text-center datatable-col-150" style="vertical-align:middle !important">Category</th>
                                <th colspan="6" id="thMonthName" class="text-center"></th>
                            </tr>
                            <tr class="bg-primary">
                                <th  class="text-center datatable-col-150">Week 1</th>
                                <th  class="text-center datatable-col-150">Week 2</th>
                                <th  class="text-center datatable-col-150">Week 3</th>
                                <th  class="text-center datatable-col-150">Week 4</th>
                                <th  class="text-center datatable-col-150">Week 5</th>
                                <th  class="text-center datatable-col-150">Week 6</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="icon-bar-chart"></i>
                        <span class="caption-subject">Target to Ratio Graph</span>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                        <a href="javascript:;" class="reload"> </a>
                        <a href="javascript:;" class="fullscreen"> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div id="divChart" class="chart" style="height: 400px;"></div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script src="@Url.Content("~/Content/global/plugins/amcharts/amcharts/amcharts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/global/plugins/amcharts/amcharts/serial.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/dashboard/ARRatio.js")" type="text/javascript"></script>
}