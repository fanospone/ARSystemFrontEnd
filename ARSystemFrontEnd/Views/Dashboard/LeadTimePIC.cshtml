
@{
    ViewBag.Title = "Lead Time PIC Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Year</label>
                                        <div class="col-md-9">
                                            <select id="slYear" class="form-control select2">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Month</label>
                                        <div class="col-md-9">
                                            <select id="slMonth" class="form-control select2">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th rowspan="2" class="text-center datatable-col-100" id="thMonthName">Month Name</th>
                                <th colspan="3" class="text-center datatable-col-300">Verificator</th>
                                <th colspan="3" class="text-center datatable-col-300">Inputer</th>
                                <th colspan="3" class="text-center datatable-col-300">Finishing</th>
                                <th colspan="3" class="text-center datatable-col-300">AR Data</th>
                            </tr>
                            <tr>
                                <th class="datatable-col-100">Curr</th>
                                <th class="datatable-col-100">OD</th>
                                <th class="datatable-col-100">AVG</th>
                                <th class="datatable-col-100">Curr</th>
                                <th class="datatable-col-100">OD</th>
                                <th class="datatable-col-100">AVG</th>
                                <th class="datatable-col-100">Curr</th>
                                <th class="datatable-col-100">OD</th>
                                <th class="datatable-col-100">AVG</th>
                                <th class="datatable-col-100">Curr</th>
                                <th class="datatable-col-100">OD</th>
                                <th class="datatable-col-100">AVG</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlDetailLeadTime">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblDetailLeadTime">
                        <thead>
                            <tr>
                                <th class="datatable-col-50">Company</th>
                                <th class="datatable-col-50">Operator</th>
                                <th class="datatable-col-100">SO Number</th>
                                <th class="datatable-col-200">Collection Period</th>
                                <th class="datatable-col-150">Invoice Number</th>
                                <th class="datatable-col-150">Activity</th>
                                <th class="datatable-col-200">Log Activity</th>
                                <th class="datatable-col-150">Log User</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row" id="tblDetailButtons">
        <div class="col-md-12 text-right">
            <div class="form-group">
                <button type="button" id="btBackLeadTime" class="btn blue-oleo">
                    <i class="fa fa-chevron-left"></i> Back
                </button>
            </div>
        </div>
    </div>
</section>

<script src="@Url.Content("~/scripts/dashboard/LeadTimePIC.js")" type="text/javascript"></script>