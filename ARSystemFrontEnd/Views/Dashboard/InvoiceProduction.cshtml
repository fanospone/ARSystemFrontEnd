                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                @*BODY-END*@         
            </div>    
        </div>

    </div>
    @*OUT STANDING - END*@
</section>

<section id="pnlDetail" style="display:none;">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject ">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tabbable tabbable-tabdrop">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tabHeader" data-toggle="tab">Header</a>
                            </li>
                            <li>
                                <a href="#tabDetail" data-toggle="tab">Detail</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabHeader">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tbHeader">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th class="datatable-col-150">No. Invoice</th>
                                            <th class="datatable-col-350">Subject Invoice</th>
                                            <th class="datatable-col-150">Amount Invoice</th>
                                            <th class="datatable-col-150">Operator</th>
                                            <th class="datatable-col-250">Company</th>
                                            <th class="datatable-col-100">Type Invoice</th>
                                            <th class="datatable-col-100">Created Invoice</th>
                                            <th class="datatable-col-100">Posting Invoice</th>
                                            <th class="datatable-col-150">Submit Doc. Invoice</th>
                                            <th class="datatable-col-150">Approve Doc. Invoice</th>
                                            <th class="datatable-col-150">Receipt Invoice Date</th>
                                            <th class="datatable-col-100">Type Payment</th>
                                            <th class="datatable-col-100">Payment Date</th>
                                            <th class="datatable-col-150">Document Payment</th>
                                            <th class="datatable-col-200">Document Payment Integration</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="tab-pane" id="tabDetail">
                                <table class="table table-striped table-bordered table-hover" id="tbDetail">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-25">No</th>
                                            <th class="datatable-col-100">SO Number</th>
                                            <th class="datatable-col-100">SiteID</th>
                                            <th class="datatable-col-250">Site Name</th>
                                            <th class="datatable-col-100">Site ID Opr</th>
                                            <th class="datatable-col-250">Site Name Opr</th>
                                            <th class="datatable-col-150">Operator</th>
                                            <th class="datatable-col-250">Company</th>
                                            <th class="datatable-col-100">BAPS Type</th>
                                            <th class="datatable-col-100">Start Periode</th>
                                            <th class="datatable-col-100">End Periode</th>
                                            <th class="datatable-col-100">Amount Inv.</th>
                                            <th class="datatable-col-100">Receive Date</th>
                                            <th class="datatable-col-100">Confirm Date</th>
                                            <th class="datatable-col-150">No. Inv.</th>
                                            <th class="datatable-col-100">Create Inv. Date</th>
                                            <th class="datatable-col-100">Posting Date</th>
                                            <th class="datatable-col-100">Print Date</th>
                                            <th class="datatable-col-100">Submit Checklist Date</th>
                                            <th class="datatable-col-100">Approve Checklist date</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                                <button type="button" id="btBack" class="btn blue-oleo">
                                    <i class="fa fa-chevron-left"></i> Back
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

