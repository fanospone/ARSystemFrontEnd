
@{
    ViewBag.Title = "Dashboard Invoice Production";
}

<section id="pnlSummary">
    @*FILTER - BEGIN*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject ">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer</label>
                                        <div class="col-md-9">
                                            <select id="slCustomer" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slCompany" class="form-control select2"></select>
                                        </div>
                                     
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">BAPS Receive Year</label>
                                        <div class="col-md-9">
                                            <div class="col-md-5">
                                                <input type="text" id="tbBapsReceiveYearStart" size="16" class="form-control datepicker" placeholder="Start Year Baps Receive ">
                                            </div>
                                            <div class="col-md-1 control-label">
                                                To
                                            </div>
                                            <div class="col-md-5">
                                                <input type="text" id="tbBapsReceiveYearEnd" size="16" class="form-control datepicker" placeholder="End Year Baps Receive">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label"></label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbOut" name="rbGroup" value="1" checked> Outstanding
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbProd" name="rbGroup" value="2"> Production
                                                    <span></span>
                                                </label>                                            
                                            </div>
                                        </div>
                                    </div>
                                    <div id="pnlExcludePKP">
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Exclude PKP</label>
                                            <div class="col-md-9">
                                                <input type="checkbox" id="chExcludePKP" checked class="make-switch" data-on-text="YES" data-off-text="NO">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Aging Category</label>
                                        <div class="col-md-9">
                                            <select id="slAgingCategory" class="form-control select2">
                                                <option value="">All</option>
                                                <option value="1">Rent</option>
                                                <option value="2">Other Rent</option>
                                                <option value="3">Electricity & Mini CME Reimbursable</option>
                                                <option value="4">Building Rent</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice Category</label>
                                        <div class="col-md-9">
                                            <select id="slInvoiceCategory" class="form-control select2">
                                                <option value="">All</option>
                                                <option value="1">New</option>
                                                <option value="2">Recurring</option>                                             
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Invoice Date Year</label>
                                        <div class="col-md-9">
                                            <div class="col-md-5">
                                                <input type="text" id="tbInvoiceYearStart" size="16" class="form-control datepicker" placeholder="Start Year Invoice">
                                            </div>
                                            <div class="col-md-1 control-label">
                                                To
                                            </div>
                                            <div class="col-md-5">
                                                <input type="text" id="tbInvoiceYearEnd" size="16" class="form-control datepicker" placeholder="End Year Invoice">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @*FILTER - END*@

    @*OUT STANDING - BEGIN*@
    <div class="row panelSearchResult">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
