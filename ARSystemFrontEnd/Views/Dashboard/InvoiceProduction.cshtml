                    </div>
                </div>
                @*BODY - BEGIN*@
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <a class="dashboard-stat dashboard-stat-v2 blue" id="divLT1">
                                <div class="visual">
                                    <i class="fa fa-bar-chart-o"></i>
                                </div>
                                <div class="details">
                                    <div class="desc">
                                        <h5 style="font-size:23px;"><b>LT Create Inv. To Full Paid </b></h5>
                                    </div>
