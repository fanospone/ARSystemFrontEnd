
@{
    ViewBag.Title = "Invoice Tower Summary Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Year</label>
                                        <div class="col-md-9">
                                            <select id="slYear" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Month</label>
                                        <div class="col-md-9">
                                            <select id="slMonth" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Currency</label>
                                        <div class="col-md-9">
                                            <select id="slCurrency" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult monthly">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result (in Million of IDR)</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblMonthlyData">
                        <thead>
                            <tr>
                                <th rowspan="2" class="text-center datatable-col-100">Category</th>
                                <th colspan="2" class="text-center datatable-col-150">Jan</th>
                                <th colspan="2" class="text-center datatable-col-150">Feb</th>
                                <th colspan="2" class="text-center datatable-col-150">Mar</th>
                                <th colspan="2" class="text-center datatable-col-150">Apr</th>
                                <th colspan="2" class="text-center datatable-col-150">May</th>
                                <th colspan="2" class="text-center datatable-col-150">Jun</th>
                                <th colspan="2" class="text-center datatable-col-150">Jul</th>
                                <th colspan="2" class="text-center datatable-col-150">Aug</th>
                                <th colspan="2" class="text-center datatable-col-150">Sep</th>
                                <th colspan="2" class="text-center datatable-col-150">Oct</th>
                                <th colspan="2" class="text-center datatable-col-150">Nov</th>
                                <th colspan="2" class="text-center datatable-col-150">Dec</th>
                            </tr>
                            <tr>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                                <th>Curr</th>
                                <th>OD</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row panelSearchResult weekly">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result (in Million of IDR)</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblWeeklyData">
                        <thead>
                            <tr>
                                <th rowspan="3" class="datatable-col-100 text-center">Category</th>
                                <th colspan="12" id="thMonthName" class="text-center"></th>
                            </tr>
                            <tr>
                                <th colspan="2" class="text-center">Week 1</th>
                                <th colspan="2" class="text-center">Week 2</th>
                                <th colspan="2" class="text-center">Week 3</th>
                                <th colspan="2" class="text-center">Week 4</th>
                                <th colspan="2" class="text-center">Week 5</th>
                                <th colspan="2" class="text-center">Week 6</th>
                            </tr>
                            <tr>
                                <th class="datatable-col-150">Curr</th>
                                <th class="datatable-col-150">OD</th>
                                <th class="datatable-col-150">Curr</th>
                                <th class="datatable-col-150">OD</th>
                                <th class="datatable-col-150">Curr</th>
                                <th class="datatable-col-150">OD</th>
                                <th class="datatable-col-150">Curr</th>
                                <th class="datatable-col-150">OD</th>
                                <th class="datatable-col-150">Curr</th>
                                <th class="datatable-col-150">OD</th>
                                <th class="datatable-col-150">Curr</th>
                                <th class="datatable-col-150">OD</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <section id="pnlDetailSoNumber">
        <div class="row pnlDetailSoNumber">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-blue-steel">
                            <i class="fa fa-table"></i>
                            <span class="caption-subject">Search Result (in Million of IDR)</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblDetailSoNumber">
                            <thead>
                                <tr>
                                    <th class="datatable-col-100">SO Number</th>
                                    <th class="datatable-col-100">Operator</th>
                                    <th class="datatable-col-100">Company</th>
                                    <th class="datatable-col-100">Tenant Type</th>
                                    <th class="datatable-col-150">Start</th>
                                    <th class="datatable-col-150">End</th>
                                    <th class="datatable-col-100">E = G/F</th>
                                    <th class="datatable-col-100">Rev / Month</th>
                                    <th class="datatable-col-100">Amount Inv</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="tblDetailButtons">
            <div class="col-md-12 text-right">
                <div class="form-group">
                    <button type="button" id="btBackSoNumber" class="btn blue-oleo">
                        <i class="fa fa-chevron-left"></i> Back
                    </button>
                </div>
            </div>
        </div>
    </section>

    <div class="row" id="rowGraph">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="icon-bar-chart"></i>
                        <span class="caption-subject">Lead Time per PIC</span>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                        <a href="javascript:;" class="reload"> </a>
                        <a href="javascript:;" class="fullscreen"> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div id="divChart" class="chart" style="height: 400px;"></div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script src="@Url.Content("~/Content/global/plugins/amcharts/amcharts/amcharts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/global/plugins/amcharts/amcharts/serial.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/dashboard/InvoiceTowerSummary.js")" type="text/javascript"></script>
}