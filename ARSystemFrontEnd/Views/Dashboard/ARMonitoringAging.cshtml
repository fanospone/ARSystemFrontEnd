
@{
    ViewBag.Title = "AR Monitoring Aging";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    table td{
        font-size:14px !important;
    }
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slCompany" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Operator</label>
                                        <div class="col-md-9">
                                            <select id="slOperator" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group" style="display:none">
                                        <label class="col-md-3 control-label">Invoice Type</label>
                                        <div class="col-md-9">
                                            <select id="slInvoiceType" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Amount Type</label>
                                        <div class="col-md-9">
                                            <select id="slAmountType" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Period</label>
                                        <div class="col-md-9">
                                            <input type="text" id="txtPeriod" class="form-control datepicker" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Exclude PKP</label>
                                        <div class="col-md-9">
                                            <input type="checkbox" id="chExcludePKP" checked class="make-switch" data-on-text="YES" data-off-text="NO">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchRent" name="rbSummary" value="1" checked> Summary Rent
                                                    <span></span>
                                                </label>
                                                <br />
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchOtherRent" name="rbSummary" value="2"> Summary Other Rent
                                                    <span></span>
                                                </label>
                                                <br />
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchCME" name="rbSummary" value="3"> Summary Electricity & Mini CME Reimbursable
                                                    <span></span>
                                                </label>
                                                <br />
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchBuildingRent" name="rbSummary" value="4"> Summary Building Rent
                                                    <span></span>
                                                </label>
                                                <br />
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchFirstMedia" name="rbSummary" value="5"> Summary First Media Rent
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult summary">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover font-xs" id="tblSummaryData" style="width:100%">
                        <thead>
                            <tr class="bg-primary">
                                <th class="text-center" rowspan="3" style="vertical-align:middle !important">Operator</th>
                                <th class="text-center" colspan="14">AGING</th>
                                <th class="text-center" colspan="4">SUMMARY</th>
                            </tr>
                            <tr class="bg-primary">
                                <th class="text-center" colspan="2">[No Receipt]</th>
                                <th class="text-center" colspan="2">[Current]</th>
                                <th class="text-center" colspan="2">[1-30] OD</th>                                
                                <th class="text-center" colspan="2">[31-60] OD</th>
                                <th class="text-center" colspan="2">[61-90] OD</th>
                                <th class="text-center" colspan="2">[>90] OD</th>
                                <th class="text-center" colspan="2">[TOTAL]</th>
                                <th class="text-center" rowspan="2" style="vertical-align:middle !important">% OD</th>
                                <th class="text-center" rowspan="2" style="vertical-align:middle !important">Invoice OD</th>
                            </tr>
                            <tr class="bg-primary">
                                <th class="text-center" style="width:50px">[Count]</th>
                                <th class="text-center" style="width:50px">[Amount]</th>
                                <th class="text-center">[Count]</th>
                                <th class="text-center">[Amount]</th>            
                                <th class="text-center">[Count]</th>
                                <th class="text-center">[Amount]</th>
                                <th class="text-center">[Count]</th>
                                <th class="text-center">[Amount]</th>
                                <th class="text-center">[Count]</th>
                                <th class="text-center">[Amount]</th>
                                <th class="text-center">[Count]</th>
                                <th class="text-center">[Amount]</th>
                                <th class="text-center">[Count]</th>
                                <th class="text-center">[Amount]</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="detail">
        <div class="row panelSearchResult detail">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-blue-steel">
                            <i class="fa fa-table"></i>
                            <span class="caption-subject">Search Result</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover font-xs datatable-custom-width" id="tblDetailOperator">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Operator</th>
                                    <th class="datatable-col-150">Invoice No</th>
                                    <th class="datatable-col-150">Invoice Date</th>
                                    <th class="datatable-col-150">Receipt Date</th>
                                    <th class="datatable-col-150">Due Date</th>
                                    <th class="datatable-col-150">Invoice Type</th>
                                    <th class="datatable-col-150">Overdue</th>
                                    <th class="datatable-col-150">DPP</th>
                                    <th class="datatable-col-150">VAT</th>
                                    <th class="datatable-col-150">WAPU</th>
                                    <th class="datatable-col-150">SKB</th>
                                    <th class="datatable-col-150">Penalty</th>
                                    <th class="datatable-col-150">Outstanding Invoice (Gross)</th>
                                    <th class="datatable-col-150">PIC Internal</th>
                                    <th class="datatable-col-150">PIC External</th>
                                    <th class="datatable-col-500">Subject</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="tblDetailButtons">
            <div class="col-md-12 text-right">
                <div class="form-group">
                    <button type="button" id="btBackSummary" class="btn blue-oleo">
                        <i class="fa fa-chevron-left"></i> Back
                    </button>
                </div>
            </div>
        </div>
    </div>

    
</section>

@section Scripts
{
    <script src="@Url.Content("~/Content/global/plugins/amcharts/amcharts/amcharts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/global/plugins/amcharts/amcharts/serial.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/dashboard/ARMonitoringAging.js")" type="text/javascript"></script>
}

