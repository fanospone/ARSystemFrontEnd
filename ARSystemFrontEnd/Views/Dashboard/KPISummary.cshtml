
@{
    ViewBag.Title = "KPI Summary Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Year</label>
                                        <div class="col-md-9">
                                            <select id="slYear" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Month</label>
                                        <div class="col-md-9">
                                            <select id="slMonth" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult monthly">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblMonthlyData">
                        <thead>
                            <tr>
                                <th class="datatable-col-25">No</th>
                                <th class="datatable-col-150">KPI Description</th>
                                <th class="datatable-col-100">Target KPI</th>
                                <th class="datatable-col-50">Jan</th>
                                <th class="datatable-col-50">Feb</th>
                                <th class="datatable-col-50">Mar</th>
                                <th class="datatable-col-50">Apr</th>
                                <th class="datatable-col-50">May</th>
                                <th class="datatable-col-50">Jun</th>
                                <th class="datatable-col-50">Jul</th>
                                <th class="datatable-col-50">Aug</th>
                                <th class="datatable-col-50">Sep</th>
                                <th class="datatable-col-50">Oct</th>
                                <th class="datatable-col-50">Nov</th>
                                <th class="datatable-col-50">Dec</th>
                                <th class="datatable-col-100">Bobot KPI</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row panelSearchResult weekly">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblWeeklyData">
                        <thead>
                            <tr>
                                <th class="datatable-col-25">No</th>
                                <th class="datatable-col-150">KPI Description</th>
                                <th class="datatable-col-50">Target KPI</th>
                                <th class="datatable-col-50">Week 1</th>
                                <th class="datatable-col-50">Week 2</th>
                                <th class="datatable-col-50">Week 3</th>
                                <th class="datatable-col-50">Week 4</th>
                                <th class="datatable-col-50">Week 5</th>
                                <th class="datatable-col-50">Week 6</th>
                                <th class="datatable-col-100">Bobot KPI</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlDetailSoNumber">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result (in Million of IDR)</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblDetailSoNumber">
                        <thead>
                            <tr>
                                <th class="datatable-col-100">SO Number</th>
                                <th class="datatable-col-100">Operator</th>
                                <th class="datatable-col-100">Company</th>
                                <th class="datatable-col-100">Tenant Type</th>
                                <th class="datatable-col-150">Start</th>
                                <th class="datatable-col-150">End</th>
                                <th class="datatable-col-100">E = G/F</th>
                                <th class="datatable-col-100">Rev / Month</th>
                                <th class="datatable-col-100">Amount Inv</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row" id="tblDetailButtons">
        <div class="col-md-12 text-right">
            <div class="form-group">
                <button type="button" id="btBackSoNumber" class="btn blue-oleo">
                    <i class="fa fa-chevron-left"></i> Back
                </button>
            </div>
        </div>
    </div>
</section>

<script src="@Url.Content("~/scripts/dashboard/KPISummary.js")" type="text/javascript"></script>