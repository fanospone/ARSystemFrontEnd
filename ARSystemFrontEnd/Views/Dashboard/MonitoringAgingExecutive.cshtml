@using ARSystemFrontEnd.Helper

@{
    ViewBag.Title = "MonitoringAgingExecutive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slCompany" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Operator</label>
                                        <div class="col-md-9">
                                            <select id="slOperator" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Amount Type</label>
                                        <div class="col-md-9">
                                            <select id="slAmountType" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Period</label>
                                        <div class="col-md-9">
                                            <input type="text" id="txtPeriod" class="form-control datepicker" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Category OD</label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbAll" name="rbCategory" value="1" checked> All
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rb30D" name="rbCategory" value="2"> 30 D
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rb60D" name="rbCategory" value="3"> 60 D
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Exclude PKP</label>
                                        <div class="col-md-9">
                                            <input type="checkbox" id="chExcludePKP" checked class="make-switch" data-on-text="YES" data-off-text="NO">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbAllRent" name="rbSummary" value="0" checked> All
                                                    <span></span>
                                                </label>
                                                <br />
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchRent" name="rbSummary" value="1"> Summary Rent
                                                    <span></span>
                                                </label>
                                                <br />
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchOtherRent" name="rbSummary" value="2"> Summary Other Rent
                                                    <span></span>
                                                </label>
                                                <br />
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchCME" name="rbSummary" value="3"> Summary Electricity & Mini CME Reimbursable
                                                    <span></span>
                                                </label>
                                                <br />
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchBuildingRent" name="rbSummary" value="4"> Summary Building Rent
                                                    <span></span>
                                                </label>
                                                @*<br />
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchFirstMedia" name="rbSummary" value="5"> Summary First Media Rent
                                                    <span></span>
                                                </label>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult summary">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">
                            <label id="txtCaptionSubject"></label>
                        </span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover" style="width:100%" id="tblSummaryData">
                        <thead>
                            <tr class="bg-primary">
                                <th>Operator</th>
                                <th>Current</th>
                                <th id="thRangeOD1"></th>
                                <th id="thRangeOD2"></th>
                                <th id="thRangeOD3"></th>
                                <th>Total OS</th>
                                <th>% OD PER OPT</th>
                                <th>% OD ALL OPT</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>

<script src="@Url.ContentVersion("~/scripts/dashboard/MonitoringAgingExecutive.js")" type="text/javascript"></script>
