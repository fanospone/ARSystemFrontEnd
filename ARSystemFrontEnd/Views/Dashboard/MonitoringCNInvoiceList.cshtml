@{
    ViewBag.Title = "Monitoring CN Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .form-control[readonly] {
        background-color: #eef1f5 !important;
    }

    .select2-results__group {
        font-size: large !important;
        display: contents !important;
        font-weight: bold !important;
    }

    /*fix placeholder multiple - begin*/
    .select2-container .select2-search--inline:first-child {
        float: none;
    }

        .select2-container .select2-search--inline:first-child .select2-search__field {
            width: 100% !important;
        }
    /*fix placeholder multiple - end*/
    .money {
        text-align: right;
    }
</style>

<form class="form-horizontal" role="form" id="frmFilter">
    <div id="secList">
        <section id="filterPnlMonitoringCNInvoice">
            <div class="portlet light bordered">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet box blue">
                            <div class="portlet-title">
                                <div class="caption font-white">
                                    <i class="fa fa-filter"></i>
                                    <span class="caption-subject">Filter</span>
                                </div>
                                <div class="tools">
                                    <a href="" class="collapse"> </a>
                                </div>
                            </div>
                            <div class="portlet-body form font">
                                @*<form class="form-horizontal" role="form">*@
                                <div class="form-body" style="margin:20px">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class='form-group'>
                                                <label class='col-md-4 control-label'> Customer</label>
                                                <div class='col-md-8'>
                                                    <select id="fCustomer" class="form-control inputSearch select2"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-1"></div>
                                        @*<div class="col-md-5">
                                            <div class='form-group'>
                                                <label class='col-md-4 control-label'> Status</label>
                                                <div class='col-md-8'>
                                                    <select id="fStatus" class="form-control inputSearch select2"></select>
                                                </div>
                                            </div>
                                        </div>*@
                                        <div class="col-md-5">
                                            <div class='form-group'>
                                                <label class='col-md-4 control-label'> Company</label>
                                                <div class='col-md-8'>
                                                    <select id="fCompany" class="form-control inputSearch select2"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        @*<div class="col-md-5">
                                            <div class='form-group'>
                                                <label class='col-md-4 control-label'> Company</label>
                                                <div class='col-md-8'>
                                                    <select id="fCompany" class="form-control inputSearch select2"></select>
                                                </div>
                                            </div>
                                        </div>*@
                                        @*<div class="col-md-1"></div>
                                        <div class="col-md-5">
                                            <div class='form-group'>
                                                <label class='col-md-4 control-label'> Periode</label>
                                                <div class='col-md-8'>
                                                    <select id="fPeriode" class="form-control inputSearch select2"></select>
                                                </div>
                                            </div>
                                        </div>*@
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class='form-group'>
                                                <label class='col-md-4 control-label'> Exclude PKP</label>
                                                <div class='col-md-8'>
                                                    <input type="checkbox" id="fExcludePKP" checked class="make-switch inputSearch" data-on-text="YES" data-off-text="NO">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div style="background-color:#f7f7f7;" class="form-actions text-center">
                                    <button type="button" id="btnSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-search"></i> View
                                    </button>

                                    <button type="button" id="btnRst" class="btn blue-oleo">
                                        <i class="fa fa-refresh"></i> Reset
                                    </button>
                                </div>
                                @*</form>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="gridPnlMonitoringCNInvoice">
            <div class="row summary">
                <div class="col-md-12">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            @*<div class="caption font-dark">
                                <i class="fa fa-table"></i>
                                <span class="caption-subject bold">Search Result</span>
                            </div>*@
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover" id="tblvwMonitoringCNInvoice" style="width:100%" @*cellspacing="0"*@>
                                <thead>
                                    <tr>
                                        @*<th> Action</th>*@
                                        <th width=45%> Customer</th>
                                        <th width=11%> OD 0-3 Days</th>
                                        <th width=11%> OD 4-6 Days</th>
                                        <th width=11%> OD 7-9 Days</th>
                                        <th width=11%> OD > 9 Days</th>
                                        <th width=11%> Grand Total</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row detail">
                <div class="col-md-12">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            @*<div class="caption font-dark">
                                <i class="fa fa-table"></i>
                                <span class="caption-subject bold">Search Result</span>
                            </div>*@
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover" id="tblvwMonitoringCNInvoiceDetail" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th> Invoice Number</th>
                                        <th> No. Faktur</th>
                                        <th> Company Invoice</th>
                                        <th> Customer Invoice</th>
                                        <th> Subject</th>
                                        <th> Amount Invoice</th>
                                    </tr>
                                </thead>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row detail" id="tblDetailButtons">
                <div class="col-md-12 text-right">
                    <div class="form-group">
                        <button type="button" id="btBackSummary" class="btn blue-oleo">
                            <i class="fa fa-chevron-left"></i> Back
                        </button>
                    </div>
                </div>
            </div>
        </section>

        

    </div>
</form>






