<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>AR System | Login Page</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="Login Page" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    @*<link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/global/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/global/plugins/simple-line-icons/simple-line-icons.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/global/plugins/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css")" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN THEME GLOBAL STYLES -->
    <link href="@Url.Content("~/Content/global/css/components-rounded.min.css")" rel="stylesheet" id="style_components" type="text/css" />
    <link href="@Url.Content("~/Content/global/css/plugins.min.css")" rel="stylesheet" type="text/css" />
    <!-- END THEME GLOBAL STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="@Url.Content("~/Content/global/css/login.css")" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
    <!-- BEGIN THEME LAYOUT STYLES -->
    <!-- END THEME LAYOUT STYLES -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")">
    <style>
        #forceLogin {
            color: #00a2ff !important;
        }

        .base-timer {
            width: 150px;
            height: 150px;
        }

        .base-timer__svg {
            transform: scaleX(-1);
        }

        .base-timer__circle {
            fill: none;
            stroke: none;
        }

        .base-timer__path-elapsed {
            stroke-width: 7px;
            stroke: grey;
        }

        .base-timer__path-remaining {
            stroke-width: 7px;
            stroke-linecap: round;
            transform: rotate(90deg);
            transform-origin: center;
            transition: 1s linear all;
            fill-rule: nonzero;
            stroke: currentColor;
        }

            .base-timer__path-remaining.green {
                color: rgb(65, 184, 131);
            }

            .base-timer__path-remaining.orange {
                color: orange;
            }

            .base-timer__path-remaining.red {
                color: red;
            }

        .base-timer__label {
            position: absolute;
            width: 150px;
            height: 150px;
            top: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 48px;
        }

        #base-timer-label {
            color: gray;
        }

        #countdown {
            margin-bottom: 15px;
        }
    </style>
</head>
<!-- END HEAD -->
<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a>
            <img src="@Url.Content("~/Content/images/logoLogin.png")" style="height: 120px;margin-bottom:-40px;" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <div style="display:none">
        <input type="text" class="user" id="paramUserID" value="@ViewBag.UserID" />
        <input type="text" class="user" id="paramUserPassword" value="@ViewBag.UserPassword" />
        <input type="text" class="user" id="urlLink" value="@ViewBag.Link" />
        <input type="text" class="user" id="isAuthenticated" value="@ViewBag.IsAuthenticated" />
    </div>
    <section id="pnlLogin">
        <!-- BEGIN LOGIN -->
        <div class="content">
            <!-- BEGIN LOGIN FORM -->
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "FormLogin", @class = "login-form" }))
            {
                @Html.AntiForgeryToken()
                <h3 class="form-title font-green">Sign In</h3>
                <div id="ErrorHolder" class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button>
                    <span id="ErrorMessage"></span>
                </div>
                <div class="form-group">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">Username</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="User ID" id="tbUserID" />
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" id="tbPassword" />
                </div>
                <div class="form-actions">
                    <button type="submit" id="btLogin" class="btn green btn-block uppercase">Login</button>
                </div>
            }
            <!-- END LOGIN FORM -->
        </div>
    </section>

    <section id="pnlForceLogin" style="display: none">
        <div class="content">
            <div class="row">
                <div class="col-md-4 col-md-offset-3">
                    <div id="countdown"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="ErrorHolderForceLogin" class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        <span id="ErrorMessageForceLogin"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="OTP" name="otp" id="tbOTP" style="height: 45px" />
                            <span class="input-group-btn">
                                <button type="submit" id="btnSubmitOtp" class="btn  green btn-lg uppercase" data-style="zoom-in">Login</button>
                                @*<button type="submit" id="btnSubmitOtp" class="btn grey-cararra btn-block mt-ladda-btn ladda-button">Submit</button>*@
                            </span>
                        </div>
                        <p class="text-center">Didn't receive OTP?, <a href="#" id="btnResend">Resend Code</a><span id="lbl_resend" style="cursor: pointer">Resend Code in <span id="lbl_timer_resend">30</span>s</span></p>
                    </div>
                    <div class="form-actions">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="copyright"> @ViewBag.CopyrightYear © Tower Bersama Group. AR System. </div>
