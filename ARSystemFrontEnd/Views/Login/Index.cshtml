    <script src="@Url.Content("~/Content/global/plugins/jquery-validation/js/additional-methods.min.js")" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src="@Url.Content("~/scripts/app.min.js")" type="text/javascript"></script>
