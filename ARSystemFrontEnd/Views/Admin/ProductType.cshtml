
@{
    ViewBag.Title = "Product Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Product Code</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchProductCode" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Product Type</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchProductType" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusAll" name="rdStatus" value="-1" checked> All
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusActive" name="rdStatus" value="1"> Active
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusInactive" name="rdStatus" value="0"> Inactive
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button type="button" id="btCreate" class="btn blue">
                                        <i class="fa fa-plus-circle"></i> Add New Product Type
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th class="th-action">Action</th>
                                <th>Product Type</th>
                                <th>Product Code</th>
                                <th>Effective Date</th>
                                <th>Is Active</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlTransaction">
    @*Panel Header Transaction*@
    <div class="row panelTransactionH">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject" id="panelTransactionTitle"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formTransaction" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Product Code<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbProductCode" class="form-control" maxlength="10" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Product Type<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbProductType" class="form-control" maxlength="50" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Effective Date<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbEffectiveDate" class="form-control datepicker" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Related to SO Number</label>
                                        <div class="col-md-4">
                                            <input type="checkbox" id="chRelatedToSonumb" checked class="make-switch" data-on-text="Yes" data-off-text="No">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-4">
                                            <input type="checkbox" id="chStatus" checked class="make-switch" data-on-text="Active" data-off-text="Inactive">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-4">
                                            <button type="button" class="btn blue-oleo btCancel">
                                                <i class="fa fa-chevron-left"></i> Cancel
                                            </button>
                                            <button type="submit" id="btSubmit" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                                <i class="fa fa-save"></i> Save
                                            </button>
                                        </div>
                                        <div class="col-md-5"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="hdAllowAdd" value="@ViewBag.AllowAdd" />
<input type="hidden" id="hdAllowEdit" value="@ViewBag.AllowEdit" />

<script src="@Url.Content("~/scripts/admin/MasterProductType.js")" type="text/javascript"></script>

