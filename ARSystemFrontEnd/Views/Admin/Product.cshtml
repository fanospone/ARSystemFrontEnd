
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css")" rel="stylesheet" type="text/css" />
<style type="text/css">
    .datepicker[readonly] {
        background-color: #fff !important;
    }
</style>

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Product Name</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchProductName" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Product Type</label>
                                        <div class="col-md-9">
                                            <select id="slSearchProductType" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer Category</label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchAll" name="rbCustomerCategory" value="-1" checked> All
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchOperator" name="rbCustomerCategory" value="1"> Operator
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchNonOperator" name="rbCustomerCategory" value="0"> Non Operator
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="frmUploadProduct">
                        <div class="table-toolbar">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="btn-group">
                                        <button type="button" id="btCreate" class="btn blue">
                                            <i class="fa fa-plus-circle"></i> Add New Product
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <table class="table table-striped table-bordered table-hover" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Product Type</th>
                                <th>Product Name</th>
                                <th>Related to SO Number</th>
                                <th>Customer Category</th>
                                <th>Customer Type</th>
                                <th>Customer Name</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlProduct">
    @*Panel Header Transaction*@
    <div class="row pnlProductForm">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject" id="panelProductTitle"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formProduct" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-12">

                                    <div id="divInputSelection" class="form-group">
                                        <label class="col-md-3 control-label">Input Type</label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbForm" name="rbForm" class="rbForm" value="1" checked> Form
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbExcel" name="rbForm" class="rbForm" value="0"> Upload Excel File
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divUploadField">
                                        <label class="col-md-3 control-label">Import from Excel</label>
                                        <div class="col-md-6">
                                            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                                <div class="form-control uneditable-input input-fixed input-medium" data-trigger="fileinput">
                                                    <i class="fa fa-file fileinput-exists"></i>&nbsp;
                                                    <span class="fileinput-filename"> </span>
                                                </div>
                                                <span class="input-group-addon btn default btn-file">
                                                    <span class="fileinput-new"> Select file </span>
                                                    <span class="fileinput-exists"> Change </span>
                                                    <input type="file" id="fuProduct" name="...">
                                                </span>
                                                <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                            </div>
                                            <span style="color:red;font:bolder;" id="fileErrorMessage"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group" id="divUploadButtons">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-9">
                                            <button type="button" class="btn blue-oleo btCancel">
                                                <i class="fa fa-chevron-left"></i> Cancel
                                            </button>
                                            <button type="button" id="btUpload" class="btn blue">
                                                <i class="fa fa-upload"></i> Upload
                                            </button>
                                            <button type="button" id="btDownload" class="btn blue">
                                                <i class="fa fa-download"></i> Download Template
                                            </button>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divProductType">
                                        <label class="col-md-3 control-label">Product Type<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slProductTypeID" required class="form-control select2"></select>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divRelatedToSoNumber">
                                        <label class="col-md-3 control-label">Related to SO Number</label>
                                        <div class="col-md-4">
                                            <input type="checkbox" id="chRelatedToSonumb" class="make-switch" data-on-text="Yes" data-off-text="No">
                                        </div>
                                    </div>

                                    <div class="form-group" id="divSoNumber">
                                        <label class="col-md-3 control-label">SO Number<i id="icSoNumber" class="font-red">*</i></label>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-10" id="divSoNumberGrid">
                                                    <table class="table table-striped table-bordered table-hover" id="tblSelectedSoNumber">
                                                        <thead>
                                                            <tr>
                                                                <th>SO Number</th>
                                                                <th>Site Name</th>
                                                                <th>Regional Name</th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                    <input type="text" style="display:none;" id="tbSoNumber" readonly class="form-control"/>
                                                    <input type="hidden" id="hfProjectInformationID" />
                                                    <span class="error" id="spanSoNumberError"></span>
                                                </div>
                                                <div class="col-md-2">
                                                    <button type="button" id="btBrowseSoNumber" class="btn btn-primary">Browse</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divProductName">
                                        <label class="col-md-3 control-label">Product Name<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" required class="form-control" id="tbProductName" maxlength="100" />
                                        </div>
                                    </div>

                                    <div class="form-group" id="divCompany">
                                        <label class="col-md-3 control-label">Company TBG<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slCompanyID" required class="form-control select2"></select>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divCustomerCategory">
                                        <label class="col-md-3 control-label">Customer Category<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbOperator" name="rbIsOperator" value="1"> Operator
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbNonOperator" name="rbIsOperator" value="0"> Non Operator
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divCustomerName">
                                        <label class="col-md-3 control-label">Customer Name<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slCustomerID" required class="form-control select2"></select>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divCustomerType">
                                        <label class="col-md-3 control-label">Customer Type<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slCustomerTypeID" disabled class="form-control select2"></select>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divOperatorName">
                                        <label class="col-md-3 control-label">Operator<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slOperatorID" required class="form-control select2"></select>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divStartLeaseDate">
                                        <label class="col-md-3 control-label">Start Lease Date<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbStartLeaseDate" class="form-control datepicker" readonly required>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divEndLeaseDate">
                                        <label class="col-md-3 control-label">End Lease Date<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbEndLeaseDate" class="form-control datepicker" data-parsley-period="" readonly required>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divDownloadAgreementDoc">
                                        <label class="col-md-3 control-label">Current Agreement Doc<i id="icAgreementDoc" class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="hidden" id="hfDocPath" value="@ViewBag.DocPath" />
                                            <div class="btn btn-primary" id="btDownloadAgreementDoc">
                                                <i class="fa fa-download"></i> 
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divAgreementDoc">
                                        <label class="col-md-3 control-label">Agreement Doc<i id="icAgreementDoc" class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                                <div class="form-control" data-trigger="fileinput"> <i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                                                <span class="input-group-addon btn btn-default btn-file">
                                                    <span class="fileinput-new">Select file</span><span class="fileinput-exists">Change</span>
                                                    <input type="file" id="fuAgreementDoc" name="...">
                                                </span>
                                                <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divButtons">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-4">
                                            <button type="button" class="btn blue-oleo btCancel">
                                                <i class="fa fa-chevron-left"></i> Cancel
                                            </button>
                                            <button type="submit" id="btSubmit" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                                <i class="fa fa-save"></i> Save
                                            </button>
                                        </div>
                                        <div class="col-md-5"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="form-actions text-right">
    </div>*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="mdlProduct">
    <div class="modal fade bs-modal-lg" id="mdlSoNumber" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">List of SO Number</h4>
                </div>
                <div class="modal-body" id="divTagBodyHTML">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption font-white">
                                        <i class="fa fa-filter"></i>
                                        <span class="caption-subject">Filter</span>
                                    </div>
                                    <div class="tools">
                                        <a href="" class="collapse"> </a>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <form id="formSearch" class="form-horizontal" role="form">
                                        <div class="form-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="col-md-3 control-label">SO Number</label>
                                                        <div class="col-md-9">
                                                            <input type="text" id="tbSearchSoNumberModal" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="col-md-3 control-label">Site ID</label>
                                                        <div class="col-md-9">
                                                            <input type="text" id="tbSearchSiteID" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="col-md-3 control-label">Site Name</label>
                                                        <div class="col-md-9">
                                                            <input type="text" id="tbSearchSiteName" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="col-md-3 control-label">Regional Name</label>
                                                        <div class="col-md-9">
                                                            <input type="text" id="tbSearchRegionalName" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-actions text-center">
                                            <button type="button" id="btSearchSoNumber" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                                <i class="fa fa-search"></i> Search
                                            </button>
                                            <button type="button" id="btResetSoNumber" class="btn blue-oleo">
                                                <i class="fa fa-refresh"></i> Reset
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered table-hover" id="tblSoNumber">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>SO Number</th>
                                        <th>Site ID</th>
                                        <th>Site Name</th>
                                        <th>Regional Name</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btSelectSoNumber" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                        <i class="fa fa-mouse-pointer"></i> Select
                    </button>
                    <button type="button" class="btn blue-oleo" data-dismiss="modal">
                        <i class="fa fa-chevron-left"></i> Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="mdlUploadProduct">
    <div class="modal fade bs-modal-lg" id="mdlUploadedProduct" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Uploaded Product</h4>
                </div>
                <div class="modal-body" id="divUploadedProduct">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered table-hover" id="tblUploadedProduct">
                                <thead>
                                    <tr>
                                        <th>Product Type</th>
                                        <th>Product Name</th>
                                        <th>Related to SO Number</th>
                                        <th>SO Number</th>
                                        <th>Company</th>
                                        <th>Is Operator</th>
                                        <th>Operator</th>
                                        <th>Customer</th>
                                        <th>Start Lease Date</th>
                                        <th>End Lease Date</th>
                                        <th>Error</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <ul id="ulErrors" style="color: #f00;"></ul>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btSubmitProducts" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                        <i class="fa fa-save"></i> Save
                    </button>
                    <button type="button" class="btn blue-oleo" data-dismiss="modal">
                        <i class="fa fa-chevron-left"></i> Exit
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="hdAllowAdd" value="@ViewBag.AllowAdd" />
<input type="hidden" id="hdAllowEdit" value="@ViewBag.AllowEdit" />

