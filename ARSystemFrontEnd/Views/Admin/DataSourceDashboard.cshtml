@{
    ViewBag.Title = "Data Source Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="panelSummary">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">View Name</label>
                                        <div class="col-md-8">
                                            <input type="text" id="sViewName" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Database Name</label>
                                        <div class="col-md-8">
                                            <input type="text" id="sDBName" class="form-control">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Data Source Name</label>
                                        <div class="col-md-8">
                                            <input type="text" id="sDataSourceName" class="form-control">
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                        <label class="col-md-4 control-label">Role Name</label>
                                        <div class="col-md-8">
                                            <select id="sRoleID" class="form-control select2"></select>
                                        </div>
                                    </div>*@
                                    
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="form-actions text-center">
                        <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button NeedRounding" data-style="zoom-in">
                            <i class="fa fa-search"></i> Search
                        </button>
                        <button type="button" id="btReset" class="btn blue-oleo">
                            <i class="fa fa-refresh"></i> Reset
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-actions text-left btnAddNewDataSource">
                <button type="button" id="btnAddNewDataSource" class="btn green mt-ladda-btn ladda-button" data-style="zoom-in">
                    <i class="fa fa-plus"></i> Add New
                </button>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="tab-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light bordered">
                            <div class="portlet-title">
                                <div class="caption font-blue-steel">
                                    <i class="fa fa-table"></i>
                                    <span class="caption-subject">Data Source</span>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tabDataSourceDashboard">
                                        <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblDataSourceDashboard">
                                            <thead>
                                                <tr>
                                                    <th class="datatable-col-25">#Row</th>
                                                    <th class="datatable-col-25">Action</th>
                                                    <th class="datatable-col-100">Data Source Name</th>
                                                    <th class="datatable-col-100">Database Name</th>
                                                    <th class="datatable-col-200">View Name</th>
                                                    <th class="datatable-col-100">Role Access</th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="panelTransaction">
    <div class="row">
        <div class="col-md-12">
            <div class="tab-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light bordered">
                            <div class="portlet-title">
                                <div class="caption font-blue-steel">
                                    <i class="fa fa-table"></i>
                                    <span class="caption-subject">Data Source</span>
                                </div>
                            </div>
                            <div class="portlet-body form">
                                <form id="formSaveDataSource" class="form-horizontal" role="form">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="col-md-4 control-label">Data Source Name</label>
                                                    <div class="col-md-8">
                                                        <input type="text" id="tbDataSourceName" class="form-control select2" required />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-4 control-label">DataBase Name</label>
                                                    <div class="col-md-8">
                                                        <input type="text" id="tbDBName" class="form-control select2" required />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-4 control-label">Schema</label>
                                                    <div class="col-md-8">
                                                        <select id="tbSchema" class="form-control"></select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-4 control-label">View Name</label>
                                                    <div class="col-md-8">
                                                        <input type="text" id="tbViewName" class="form-control select2" required />
                                                        <input type="hidden" id="tbID" />
                                                        <span style="color:red; font-style:italic" id="msgView"></span>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="col-md-4 control-label">Show Column</label>
                                                    <div class="col-md-8">
                                                        <select id="slColumn" multiple="multiple" class="multi-select" name="slColumn[]" required></select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-4 control-label">Filter</label>
                                                    <div class="col-md-8">
                                                        <select id="slParamFilter" multiple="multiple" class="multi-select" name="slParamFilter[]" required></select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-4 control-label">Role Access</label>
                                                    <div class="col-md-8">
                                                            <select id="slRoleID2" multiple="multiple" class="multi-select" name="slRoleID2[]" required></select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions text-center">
                                        <button type="button" id="btSave" class="btn blue mt-ladda-btn ladda-button NeedRounding">
                                            <i class="fa fa-save"></i> Save
                                        </button>
                                        <button type="button" id="btCancel" class="btn blue-oleo">
                                            <i class="fa fa-chevron-left"></i> Cancel
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
<script src="~/Content/global/plugins/jquery-multi-select/js/jquery.multi-select.js"></script>
<script src="~/Content/global/plugins/jquery.quicksearch.js"></script>
    <script type="text/javascript" src="@Url.Content("~/scripts/admin/DataSourceDashboard.js")"></script>
}
