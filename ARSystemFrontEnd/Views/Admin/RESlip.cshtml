@{
    ViewBag.Title = "RE SLIP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption font-white">
                    <i class="fa fa-filter"></i>
                    <span class="caption-subject">Filter</span>
                </div>
                <div class="tools">
                    <a href="" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form id="formSearch" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">SO Number</label>
                                    <div class="col-md-8">
                                        <input type="text" id="sSONumber" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="form-actions text-center">
                    <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button NeedRounding" data-style="zoom-in">
                        <i class="fa fa-search"></i> Search
                    </button>
                    <button type="button" id="btReset" class="btn blue-oleo">
                        <i class="fa fa-refresh"></i> Reset
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-actions text-left btnAddNewData">
            <button type="button" id="btnAddNewData" class="btn green mt-ladda-btn ladda-button" data-style="zoom-in">
                <i class="fa fa-plus"></i> Add New RE SLIP
            </button>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="tab-content">
            <div class="row CategoryBulding">
                <div class="col-md-12">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption font-blue-steel">
                                <i class="fa fa-table"></i>
                                <span class="caption-subject">RE SLIP</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="tabRESlip">
                                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblRESlip">
                                        <thead>
                                            <tr>
                                                <th class="datatable-col-25">#Row</th>
                                                <th class="datatable-col-25">Action</th>
                                                <th class="datatable-col-150">SO Number</th>
                                                <th class="datatable-col-100">RE SLIP</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="mdlRESlip" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg" style="width:40%">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit RE SLIP</h4>
            </div>
            <div class="portlet-body form">
                <form id="formRESlip" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label class="col-md-5 control-label">SO Number</label>
                                    <div class="col-md-7">
                                        <input type="hidden" id="idTrx" />
                                        <input type="text" class="form-control select2" id="iSONumber"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-5 control-label">RE SLIP</label>
                                    <div class="col-md-7">
                                        <input type="hidden" id="idTrx" />
                                        <input type="text" class="form-control select2" id="iRESlip" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions text-center">
                        <button type="button" id="btnTrxSave" class="btn blue NeedRounding">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <button type="button" data-dismiss="modal" id="btnTrxCancel" class="btn blue-oleo">
                            <i class="fa fa-chevron-left"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="mdlRESlipUpload" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg" style="width:40%">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add New RE SLIP</h4>
            </div>
            <div class="portlet-body form">
                <form id="formRESlip" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-md-2 control-label" style="text-align:right">Select File</label>
                                    <div class="col-md-10" style="padding-right:0px;padding-left:10px">
                                        <div class="col-md-9" style="padding:0px">
                                            <input type="file" data-parsley-filemaxmegabytes="1" id="FileUpload" data-parsley-trigger="change" data-parsley-filemimetypes="xls/xlsx" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" style="text-align:right"></label>
                                    <div class="col-md-8">
                                        <button type="button" id="btnDownloadTemplate" class="btn green">
                                            <i class="fa fa-download"></i> Download Template
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions text-center">
                        <button type="button" data-dismiss="modal"  id="btnUpload" class="btn blue NeedRounding">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <button type="button" data-dismiss="modal" id="btnUploadCancel" class="btn blue-oleo">
                            <i class="fa fa-chevron-left"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hdAllowAdd" value="@ViewBag.AllowAdd" />
<input type="hidden" id="hdAllowEdit" value="@ViewBag.AllowEdit" />
<script src="~/scripts/admin/RESlip.js"></script>