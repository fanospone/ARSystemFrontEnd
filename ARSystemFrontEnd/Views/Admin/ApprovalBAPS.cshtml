@{
    ViewBag.Title = "Master Approval BAPS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    #tenantGrid_length {
        display: none !important;
    }

    .form-buttons {
        margin-top: 30px;
        margin-left: -10px;
    }
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .DTFC_LeftHeadWrapper {
        border-bottom: 2px solid #e7ecf1 !important;
    }

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>


<div id="pnlSummary">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer</label>
                                        <div class="col-md-9">
                                            <select id="slSearchCustomerID" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Approval Name</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearcApprName" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Region</label>
                                        <div class="col-md-9">
                                            <select id="slSearcRegionID" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Position</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearcApprJob" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-actions text-left">
                <button type="button" id="btnAddNewData" class="btn green mt-ladda-btn ladda-button" data-style="zoom-in">
                    <i class="fa fa-plus"></i> Add New Data
                </button>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="tab-content">
                <div class="row CategoryBulding">
                    <div class="col-md-12">
                        <div class="portlet light bordered">
                            <div class="portlet-title">
                                <div class="caption font-blue-steel">
                                    <i class="fa fa-table"></i>
                                    <span class="caption-subject">Approval BAPS</span>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tabApprovalBAPS">
                                        <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblApprovalBAPS">
                                            <thead>
                                                <tr>
                                                    <th class="datatable-col-25">#Row</th>
                                                    <th class="datatable-col-25">Action</th>
                                                    <th class="datatable-col-150">Regional</th>
                                                    <th class="datatable-col-50">Custmer ID</th>
                                                    <th class="datatable-col-150">Approval Name</th>
                                                    <th class="datatable-col-200">Position</th>
                                                    <th class="datatable-col-50">Is Active</th>
                                                    <th class="datatable-col-25"></th>
                                                    <th class="datatable-col-25"></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="pnlFormInput">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject">Edit Data</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formApprovalBAPS" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Custoomer ID</label>
                                        <div class="col-md-9">
                                            <input type="hidden" id="idTrx" />
                                            <select id="iCustomerID" class="form-control" required></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Region</label>
                                        <div class="col-md-9">
                                            <select id="iRegionID" class="form-control" required></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Approval Name</label>
                                        <div class="col-md-9">
                                            <input class="form-control" id="iApprovalName" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Position</label>
                                        <div class="col-md-9">
                                            <input class="form-control" id="iPosition" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-5 control-label">Is Active</label>
                                        <div class="col-md-7">
                                            <input type="checkbox" id="iIsActive" checked class="make-switch" data-on-text="YES" data-off-text="NO">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </form>
                </div>
                <br />
                <div class="form-actions text-center">
                    <button type="submit" id="btnTrxSave" class="btn blue NeedRounding">
                        <i class="fa fa-save"></i> Save
                    </button>
                    <button type="button" data-dismiss="modal" id="btnTrxCancel" class="btn blue-oleo">
                        <i class="fa fa-chevron-left"></i> Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

