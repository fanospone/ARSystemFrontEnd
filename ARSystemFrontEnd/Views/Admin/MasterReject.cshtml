
@{
    ViewBag.Title = "Master Reject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Description</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchHdrDescription" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group divUserGroup">
                                        <label class="col-md-3 control-label">User Group</label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchAll" name="rdSearchUserGroup" value="-1" checked> All
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchARData" name="rdSearchUserGroup" value="1"> AR Data
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchARCollection" name="rdSearchUserGroup" value="2"> AR Collection
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusAll" name="rdStatus" value="-1" checked> All
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusActive" name="rdStatus" value="1"> Active
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusInactive" name="rdStatus" value="0"> Inactive
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-search"></i> Search
                                    </button>
                                    <button type="button" id="btReset" class="btn blue-oleo">
                                        <i class="fa fa-refresh"></i> Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button type="button" id="btCreate" class="btn blue">
                                        <i class="fa fa-plus-circle"></i> Add New Reject Header
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Description</th>
                                <th>Email Recipient</th>
                                <th>Email CC</th>
                                <th>Is Active</th>
                            </tr>
                        </thead>
                    </table>
                    <table class="table table-striped table-bordered table-hover" id="tblSummaryDataCollection">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Description</th>
                                <th>Is Active</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlDetailResult">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject" id="lblHeaderDescription"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <button type="button" id="btCreateDtl" class="btn blue">
                            <i class="fa fa-plus-circle"></i> Add New Reject Detail
                        </button>
                    </div>
                    <div class="form-body">
                        <table class="table table-striped table-bordered table-hover" id="tblDetailData">
                            <thead>
                                <tr>
                                    <th class="th-action">Action</th>
                                    <th>Description</th>
                                    <th>Is Active</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="button" id="btBack" class="btn blue-oleo">
                                    <i class="fa fa-chevron-left"></i> Back
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlTransactionHdr">
    @*Panel Header Transaction*@
    <div class="row panelTransactionHdr ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject" id="panelTransactionTitleHdr"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formTransactionHdr" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-9">
                                            <input type="checkbox" id="chStatus" checked class="make-switch" data-on-text="Active" data-off-text="Inactive">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Description<i class="font-red">*</i></label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbDescriptionHdr" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="form-group divARData">
                                        <label class="col-md-3 control-label">Email Recipient</label>
                                        <div class="col-md-9">
                                            <textarea id="tbEmailRecipient" class="form-control" rows="5"> </textarea>
                                        </div>
                                    </div>
                                    <div class="form-group divARData">
                                        <label class="col-md-3 control-label">Email CC</label>
                                        <div class="col-md-9">
                                            <textarea id="tbEmailCC" class="form-control" rows="5" ></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group divUserGroup">
                                        <label class="col-md-3 control-label">User Group<i class="font-red"></i></label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbARData" name="rdUserGroup" value="1"> AR Data
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbARCollection" name="rdUserGroup" value="2"> AR Collection
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-9">
                                            <button type="button" class="btn blue-oleo btCancelHdr">
                                                <i class="fa fa-chevron-left"></i> Exit
                                            </button>
                                            <button type="submit" id="btSubmitHdr" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                                <i class="fa fa-save"></i> Save
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="form-actions text-right">
    </div*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

