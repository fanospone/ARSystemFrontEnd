@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #tenantGrid_length {
        display: none !important;
    }

    .form-buttons {
        margin-top: 30px;
        margin-left: -10px;
    }
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .DTFC_LeftHeadWrapper {
        border-bottom: 2px solid #e7ecf1 !important;
    }

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer Name</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchCustomerName" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer Type</label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline customer-types-field">
                                                <label class='mt-radio'>
                                                    <input type='radio' class='customer-type-options' name='rbSearchCustomerType' value='0' checked /> All
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="display:none;">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusAll" name="rdStatus" value="-1" checked> All
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusActive" name="rdStatus" value="1"> Active
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusInactive" name="rdStatus" value="0"> Inactive
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button type="button" id="btCreate" class="btn blue">
                                        <i class="fa fa-plus-circle"></i> Add New Customer
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th class="th-action datatable-col-10"></th>
                                <th class="datatable-col-200">Customer Name</th>
                                <th class="datatable-col-100">Customer Type</th>
                                <th class="datatable-col-100">Customer Code</th>
                                <th class="datatable-col-250">Legal Address</th>
                                <th class="datatable-col-150">Legal Province</th>
                                <th class="datatable-col-250">Legal Region</th>
                                <th class="datatable-col-250">Billing Address</th>
                                <th class="datatable-col-150">Billing Province</th>
                                <th class="datatable-col-250">Billing Region</th>
                                <th class="datatable-col-100">Phone Number</th>
                                <th class="datatable-col-250">Email</th>
                                <th class="datatable-col-150">NPWP</th>
                                <th class="datatable-col-100">Contact Person</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlTransaction">
    @*Form*@
        <div class="row panelTransaction">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-blue-steel">
                            <i class="fa fa-edit"></i>
                            <span class="caption-subject bold" id="panelTransactionTitle"></span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <form id="form" class="form-horizontal" role="form">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Customer Type<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <div class="mt-radio-inline customer-types"></div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Status</label>
                                            <div class="col-md-4">
                                                <input type="checkbox" id="chStatus" checked class="make-switch" data-on-text="Active" data-off-text="Inactive">
                                            </div>
                                        </div>

                                        <div class="form-group" id="dvCompanyType">
                                            <label class="col-md-3 control-label">Company Type<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbCompanyPT" name="rdStatus" checked value="PT"> PT
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbCompanyCV" name="rdStatus" value="CV"> CV
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label" id="lbCustomerName">Customer Name<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbCustomerName" class="form-control" maxlength="100" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Company Code<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbCustomerCode" class="form-control" maxlength="10" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Legal Address<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbLegalAddress" class="form-control" maxlength="255" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Province<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <select class="form-control select2" id="slLegalProvince" required></select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Region<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <select class="form-control select2" id="slLegalRegency" required></select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label"></label>
                                            <div class="col-md-4">
                                                <input type="checkbox" id="chCopyFromLegalAddress" class="make-switch" data-on-text="Yes" data-off-text="No"> Copy from Legal Address
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Billing Address<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbBillingAddress" class="form-control" maxlength="255" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Province<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <select class="form-control select2" id="slBillingProvince" required></select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Region<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <select class="form-control select2" id="slBillingRegency" required></select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Phone Number<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbPhoneNumber" data-parsley-phonenumber="" class="form-control" maxlength="20" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Email<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="email" id="tbEmail" class="form-control" maxlength="255" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">NPWP<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbNPWP" class="form-control" maxlength="50" required>
                                            </div>
                                        </div>

                                        <div class="form-group" id="dvContactPerson">
                                            <label class="col-md-3 control-label">Contact Person<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbContactPerson" class="form-control" maxlength="100" />
                                            </div>
                                        </div>

                                        <div class="form-group" id="dvContractNumber">
                                            <label class="col-md-3 control-label">Contract Number<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbContractNo" class="form-control" required>
                                            </div>
                                        </div>

                                        <div class="form-group" id="dvTermPeriod">
                                            <label class="col-md-3 control-label">Term Period<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <select id="slTerm" class="form-control select2" required></select>
                                            </div>
                                        </div>

                                        <div class="form-group" id="dvArea">
                                            <label class="col-md-3 control-label">Area<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbArea" class="form-control tbAmount text-right" required>
                                            </div>
                                        </div>

                                        <div class="form-group" id="dvPricePerArea">
                                            <label class="col-md-3 control-label">Price/Area<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbPricePerArea" class="form-control tbAmount text-right" required>
                                            </div>
                                        </div>

                                        <div class="form-group" id="dvPricePerMonth">
                                            <label class="col-md-3 control-label">Price/Month<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbPricePerMonth" class="form-control text-right" readonly="readonly">
                                            </div>
                                        </div>

                                        <div class="form-group" id="dvTotalPrice">
                                            <label class="col-md-3 control-label">Total Price<i class="font-red">*</i></label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbTotalPrice" class="form-control text-right" readonly="readonly">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>


                        <div class="form-buttons">
                            <div class="form-body">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <div class="col-md-3"></div>
                                                <div class="col-md-4">
                                                    <button type="button" class="btn blue-oleo btCancel">
                                                        <i class="fa fa-chevron-left"></i> Cancel
                                                    </button>
                                                    <button type="submit" id="btSubmit" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                                        <i class="fa fa-save"></i> Save
                                                    </button>
                                                </div>
                                                <div class="col-md-5"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

<input type="hidden" id="hdAllowAdd" value="@ViewBag.AllowAdd" />
<input type="hidden" id="hdAllowEdit" value="@ViewBag.AllowEdit" />

<script src="@Url.Content("~/Content/global/plugins/jquery-validation/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/admin/MasterCustomer.js")" type="text/javascript"></script>