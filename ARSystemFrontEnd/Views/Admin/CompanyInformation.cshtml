
@{
    ViewBag.Title = "Company Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company Name</label>
                                        <div class="col-md-9">
                                            <input type="text" id="tbSearchCompanyName" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Term Period</label>
                                        <div class="col-md-9">
                                            <select id="slSearchTerm" class="form-control select2">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-9">
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusAll" name="rdStatus" value="-1" checked> All
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusActive" name="rdStatus" value="1"> Active
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" id="rbSearchStatusInactive" name="rdStatus" value="0"> Inactive
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button type="button" id="btCreate" class="btn blue">
                                        <i class="fa fa-plus-circle"></i> Add New Company Information
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="tblSummaryData">
                        <thead>
                            <tr>
                                <th class="th-action">Action</th>
                                <th>Tenant</th>
                                <th>Company</th>
                                <th>Term Period</th>
                                <th>Is Active</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlTransaction">
    @*Panel Role Transaction*@
    <div class="row panelTransaction ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject" id="panelTransactionTitle"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formTransaction" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-4">
                                            <input type="checkbox" id="chStatus" checked class="make-switch" data-on-text="Active" data-off-text="Inactive">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company Type<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <label class="mt-radio">
                                                <input type="radio" id="rbCompanyPT" name="rdStatus" value="PT"> PT
                                                <span></span>
                                            </label>
                                            <label class="mt-radio">
                                                <input type="radio" id="rbCompanyCV" name="rdStatus" value="CV"> CV
                                                <span></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Tenant<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbTenant" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Tenant ID<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbTenantId" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company Name<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbCompanyName" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">NPWP<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbNPWP" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Contract Number<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbContractNo" class="form-control" required>
                                        </div>
                                    </div>
                                   
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Term Period<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slTerm" class="form-control select2" required>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company Address<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <textarea class="form-control" rows="3" id="tbCompanyAddress" required></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Billing Address<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <textarea class="form-control" rows="3" id="tbBillingAddress" required></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Area<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbArea" class="form-control tbAmount" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Price/Area<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbPricePerArea" class="form-control tbAmount" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Price/Month<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbPricePerMonth" class="form-control" readonly="readonly">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Total Price<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbTotalPrice" class="form-control" readonly="readonly">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-4">
                                            <button type="button" class="btn blue-oleo btCancel">
                                                <i class="fa fa-chevron-left"></i> Cancel
                                            </button>
                                            <button type="submit" id="btSubmit" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                                <i class="fa fa-save"></i> Save
                                            </button>
                                        </div>
                                        <div class="col-md-5"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="hdAllowAdd" value="@ViewBag.AllowAdd" />
<input type="hidden" id="hdAllowEdit" value="@ViewBag.AllowEdit" />

<script src="@Url.Content("~/scripts/admin/CompanyInformation.js")" type="text/javascript"></script>

