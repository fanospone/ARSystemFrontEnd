
@{
    ViewBag.Title = "Invoice Deduction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css")" rel="stylesheet" type="text/css" />
<style type="text/css">
    .datepicker[readonly] {
        background-color: #fff !important;
    }

    .tab-content > .active {
        display: block;
        border-left: 1px solid #ddd;
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
        padding: 20px 20px 20px 20px;
        margin-top: -10px;
    }
</style>

<section id="pnlSummary">
    @*Filter*@
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Operator</label>
                                        <div class="col-md-9">
                                            <select id="slSearchOperator" class="form-control"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slSearchCompany" class="form-control"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tabbable tabbable-tabdrop" id="tabDeductionType">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tabSKB" data-toggle="tab">SKB</a>
                            </li>
                            <li>
                                <a href="#tabWAPU" data-toggle="tab">WAPU</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabSKB">
                                <div class="table-toolbar">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="btn-group">
                                                <button type="button" id="btCreateSKB" class="btn blue">
                                                    <i class="fa fa-plus-circle"></i> Add New Invoice Deduction (SKB)
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-striped table-bordered table-hover" id="tblSummaryDataSKB">
                                    <thead>
                                        <tr>
                                            <th class="th-action">Action</th>
                                            <th>Company</th>
                                            <th>Start Period</th>
                                            <th>End Period</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="tab-pane" id="tabWAPU">
                                <div class="table-toolbar">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="btn-group">
                                                <button type="button" id="btCreateWAPU" class="btn blue">
                                                    <i class="fa fa-plus-circle"></i> Add New Invoice Deduction (WAPU)
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-striped table-bordered table-hover" id="tblSummaryDataWAPU">
                                    <thead>
                                        <tr>
                                            <th class="th-action">Action</th>
                                            <th>Operator</th>
                                            <th>Amount WAPU</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pnlTransaction">
    @*Panel Header Transaction*@
    <div class="row panelTransactionH">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-edit"></i>
                        <span class="caption-subject" id="panelTransactionTitle"></span>
                    </div>
                </div>
                <div class="portlet-body">
                    <form id="formTransaction" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Deduction Type</label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbDeductionType" readonly="readonly" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group" id="divOperator">
                                        <label class="col-md-3 control-label">Operator<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slOperator" class="form-control" required></select>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divAmountWAPU">
                                        <label class="col-md-3 control-label">Amount WAPU<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbAmountWAPU" class="form-control" required>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divCompany">
                                        <label class="col-md-3 control-label">Company<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <select id="slCompany" class="form-control" required></select>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divStartPeriod">
                                        <label class="col-md-3 control-label">Start Date<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbStartPeriod" class="form-control date-picker" required>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divEndPeriod">
                                        <label class="col-md-3 control-label">End Date<i class="font-red">*</i></label>
                                        <div class="col-md-4">
                                            <input type="text" id="tbEndPeriod" class="form-control date-picker" data-parsley-period="" required>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divAttachment">
                                        <label class="col-md-3 control-label"></label>
                                        <div class="col-md-4">
                                            <input type="hidden" id="hfDocPath" value="@ViewBag.DocPath" />
                                            <button type="button" class="btn btn-primary" id="btDownload">
                                                <i class="fa fa-download"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="form-group" id="divUploadBA">
                                        <label class="col-md-3 control-label" id="lblUploadBA">Upload BA</label>
                                        <div class="col-md-4">
                                            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                                <div class="form-control" data-trigger="fileinput"> <i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                                                <span class="input-group-addon btn btn-default btn-file">
                                                    <span class="fileinput-new">Select file</span><span class="fileinput-exists">Change</span>
                                                    <input type="file" name="..." id="fuUploadBA" required>
                                                </span>
                                                <a href="#" class="input-group-addon btn btn-red fileinput-exists" data-dismiss="fileinput">Remove</a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-4">
                                            <input type="checkbox" id="chIsActive" checked class="make-switch" data-on-text="Active" data-off-text="Inactive">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-4">
                                            <button type="button" class="btn blue-oleo btCancel">
                                                <i class="fa fa-chevron-left"></i> Cancel
                                            </button>
                                            <button type="submit" id="btSubmit" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                                                <i class="fa fa-save"></i> Save
                                            </button>
                                        </div>
                                        <div class="col-md-5"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="hfDocPath" value="@ViewBag.DocPath" />
<input type="hidden" id="hdAllowAdd" value="@ViewBag.AllowAdd" />
<input type="hidden" id="hdAllowEdit" value="@ViewBag.AllowEdit" />

<script src="@Url.Content("~/Content/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/admin/MasterInvoiceDeduction.js")" type="text/javascript"></script>

