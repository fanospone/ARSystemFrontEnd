@{
    ViewBag.Title = "Category Building";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption font-white">
                    <i class="fa fa-filter"></i>
                    <span class="caption-subject">Filter</span>
                </div>
                <div class="tools">
                    <a href="" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form id="formSearch" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Category</label>
                                    <div class="col-md-8">
                                        <input type="text" id="sCategoryBuilding" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="form-actions text-center">
                    <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button NeedRounding" data-style="zoom-in">
                        <i class="fa fa-search"></i> Search
                    </button>
                    <button type="button" id="btReset" class="btn blue-oleo">
                        <i class="fa fa-refresh"></i> Reset
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-actions text-left btnAddNewData">
            <button type="button" id="btnAddNewData" class="btn green mt-ladda-btn ladda-button" data-style="zoom-in">
                <i class="fa fa-plus"></i> Add New Category
            </button>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="tab-content">
            <div class="row CategoryBulding">
                <div class="col-md-12">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption font-blue-steel">
                                <i class="fa fa-table"></i>
                                <span class="caption-subject">Category</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="tabCategoryBuilding">
                                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblCategoryBuilding">
                                        <thead>
                                            <tr>
                                                <th class="datatable-col-25">#Row</th>
                                                <th class="datatable-col-25">Action</th>
                                                <th class="datatable-col-200">Category Name</th>
                                                <th class="datatable-col-50">PPH</th>
                                                <th class="datatable-col-50">PPN</th>
                                                <th class="datatable-col-100">Price / Area</th>
                                                <th class="datatable-col-50">Is Active</th>
                                                <th class="datatable-col-25"></th>
                                                <th class="datatable-col-25"></th>
                                                <th class="datatable-col-25"></th>
                                                <th class="datatable-col-100">Type</th>
                                                <th class="datatable-col-25"></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="mdlCategoryBuilding" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg" style="width:50%">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add New Category</h4>
            </div>
            <div class="portlet-body form">
                <form id="formCategoryBuilding" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label class="col-md-5 control-label">Type</label>
                                    <div class="col-md-7">
                                        <input type="radio" name="iBuildingType" value="1" checked="checked" required />&nbsp; Building&nbsp;&nbsp;
                                        <input type="radio" name="iBuildingType" value="0" required />&nbsp; Non Building&nbsp;&nbsp;
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-5 control-label">Category</label>
                                    <div class="col-md-7">
                                        <input type="hidden" id="idTrx" />
                                        <input type="text" class="form-control" id="iCategoryBuilding" required />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-5 control-label">PPH</label>
                                    <div class="col-md-7">
                                        <select class="form-control" id="iPPH" required></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-5 control-label">PPN</label>
                                    <div class="col-md-7">
                                        <select class="form-control" id="iPPN" required></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-5 control-label" id="lbPrice">Price / Area</label>
                                    <div class="col-md-7">
                                        <input type="text" class="form-control" id="iPricePerArea" required />
                                        <label class="col-md-12 control-label" id="lbPriceMessage" style="font-size:10px; color:red; text-align:left"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-5 control-label">Is Active</label>
                                    <div class="col-md-7">
                                        <input type="checkbox" id="iIsActive" checked class="make-switch" data-on-text="YES" data-off-text="NO" >
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions text-center">
                        <button type="submit" id="btnTrxSave" class="btn blue NeedRounding">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <button type="button" data-dismiss="modal" id="btnTrxCancel" class="btn blue-oleo">
                            <i class="fa fa-chevron-left"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hdAllowAdd" value="@ViewBag.AllowAdd" />
<input type="hidden" id="hdAllowEdit" value="@ViewBag.AllowEdit" />

<script src="@Url.Content("~/scripts/admin/CategoryBuilding.js")" type="text/javascript"></script>