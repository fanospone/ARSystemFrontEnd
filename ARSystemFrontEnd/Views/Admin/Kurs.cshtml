@{
    ViewBag.Title = "Kurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    table td {
        font-size: 13px !important;
    }
</style>

@*Add/Edit Kurs*@
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption font-white">
                    <i class="fa fa-filter"></i>
                    <span class="caption-subject">Master Kurs</span>
                </div>
                <div class="tools">
                    <a href="" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form id="formKurs" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Kurs Date</label>
                                    <div class="col-md-10">
                                        <div class="input-group input-medium date date-picker">
                                            <input type="text" id="txtKursDate" class="form-control" readonly="" required="">
                                            <span class="input-group-btn">
                                                <button class="btn default" type="button">
                                                    <i class="fa fa-calendar"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Kurs Tengah BI</label>
                                    <div class="col-md-10">
                                        <input type="text" id="txtKursTengahBI" class="form-control number" required="">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Kurs Pajak</label>
                                    <div class="col-md-10">
                                        <input type="text" id="txtKursPajak" class="form-control number" required="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions text-center">
                        <button type="button" id="btSave" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <button type="button" id="btCancel" class="btn blue-oleo">
                            <i class="fa fa-crosshairs"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@*List Master Kurs*@
<div class="row listMasterKurs">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-blue-steel">
                    <i class="fa fa-table"></i>
                    <span class="caption-subject">List Master Kurs</span>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover font-xs" id="tblMasterKurs">
                    <thead>
                        <tr class="bg-primary">
                            <th class="text-center">Kurs Date</th>
                            <th class="text-center">Kurs Tengah BI</th>
                            <th class="text-center">Kurs Pajak</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hdAllowAdd" value="@ViewBag.AllowAdd" />
<input type="hidden" id="hdAllowEdit" value="@ViewBag.AllowEdit" />

<script src="@Url.Content("~/scripts/admin/MasterKurs.js")" type="text/javascript"></script>
