@{
    ViewBag.Title = "Master AR RevSys Parameter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    table td {
        font-size: 13px !important;
    }
</style>
 

<section id="gridPnlmstARRevSysParameter">
    <div class="row">
        <div class="col-md-12">
            <div class="form-actions text-left btnAddNewData">
                <button type="button" id="btnAddNewData" class="btn green-jungle mt-ladda-btn ladda-button" data-style="zoom-in">
                    <i class="fa fa-plus"></i> Add New 
                </button>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <button type="button" id="btnGenData" class="btn yellow mt-ladda-btn ladda-button" data-style="zoom-in" onclick="Form.GenerateRASystem('start');">
                    <i class="fa fa-paper-plane"></i> Generate Revenue System
                </button>
                <button type="button" id="btnGenDataStop" class="btn red mt-ladda-btn ladda-button" data-style="zoom-in" onclick="Form.GenerateRASystem('stop');">
                    <i class="fa fa-paper-plane"></i> Stop Job
                </button>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject bold">Master AR RevSys Parameter</span>
                    </div>
                </div>
                <div class="portlet-body">

                    <table class="table table-striped table-bordered table-hover" id="tblListData" cellspacing="0">
                        <thead>
                            <tr>
                                <th> Action</th>
                             
                                <th> Param Name</th>
                                <th> Param Value</th>
                                <th> Created Date</th>
                                <th> Created By</th>
                                <th> Updated Date</th>
                                <th> Updated By</th>

                            </tr>
                        </thead>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>

<div tabindex="-1" class="modal fade" id="MdDetail" style="padding-top:5%" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Master AR RevSys Parameter <i class="fa fa-check-circle fa-1x fa-fw"></i></h4>
             
            </div>
            <div class="modal-body">
                <form id="formTransaction" style="padding:5px" role="form">
                    <div class="form-body">
                        <div class="row">                            
                            <div class="form-group attrData">
                                <label class="col-md-11 control-label">ID  :</label>
                                <div class="col-md-11">
                                    <input id="tb1" type="text" class="form-control" placeholder="ID" disabled>
                                </div>
                            </div> 
                            <div class="form-group">
                                <label class="col-md-11 control-label">Param Name<i class="font-red">*</i> :</label>
                                <div class="col-md-11">
                                    <input id="tb2" type="text" class="form-control" placeholder="Param Name" required>
                                </div>
                            </div>  
                            <div class="form-group">
                                <label class="col-md-11 control-label">Param Value<i class="font-red">*</i> :</label>
                                <div class="col-md-11">
                                    <input id="tb3" type="text" class="form-control" placeholder="Param Value" required>
                                </div>
                            </div>  
                            <div class="form-group attrData">
                                <label class="col-md-11 control-label">Created Date  :</label>
                                <div class="col-md-11">
                                    <input id="tb4" type="text" class="form-control" placeholder="Created Date" disabled>
                                </div>
                            </div>  
                            <div class="form-group attrData">
                                <label class="col-md-11 control-label">Created By  :</label>
                                <div class="col-md-11">
                                    <input id="tb5" type="text" class="form-control" placeholder="Created By" disabled>
                                </div>
                            </div>  
                            <div class="form-group attrData">
                                <label class="col-md-11 control-label">Updated Date  :</label>
                                <div class="col-md-11">
                                    <input id="tb6" type="text" class="form-control" placeholder="Updated Date" disabled>
                                </div>
                            </div>  
                            <div class="form-group attrData">
                                <label class="col-md-11 control-label">Updated By  :</label>
                                <div class="col-md-11">
                                    <input id="tb7" type="text" class="form-control" placeholder="Updated By" disabled>
                                </div>
                            </div>                                       
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer" style="text-align:center">                
                <button type="submit" id="btnTrx" class="btn green-jungle ladda-button" data-style="zoom-in" onclick="Form.Action();">
                    <i class="fa fa-save"></i>  Save
                </button>
                <button type="submit" id="btCancel" class="btn primary ladda-button" data-style="zoom-in" onclick="Form.ModalCancel();">
                    <i class="fa fa-chevron-left"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>
 
<input type="hidden" id="hdUsrFullName" value="@ViewBag.UsrFullName" />
<script src="@Url.Content("~/scripts/admin/MasterARRevSysParameter.js")" type="text/javascript"></script>

