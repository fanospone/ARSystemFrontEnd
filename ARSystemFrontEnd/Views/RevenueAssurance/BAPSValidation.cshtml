@using ARSystemFrontEnd.Helper;
@{
    ViewBag.Title = "BAPSValidation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .height59 {
        height: 59px;
    }
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    .border {
        display: inline-block;
        width: 400px;
        height: 125px;
        margin: 6px;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>
<section id="pnlSummary">
    @*Filter*@

    @*@Html.Partial("_PartialFilter")*@

    <div class="row filter">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group fCustomer">
                                        <label class="col-md-3 control-label">Customer</label>
                                        <div class="col-md-8">
                                            <select id="slSearchCustomerID" class="form-control select2"></select>
                                        </div>
                                    </div>

                                    <div class="form-group fsSiteID">
                                        <label class="col-md-3 control-label">Site ID Company</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control select2" id="slSearchSiteID" />
                                            @*<select id="slSearchSiteID" class="form-control select2"></select>*@
                                        </div>
                                    </div>
                                    <div class="form-group fSoNumber">
                                        <label class="col-md-3 control-label">SO Number</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control select2" id="slSearchSoNumber" />
                                            @*<select id="BapsType" class="form-control"></select>*@
                                            @*<select id="slSearchSoNumber" class="form-control select2"></select>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group fCompany">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-8">
                                            <select id="slSearchCompanyID" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group fProductType">
                                        <label class="col-md-3 control-label">Product Type</label>
                                        <div class="col-md-8">
                                            <select id="slSearchProductID" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    @*<div class="form-group fGroupBy">
                                            <label class="col-md-3 control-label">Group By</label>
                                            <div class="col-md-8">
                                                <select id="slGroupBy" class="form-control select2"></select>
                                            </div>
                                        </div>
                                        <div class="form-group fBapsType">
                                            <label class="col-md-3 control-label">BAPS Type</label>
                                            <div class="col-md-8">
                                                <select id="slBapsTypeID" class="form-control select2"></select>
                                            </div>
                                        </div>*@
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <input type="hidden" id="DefaultFilter" value="@ViewBag.TaskTodo" />
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button NeedRounding" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row panelTab">
        <div class="col-md-12">

            <div class="portlet-body">
                <div class="tabbable tabbable-tabdrop" id="tabStartBaps">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tabBapsValidation" data-toggle="tab" id="baspValidationTab">Ready</a>
                        </li>
                        <li>
                            <a href="#tabBapsData" data-toggle="tab" id="BapsDataTab">Validation</a>
                        </li>
                        <li>
                            <a href="#tabWaitingPo" data-toggle="tab" id="WaitingPoTab">Waiting PO</a>
                        </li>
                    </ul>
                    <div class="row panelSearchResult">
                        @* Data Basp Validation *@
                        <div class="tab-content">
                            <div class="row panelBapsValidation" style="visibility:hidden">
                                <div class="col-md-12">
                                    <div class="portlet light bordered">
                                        <div class="portlet-title">
                                            <div class="caption font-blue-steel col-md-8">
                                                <div class="col-lg-3 col-md-2">
                                                    <i class="fa fa-table"></i>
                                                    <span class="caption-subject">Data of Year</span>
                                                </div>
                                                <div class="col-md-2 BaukYear">
                                                    <select id="BaukYear" class="form-control select2"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="portlet-body">
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="tabBapsValidation">
                                                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblBapsValidation">
                                                        <thead>
                                                            <tr>
                                                                <th class="datatable-col-50">#Row</th>
                                                                <th class="datatable-col-50">Action</th>
                                                                <th class="datatable-col-150">SO Number</th>
                                                                <th class="datatable-col-100">Customer</th>
                                                                <th class="datatable-col-100">Site ID</th>
                                                                <th class="datatable-col-200">Site Name </th>
                                                                <th class="datatable-col-150">Site ID Cust</th>
                                                                <th class="datatable-col-200">Site Name Cust</th>
                                                                <th class="datatable-col-100">Company ID</th>
                                                                <th class="datatable-col-250">Company Name</th>
                                                                <th class="datatable-col-50">Siro</th>
                                                                <th class="datatable-col-200">STIP Number</th>
                                                                <th class="datatable-col-200">STIP Category</th>
                                                                <th class="datatable-col-150">Product</th>
                                                                <th class="datatable-col-100">MLA Date</th>
                                                                <th class="datatable-col-200">MLA Number</th>
                                                                <th class="datatable-col-200">BAUK Number</th>
                                                                <th class="datatable-col-100">BAUK Date</th>
                                                                <th class="datatable-col-100">PO Number</th>
                                                                <th class="datatable-col-100">PO Input Date</th>
                                                                <th class="datatable-col-100">PO Date</th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>
                                                <div class="tab-pane" id="tabBapsData">
                                                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblBapsData">
                                                        <thead>
                                                            <tr>
                                                                <th class="datatable-col-50">#Row</th>
                                                                <th class="datatable-col-50">Action</th>
                                                                <th class="datatable-col-150">SO Number</th>
                                                                <th class="datatable-col-100">BAPS Type</th>
                                                                <th class="datatable-col-100">Customer</th>
                                                                <th class="datatable-col-100">Site ID</th>
                                                                <th class="datatable-col-200">Site Name </th>
                                                                <th class="datatable-col-150">Site ID Cust</th>
                                                                <th class="datatable-col-200">Site Name Cust</th>
                                                                <th class="datatable-col-100">Company ID</th>
                                                                <th class="datatable-col-250">Company Name</th>
                                                                <th class="datatable-col-50">Siro</th>
                                                                <th class="datatable-col-200">STIP Number</th>
                                                                <th class="datatable-col-200">STIP Category</th>
                                                                <th class="datatable-col-150">Product</th>
                                                                <th class="datatable-col-100">MLA Date</th>
                                                                <th class="datatable-col-200">MLA Number</th>
                                                                <th class="datatable-col-200">BAUK Number</th>
                                                                <th class="datatable-col-100">BAUK Date</th>
                                                                <th class="datatable-col-100">PO Number</th>
                                                                <th class="datatable-col-100">PO Input Date</th>
                                                                <th class="datatable-col-100">PO Date</th>
                                                                <th class="datatable-col-100">PO Amount</th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>

                                                <div class="tab-pane" id="tabWaitingPo">
                                                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblWaitingPo">
                                                        <thead>
                                                            <tr>
                                                                <th class="datatable-col-50">#Row</th>
                                                                @*<th class="datatable-col-50">Action</th>*@
                                                                <th class="datatable-col-150">SO Number</th>
                                                                <th class="datatable-col-100">BAPS Type</th>
                                                                <th class="datatable-col-100">Customer</th>
                                                                <th class="datatable-col-100">Site ID</th>
                                                                <th class="datatable-col-200">Site Name </th>
                                                                <th class="datatable-col-150">Site ID Cust</th>
                                                                <th class="datatable-col-200">Site Name Cust</th>
                                                                <th class="datatable-col-100">Company ID</th>
                                                                <th class="datatable-col-250">Company Name</th>
                                                                <th class="datatable-col-50">Siro</th>
                                                                <th class="datatable-col-200">STIP Category</th>
                                                                <th class="datatable-col-150">Product</th>
                                                                <th class="datatable-col-100">PO Number</th>
                                                                <th class="datatable-col-100">PO Amount</th>
                                                                <th class="datatable-col-100">PO Date</th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    @*</div>*@
    <div id="panelHeaderInfo" style="visibility:hidden" class="panelValidationForm">
        @Html.Partial("_PartialHeaderInfo")
    </div>
    <div class="row panelValidationForm" style="visibility:hidden">
        <div class="col-md-12">
            <div class="portlet light bordered">

                <div class="portlet-body">
                    <div id="partialBapsValidationForm">
                        @Html.Partial("_PartialBapsValidationForm")
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>

</section>

@*Confirm Next Process*@
<div class="modal fade" id="mdlConfirmNextProcess" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Confirm</h4>
            </div>
            <div class="portlet-body form">
                <form id="formTrxCheckDoc" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">

                                    <label class="col-md-3 control-label">Choose Process</label>
                                    <div class="col-md-8">
                                        <select id="slNextStep" class="form-control select2"></select>
                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="form-actions text-center">
                        <button type="button" id="btnOK" class="btn blue mt-ladda-btn ladda-button NeedRounding" data-style="zoom-in">
                            <i class="fa fa-save"></i> OK
                        </button>
                        <button type="button" data-dismiss="modal" id="btnCancel" class="btn blue-oleo">
                            <i class="fa fa-chevron-left"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="@Url.ContentVersion("~/Content/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js")" type="text/javascript"></script>
<script src="@Url.ContentVersion("~/scripts/RevenueAssurance/BAPSValidation.js")" type="text/javascript"></script>

