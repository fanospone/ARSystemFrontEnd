
@{
    ViewBag.Title = "Receive Document BAUK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section id="pnlSummary">
        <div class="row filter">
            <div class="col-md-12">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption font-white">
                            <i class="fa fa-filter"></i>
                            <span class="caption-subject">Filter</span>
                        </div>
                        <div class="tools">
                            <a href="" class="collapse"> </a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <form id="formSearch" class="form-horizontal" role="form">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">BAUK Submit Date</label>
                                            <div class="col-md-8">
                                                <div class="col-md-4">
                                                    <input type="text" id="tbStartSubmitDate" class="form-control datepicker" placeholder="Start" />
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="text" id="tbEndSubmitDate" class="form-control datepicker" placeholder="End" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Customer</label>
                                            <div class="col-md-8">
                                                <select id="slSearchCustomerID" class="form-control select2"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Company</label>
                                            <div class="col-md-8">
                                                <select id="slSearchCompanyID" class="form-control select2"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Status Doc</label>
                                            <div class="col-md-8">
                                                <select id="slSearchStatus" class="form-control select2">
                                                    <option value="Not Yet">Not Yet</option>
                                                    <option value="Complete">Complete</option>
                                                    <option value="Not Complete">Not Complete</option>
                                                    <option value="Check Next">Check Next</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Product Type</label>
                                            <div class="col-md-8">
                                                <select id="slSearchProductID" class="form-control select2"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Category STIP</label>
                                            <div class="col-md-8">
                                                <select id="slStipCategory" class="form-control select2"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions text-center">
                                <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                    <i class="fa fa-search"></i> Search
                                </button>
                                <button type="button" id="btReset" class="btn blue-oleo">
                                    <i class="fa fa-refresh"></i> Reset
                                </button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row panelSearchResult ">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-blue-steel">
                            <i class="fa fa-table"></i>
                            <span class="caption-subject">Search Result</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabRaw">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tbSummary">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-25"></th>
                                            <th colspan="2" class="datatable-col-200 uncheck-all"></th>
                                            <th class="datatable-col-100 select-all"></th>
                                            <th class="datatable-col-150"></th>
                                            <th class="datatable-col-200"></th>
                                            <th class="datatable-col-100"></th>
                                            <th class="datatable-col-150"></th>
                                            <th class="datatable-col-150"></th>
                                            <th class="datatable-col-125">
                                                <div class="input-group input-group-sm">
                                                    <input id="sSONumber" class="form-control" />
                                                    <span class="input-group-btn">
                                                        <button class="btn blue btn-small btSearchHeader" type="button">
                                                            <i class="fa fa-search"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            </th>
                                            <th class="datatable-col-125">
                                                <div class="input-group input-group-sm">
                                                    <input id="sSiteID" class="form-control" />
                                                    <span class="input-group-btn">
                                                        <button class="btn blue btn-small btSearchHeader" type="button">
                                                            <i class="fa fa-search"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            </th>
                                            <th class="datatable-col-150">
                                                <div class="input-group input-group-sm">
                                                    <input id="sSiteName" class="form-control" />
                                                    <span class="input-group-btn">
                                                        <button class="btn blue btn-small btSearchHeader" type="button">
                                                            <i class="fa fa-search"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            </th>
                                            <th class="datatable-col-150"></th>
                                            <th class="datatable-col-150"></th>
                                        </tr>
                                        <tr>
                                            <th class="text-center">#Row</th>
                                            <th class="text-center">Complete</th>
                                            <th class="text-center">Not Complete</th>
                                            <th class="text-center">Check Next</th>
                                            <th class="text-center">Dept. Submit BAUK</th>
                                            <th class="text-center">BAUK Submit By System</th>
                                            <th class="text-center">Customer ID</th>
                                            <th class="text-center">Customer</th>
                                            <th class="text-center">Product Type</th>
                                            <th class="text-center">SONumber</th>
                                            <th class="text-center">SiteID</th>
                                            <th class="text-center">SiteName</th>
                                            <th class="text-center">Status Doc</th>
                                            <th class="text-center">Histroy</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row col-md-12 text-center">
                    <button type="button" id="btSave" class="btn green">
                        <i class="fa fa-check"></i> Save
                    </button>
                    <button type="button" id="btCancel" class="btn red">
                        <i class="fa fa-times"></i> Cancel
                    </button>
                </div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="mdlDetailCheckList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
        <div class="modal-dialog modal-lg" style="width:1200px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Summary</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h4><b>Dept</b>: Proj Closing</h4>
                        </div>
                        <div class="col-md-2">
                            <h4><b>TOTAL</b> : <label id="lblTotalCheckList"></label> </h4>
                        </div>
                        <div class="col-md-2">
                            <h4><b style="color:green">Complete</b> : <label id="lblCompleteCheckList"></label> </h4>
                        </div>
                        <div class="col-md-2">
                            <h4><b style="color:red">Not Complete</b> : <label id="lblNotCompleteCheckList"></label> </h4>
                        </div>
                        <div class="col-md-2">
                            <h4><b style="color:blue">Check Next</b>: <label id="lblNextCheckList"></label> </h4>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tbProcessDetail">
                        <thead>
                            <tr>
                                <th class="datatable-col-25 text-center">No</th>
                                <th class="datatable-col-100">Action Confirmation</th>
                                <th class="datatable-col-200">Remark Not Complete</th>
                                <th class="datatable-col-200">BAUK Submit By System</th>
                                <th class="datatable-col-100">SONumber</th>
                                <th class="datatable-col-100">SiteID</th>
                                <th class="datatable-col-100">SiteName</th>
                                <th class="datatable-col-100">Operator</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="portlet-body form">
                        <form class="form-horizontal" role="form">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">PIC Serah Terima</label>
                                            <div class="col-md-8">
                                                <select id="slPICReceiveDocument" class="form-control select2"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Tanggal Serah Terima</label>
                                            <div class="col-md-4">
                                                <input type="text" id="tbGetDate" class="form-control datepicker disabled" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" id="btYesSubmit" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                    <i class="fa fa-search"></i> Yes
                                </button>
                                <button type="button" id="btDismiss" class="btn blue-oleo">
                                    <i class="fa fa-refresh"></i> Cancel
                                </button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="mdlHistory" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
        <div class="modal-dialog modal-lg" style="width:1200px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">History</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tbHistory">
                        <thead>
                            <tr>
                                <th class="datatable-col-25">No</th>
                                <th class="datatable-col-100">SONumber</th>
                                <th class="datatable-col-150">Status Document</th>
                                <th class="datatable-col-200">Remark</th>
                                <th class="datatable-col-200">PIC Serah Terima</th>
                                <th class="datatable-col-100">Tanggal Serah Terima</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

<script src="@Url.Content("~/scripts/RevenueAssurance/ReceiveDocumentBAUK.js")" type="text/javascript"></script>
