@using ARSystemFrontEnd.Helper

@{
    ViewBag.Title = "SummaryRejection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    table td {
        font-size: 14px !important;
    }
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

<section id="pnlSummary">
    @*Filter*@
    <div class="row panelSearchFilter">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-9">
                                            <select id="slCompany" class="form-control select2">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer</label>
                                        <div class="col-md-9">
                                            <select id="slOperator" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Period RTI</label>
                                        <div class="col-md-9">
                                            <div class="col-md-5">
                                                <div class="input-group">
                                                    <input type="text" id="tbStartRTIPeriod" class="form-control datepicker" placeholder="Select Period">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-md-5">
                                                <div class="input-group">
                                                    <input type="text" id="tbEndRTIPeriod" class="form-control datepicker" placeholder="Select Period">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12" style="height:15px;"></div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mt-radio-inline">
                                        <label class="mt-radio">
                                            <input type="radio" id="rbSearchSonumb" name="rbView" value="1" checked> View By Sonumb
                                            <span></span>
                                        </label>
                                        <label class="mt-radio">
                                            <input type="radio" id="rbSearchBAPS" name="rbView" value="2"> View By BAPS
                                            <span></span>
                                        </label>
                                        <label class="mt-radio">
                                            <input type="radio" id="rbSearchInvoice" name="rbView" value="3"> View By Invoice
                                            <span></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_PanelSearchBegin")
    @Html.Partial("_PanelSearchZero")

    @*Search Result*@
    <div class="row panelSearchResult summary">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover font-xs" id="tblSummary" style="width:100%">
                        <thead>
                            <tr class="bg-primary">
                                <th class="text-center" rowspan="2" style="min-width:250px; vertical-align:middle !important;">DEPT</th>
                                <th class="text-center" colspan="3">Reject By Finance</th>
                                <th class="text-center" colspan="3">Reject By Operator</th>
                            </tr>
                            <tr class="bg-primary">
                                <th class="text-center" id="countFinCol"></th>
                                <th class="text-center" id="amountFinCol"></th>
                                <th class="text-center" id="repFinCol"></th>
                                <th class="text-center" id="countOprCol"></th>
                                <th class="text-center" id="amountOprCol"></th>
                                <th class="text-center" id="repOprCol"></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <td>TOTAL</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="detail">
        <div class="row panelSearchResult detail">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-blue-steel">
                            <i class="fa fa-table"></i>
                            <span class="caption-subject">Search Result</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover font-xs datatable-custom-width" id="tblDetailBySonumb" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="datatable-col-150">SONumber</th>
                                    <th class="datatable-col-150">SiteID</th>
                                    <th class="datatable-col-200">SiteName</th>
                                    <th class="datatable-col-150">Customer SiteID</th>
                                    <th class="datatable-col-150">Customer SiteName</th>
                                    <th class="datatable-col-150">Customer ID</th>
                                    <th class="datatable-col-150">Company Invoice ID</th>
                                    <th class="datatable-col-150">Region Name</th>
                                    <th class="datatable-col-150">Baps No</th>
                                    <th class="datatable-col-150">Baps Type</th>
                                    <th class="datatable-col-150">Invoice Number</th>
                                    <th class="datatable-col-150">Start Invoice Date</th>
                                    <th class="datatable-col-150">End Invoice Date</th>
                                    <th class="datatable-col-150 text-center">Amount Invoice</th>
                                    <th class="datatable-col-150 text-center">Currency</th>
                                    <th class="datatable-col-250" style="text-align:center;">Department Type</th>
                                    <th class="datatable-col-100">Reject Year</th>
                                    <th class="datatable-col-100">Reject Month</th>
                                    <th class="datatable-col-150">Reject Date</th>
                                    <th class="datatable-col-150">RTI Date</th>
                                    <th class="datatable-col-150">Baps Confirm</th>
                                    <th class="datatable-col-100">PICA Type</th>
                                    <th class="datatable-col-100">PICA Major</th>
                                    <th class="datatable-col-200" style="text-align:center;">PICA Detail</th>
                                    <th class="datatable-col-200">Remark</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="tblDetailButtons">
            <div class="col-md-12 text-right">
                <div class="form-group">
                    <button type="button" id="btBack" class="btn blue-oleo">
                        <i class="fa fa-chevron-left"></i> Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="@Url.ContentVersion("~/scripts/RevenueAssurance/SummaryRejection.js")" type="text/javascript"></script>    



