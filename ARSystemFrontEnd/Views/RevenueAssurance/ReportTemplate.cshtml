
@{
    ViewBag.Title = "ReportTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .height59 {
        height: 59px;
    }
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

<section id="pnlSummary">
    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <button type="button" id="btAdd" class="btn blue mt-ladda-btn ladda-button">
                            <i class="fa fa-plus"></i> Add New Template
                        </button>
                    </div>
                    <br />
                    <div class="tabbable tabbable-tabdrop" id="tabPO">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tabRaw" data-toggle="tab"><b>List Template</b></a>

                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabRaw">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblRaw">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-10 "></th>
                                            <th class="datatable-col-500">CustomerID</th>
                                            <th class="datatable-col-300">STIP Category</th>
                                            <th class="datatable-col-200">Product Type</th>
                                            <th class="datatable-col-100">Print Type</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row panelDetailPO">
        <div class="col-md-12">
            <div class="row">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption font-white">
                            <i class="fa fa-filter"></i>
                            <span class="caption-subject">Header Data</span>
                        </div>
                        <div class="tools">
                            <a href="" class="collapse"> </a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <form action="" id="formDetailData" enctype="multipart/form-data" role="form" class="form-horizontal">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Customer ID</label>
                                            <div class="col-md-8">
                                                <select id="CustomerID" class="form-control select2">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Stip Category</label>
                                            <div class="col-md-8">
                                                <select id="StipCategory" class="form-control select2">
                                                    <option value="ALL">ALL</option>
                                                    <option value="STIP 1">STIP 1</option>
                                                    <option value="STIP 2">STIP 2</option>
                                                    <option value="STIP 3">STIP 3</option>
                                                    <option value="STIP 4">STIP 4</option>
                                                    <option value="STIP 5">STIP 5</option>
                                                    <option value="STIP 6">STIP 6</option>
                                                    <option value="STIP 7">STIP 7</option>
                                                    <option value="STIP 8">STIP 8</option>
                                                    <option value="STIP 9">STIP 9</option>
                                                    <option value="STIP 10">STIP 10</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Print Type</label>
                                            <div class="col-md-8">
                                                <select id="PrintType"  class="form-control">
                                                    <option value="header">Header</option>
                                                    <option value="detail">Detail</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Product Type</label>
                                            <div class="col-md-8">
                                                <select id="ProductType" class="form-control select2"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Logo Left</label>
                                            <div class="col-md-8">
                                                <input type="file" id="LogoLeft" class="form-control" onchange="Form.ShowImage(this, 'CurrentLogoLeft');">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label"></label>
                                            <div class="col-md-4">
                                                <div class="portlet light bordered">
                                                    <img id="CurrentLogoLeft" src="" class="col-md-offset-2" width="70%" height="70%" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Logo Right</label>
                                            <div class="col-md-8">
                                                <input type="file" id="LogoRight" class="form-control" onchange="Form.ShowImage(this, 'CurrentLogoRight');">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label"></label>
                                            <div class="col-md-4">
                                                <div class="portlet light bordered">
                                                    <img id="CurrentLogoRight" src="" class="col-md-offset-2" width="70%" height="70%" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Page Orientation</label>
                                                <div class="col-md-8">
                                                    <select id="IsPotrait" class="form-control">
                                                        <option value="1" selected>Potrait</option>
                                                        <option value="0">Landscape</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Margin Top</label>
                                                <div class="col-md-8">
                                                    <input type="text" class="form-control" id="MarginTop" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Margin Bottom</label>
                                                <div class="col-md-8">
                                                    <input type="text" class="form-control" id="MarginBottom" />
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Use Barcode</label>
                                                <div class="col-md-8">
                                                    <select id="UseQR" class="form-control">
                                                        <option value="1" selected>Yes</option>
                                                        <option value="0">No</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Margin Left</label>
                                                <div class="col-md-8">
                                                    <input type="text" class="form-control" id="MarginLeft" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Margin Right</label>
                                                <div class="col-md-8">
                                                    <input type="text" class="form-control" id="MarginRight" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <br />
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <textarea class="textarea-editor"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="text-center">
                    <button type="button" id="btBackToList" class="btn grey">
                        <i class="fa fa-reply"></i> Cancel
                    </button>
                    <button type="button" id="btSearchData" class="btn green mt-ladda-btn ladda-button" data-style="zoom-in">
                        <i class="fa fa-search"></i> View PDF
                    </button>
                    <button type="button" id="btViewHtml" class="btn green mt-ladda-btn ladda-button" data-style="zoom-in">
                        <i class="fa fa-search"></i> View HTML
                    </button>
                    <button type="submit" id="btSaveData" class="btn blue mt-ladda-btn ladda-button">
                        <i class="fa fa-save"></i> Save
                    </button>
                </div>
            </div>
            <br />
            <div class="">
            </div>

        </div>
    </div>

</section>

<div id="mdlView" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width: 60%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Report Viewer</h4>
            </div>
            <div class="modal-body " style="margin-left:20px;margin-right:20px;">
                <div class="row">
                    <img id="ViewLogoLeft" src="" class="pull-left" style="margin-bottom:20px;margin-top:20px;" />
                    <img id="ViewLogoRight" src="" class="pull-right" style="margin-bottom:20px;margin-top:20px;" />
                </div>
                <div class="row ReportView">

                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/scripts/RevenueAssurance/ReportTemplate.js")" type="text/javascript"></script>
