@using ARSystemFrontEnd.Helper;
@{
    ViewBag.Title = "Checking Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .height59 {
        height: 59px;
    }
    /* Start of CSS for fixing layouts in JQuery Datatables with Freeze Columns */

    .panelSearchResult .table-scrollable {
        border: none !important;
    }

    .border {
        display: inline-block;
        width: 400px;
        height: 125px;
        margin: 6px;
    }

    /* End of CSS for fixing layouts in JQuery Datatables with Freeze Columns */
</style>

<section id="pnlSummary">
    @*Filter*@

    @*@Html.Partial("_PartialFilter")*@
    <div class="row filter">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Customer</label>
                                        <div class="col-md-8">
                                            <select id="slSearchCustomerID" class="form-control select2"></select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Site ID Company</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control select2" id="slSearchSiteID" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">SO Number</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control select2" id="slSearchSoNumber" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-8">
                                            <select id="slSearchCompanyID" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Product Type</label>
                                        <div class="col-md-8">
                                            <select id="slSearchProductID" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-8">
                                            <select id="slSearchStatus" class="form-control select2">
                                                <option value="13">Ready To Process</option>
                                                <option value="14">Approved</option>
                                                <option value="0">Rejected</option>
                                            </select>
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                            <label class="col-md-3 control-label">Regional</label>
                                            <div class="col-md-8">
                                                <select id="slSearchRegionalID" class="form-control select2"></select>
                                            </div>
                                        </div>*@
                                    @*<div class="form-group">
                                            <label class="col-md-3 control-label">Group By</label>
                                            <div class="col-md-8">
                                                <select id="slGroupBy" class="form-control select2"></select>
                                            </div>
                                        </div>*@
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <input type="hidden" id="DefaultFilter" value="@ViewBag.TaskTodo" />
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @*Search Result*@
    <div class="row panelSearchResult ">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabRaw">
                            <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblCheckingDocumentList">
                                <thead>
                                    <tr>
                                        <th class="datatable-col-50">Action</th>
                                        <th class="datatable-col-150">SO Number</th>
                                        <th class="datatable-col-100">Customer</th>
                                        <th class="datatable-col-150">Site ID</th>
                                        <th class="datatable-col-200">Site Name </th>
                                        <th class="datatable-col-150">Site ID Cust</th>
                                        <th class="datatable-col-200">Site Name Cust</th>
                                        <th class="datatable-col-200">Company</th>
                                        <th class="datatable-col-50">Siro</th>
                                        <th class="datatable-col-200">STIP Number</th>
                                        <th class="datatable-col-200">STIP Category</th>
                                        <th class="datatable-col-150">Product</th>
                                        <th class="datatable-col-200">MLA Number</th>
                                        <th class="datatable-col-100">MLA Date</th>
                                        <th class="datatable-col-100">Bauk Number</th>
                                        <th class="datatable-col-100">Bauk Date</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*Transaction Checking Document *@
    <div class="row HeaderData">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Site Information</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">SO Number :</label>
                                        <label id="lblSONumber" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Customer :</label>
                                        <label id="lblCustomer" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Company :</label>
                                        <label id="lblCompany" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Site ID :</label>
                                        <label id="lblSiteID" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Customer Site ID :</label>
                                        <label id="lblCustomerSiteID" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">SIRO :</label>
                                        <label id="lblSIRO" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">STIP Number :</label>
                                        <label id="lblSTIPNumber" class="control-label bold"></label>
                                    </div>
                                </div>
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Site Name :</label>
                                        <label id="lblSiteName" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Customer Site Name :</label>
                                        <label id="lblCustomerSiteName" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Product :</label>
                                        <label id="lblProduct" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Bauk Date :</label>
                                        <label id="lblBaukDate" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Bauk Number :</label>
                                        <label id="lblBaukNumber" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">MLA Date :</label>
                                        <label id="lblMLADate" class="control-label bold"></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">MLA Number :</label>
                                        <label id="lblMLANumber" class="control-label bold"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row panelTrxCheckDoc ">

        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Checking Document</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabRaw">
                            <input type="hidden" id="tbSoNumber" />
                            <input type="hidden" id="tbSiteID" />
                            <input type="hidden" id="tbCustomerID" />
                            <form id="formChecklist">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblTrxCheckingDocument">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-25" style="vertical-align: middle; text-align:center">#Row</th>
                                            <th class="datatable-col-100" style="vertical-align: middle; text-align:center">Download</th>
                                            <th class="datatable-col-100" style="vertical-align: middle; text-align:center">Document Name</th>
                                            <th class="datatable-col-100 " style="vertical-align: middle; text-align:center">
                                                Check<br />Project<br />
                                                <input type="checkbox" id="cbProject" disabled="disabled" />
                                            </th>
                                            @*<th class="datatable-col-100" style="vertical-align: middle; text-align:center">
                            Check<br />BAPS<br />
                            <input type="checkbox" id="cbBaps" />
                        </th>*@
                                            <th class="datatable-col-100" style="vertical-align: middle; text-align:center">
                                                Improper  <br />Content<br />

                                            </th>
                                            <th class="datatable-col-100" style="vertical-align: middle; text-align:center">
                                                Uncompleted   <br />Doc<br />

                                            </th>
                                            <th class="datatable-col-100" style="vertical-align: middle; text-align:center">
                                                Wrong    <br />Upload<br />

                                            </th>
                                            <th class="datatable-col-100" style="vertical-align: middle; text-align:center">
                                                Other <br />

                                            </th>
                                            <th class="datatable-col-300" style="vertical-align: middle; text-align:center">
                                                Remarks
                                            </th>
                                            <th class="datatable-col-200" style="vertical-align: middle; text-align:center">Description</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </form>
                            <br />

                            <div class="portlet light bordered col-md-6">
                                <div class="portlet-title">
                                    <div class="caption">
                                        Additional Document Support
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <table class="table table-striped table-hover" id="AddDocumentSupport">
                                        <thead>
                                            <tr>
                                                <th class="datatable-col-25">No#</th>
                                                <th class="datatable-col-300">Document Name</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-actions text-center">
                                <button type="submit" data-dismiss="modal" id="btnSave" class="btn blue NeedRounding">
                                    <i class="fa fa-save"></i> Save
                                </button>
                                <button type="button" data-dismiss="modal" id="btnCancel" class="btn blue-oleo">
                                    <i class="fa fa-chevron-left"></i> Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


@*Modal Save*@

<div class="modal fade" id="mdlTrxCheckingDocSave" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Confirm</h4>
            </div>
            <div class="portlet-body form">
                <form id="formTrxCheckDoc" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h3>Status Review BAUK By System</h3>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Action</label>
                                    <div class="col-md-10">
                                        <select id="slNextStep" class="form-control select2"></select>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Remark</label>
                                    <div class="col-md-10">
                                        <textarea class="form-control select2" rows="10" cols="30" id="tbRemark"></textarea>

                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="row pnlReviewHardcopy">
                            <div class="col-md-12">
                                <h3>Status Review BAUK Hardcopy</h3>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Tanggal Serah Terima :</label>
                                    <div class="col-md-8">
                                        <label id="lblReceiveDate"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">PIC Serah Terima :</label>
                                    <div class="col-md-8">
                                        <label id="lblPICReceive"></label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <h4><b>Action</b></h4>
                                </div>
                                <div class="col-md-3">
                                    <h5><b style="color:green">Complete <input type="radio" id="rbComplete" name="rbAction" value="Complete"> </b></h5>
                                </div>
                                <div class="col-md-4">
                                    <h5><b style="color:red">Not Complete <input type="radio" id="rbNotComplete" name="rbAction" value="Not Complete"></b></h5>
                                </div>
                                <div class="col-md-3">
                                    <h5><b style="color:blue">Check Next <input type="radio" id="rbCheckNext" name="rbAction" value="Check Next"></b></h5>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Remark :</label>
                                    <div class="col-md-8">
                                        <textarea class="form-control select2" rows="4" cols="15" id="tbRemarks"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions text-center">
                        <button type="button" data-dismiss="modal" id="btnTrxSave" class="btn blue NeedRounding">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <button type="button" data-dismiss="modal" id="btnTrxCancel" class="btn blue-oleo">
                            <i class="fa fa-chevron-left"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

