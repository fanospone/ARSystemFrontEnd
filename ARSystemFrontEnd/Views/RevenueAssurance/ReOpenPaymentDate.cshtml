@using ARSystemFrontEnd.Helper;
@{
    ViewBag.Title = "Change Payment Date";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pnlSummary">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="fa fa-filter"></i>
                        <span class="caption-subject">Filter</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form id="formSearch" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label lbPaidDate">Paid Date</label>
                                        <div class="col-md-3">
                                            <input type="text" class="form-control datepicker" id="tbsPaidDateStart" placeholder="Paid Date" name="tbsPaidDateStart" />
                                        </div>
                                        <div class="col-md-3">
                                            <input type="text" class="form-control datepicker" id="tbsPaidDateEnd" placeholder="Paid Date" name="tbsPaidDateEnd"/>
                                        </div>
                                    </div>
                                    <div class="form-group summaryForm">
                                        <label class="col-md-3 control-label">Created Date</label>
                                        <div class="col-md-3">
                                            <input type="text" class="form-control datepicker" id="tbsCreatedDateStart" placeholder="Created Date" />
                                        </div>
                                        <div class="col-md-3">
                                            <input type="text" class="form-control datepicker" id="tbsCreatedDateEnd" placeholder="Created Date" />
                                        </div>
                                    </div>
                                    <div class="form-group requestForm">
                                        <label class="col-md-3 control-label">Company</label>
                                        <div class="col-md-6">
                                            <select id="slsCompanyID" class="form-control select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group requestForm">
                                        <label class="col-md-3 control-label">Customer</label>
                                        <div class="col-md-6">
                                            <select id="slsCustomerID" class="form-control select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group requestForm">
                                        <label class="col-md-3 control-label">Invoice No</label>
                                        <div class="col-md-6">
                                            <input class="form-control" id="tbsInvNo" type="text" placeholder="Invoice No" />
                                        </div>
                                    </div>
                                    <div class="form-group summaryForm">
                                        <label class="col-md-3 control-label">Request Number</label>
                                        <div class="col-md-6">
                                            <input class="form-control" id="tbsRequestNumber" type="text" placeholder="Request Number" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <button type="button" id="btSearch" class="btn blue mt-ladda-btn ladda-button" data-style="zoom-in">
                                <i class="fa fa-search"></i> Search
                            </button>
                            <button type="button" id="btReset" class="btn blue-oleo">
                                <i class="fa fa-refresh"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Search Result</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tabbable tabbable-tabdrop" id="tabReOpenPaymentDate">
                        <ul class="nav nav-tabs">
                            <li class="active" id="tabReq">
                                <a href="#tabRequst" data-toggle="tab"><b>Request</b></a>
                            </li>
                            <li id="tabSumm">
                                <a href="#tabSummary" data-toggle="tab">Summary</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabRequst">
                                <table id="tblRequest" name="tabRequst" class="table table-striped table-bordered table-hover datatable-custom-width">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-25 select-all-raw">&nbsp;&nbsp;&nbsp;<label id="cbALLData" class='mt-checkbox mt-checkbox-single mt-checkbox-outline'><input id='cbAll' type='checkbox' disable /><span></span></label></th>
                                            <th class="datatable-col-25">Number</th>
                                            <th class="datatable-col-100">Invoice No</th>
                                            <th class="datatable-col-100">Invoice Temp No</th>
                                            <th class="datatable-col-100">Company</th>
                                            <th class="datatable-col-100">Customer</th>
                                            <th class="datatable-col-100">Paid Date</th>
                                            <th class="datatable-col-100">Paid Amount</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                                <div class="row btnAction">
                                    <div class="col-md-12">
                                        <button type="button" id="btAddData" class="btn green NeedRounding">
                                            <i class="fa fa-check"></i> Add
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tabSummary">
                                <div id="SummaryHeader">
                                    <table id="tblSummary" name="tabSummary" class="table table-striped table-bordered table-hover datatable-custom-width">
                                        <thead>
                                            <tr>
                                                <th class="datatable-col-25 select-all-raw"></th>
                                                <th class="datatable-col-25">Number</th>
                                                <th class="datatable-col-100">Request Number</th>
                                                <th class="datatable-col-100">Approval Status</th>
                                                <th class="datatable-col-100">PaymentDate Revisi</th>
                                                <th class="datatable-col-100">Created Date</th>
                                                <th class="datatable-col-200">Remarks</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                                <div id="SummaryDetail">
                                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblSummaryDetail">
                                        <thead>
                                            <tr>
                                                <th class="datatable-col-25">Number</th>
                                                <th class="datatable-col-150">Invoice Number</th>
                                                <th class="datatable-col-100">Payment Date</th>
                                                <th class="datatable-col-100">Payment Date Revisi</th>
                                            </tr>
                                        </thead>
                                    </table>
                                    <div class="row">
                                        <div class="portlet-body form">
                                            <form id="formSummarySubmit" class="form-horizontal" role="form">
                                                <div class="form-body">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group summarySubmit">
                                                                <label class="col-md-6 control-label">Action</label>
                                                                <div class="col-md-6">
                                                                    <select id="slStatuApproval" class="form-control select2" required></select>
                                                                    <input type="hidden" id="hdTrxHeaderID" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-actions text-center">
                                                    <button type="submit" id="btSubmitSummary" class="btn green mt-ladda-btn ladda-button summarySubmit" data-style="zoom-in">
                                                        <i class="fa fa-save"></i> Submit
                                                    </button>
                                                    <button type="button" id="btSummaryClose" class="btn blue-oleo">
                                                        <i class="fa fa-close"></i> Close
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row RequestDetail">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-steel">
                        <i class="fa fa-table"></i>
                        <span class="caption-subject">Request Details</span>
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabRequestDetail">
                                <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblRequestDetail">
                                    <thead>
                                        <tr>
                                            <th class="datatable-col-25">Action</th>
                                            <th class="datatable-col-150">Invoice Number</th>
                                            <th class="datatable-col-100">Payment Date</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="portlet-body form">
                            <form id="formSubmitRequest" class="form-horizontal" role="form">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-md-6 control-label">Paid Date Rev</label>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control datepicker" id="tbPaidDateRev"  required placeholder="Paid Date Revision" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-6 control-label">Remarks</label>
                                                <div class="col-md-6">
                                                    <textarea id="tbRemarks" class="form-control" rows="5" cols="10" required placeholder="Remarks"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions text-center">
                                    <button type="submit" id="btSubmitRequest" class="btn green mt-ladda-btn ladda-button" data-style="zoom-in">
                                        <i class="fa fa-save"></i> Submit
                                    </button>
                                    <button type="button" id="btResetRequest" class="btn blue-oleo">
                                        <i class="fa fa-refresh"></i> Reset
                                    </button>
                                    <button type="button" id="btRequestCancel" class="btn blue-oleo">
                                        <i class="fa fa-backward"></i> Cancel
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<input type="hidden" id="hdSummaryEdit" value="@ViewBag.SummaryEdit" />
<input type="hidden" id="hdRequest" value="@ViewBag.Request" />
<input type="hidden" id="hdUserCompanyCode" value="@ViewBag.UserCompanyCode" />
<script src="@Url.ContentVersion("~/scripts/RevenueAssurance/ReOpenPaymentDate.js")" type="text/javascript"></script>